  if("<%= (@invoice_setting.tax_enabled_ipd || params[:action] == 'edit') && (@invoice.tax_enabled || params[:action] == 'new') %>" == 'true'){
    function calculate_tax(_this){
      var this_parent = $(_this).closest('.invoice_service_item_row')
      var quantity = parseFloat($(this_parent).find('.i_quantity').val())
      var amount = parseFloat($(this_parent).find('.i_unit_price').val()) * quantity
      var tax_rate = parseFloat($(this_parent).find(".i_tax_group").find(":selected").attr('data-tax-rate'))
      var inclusive = $(this_parent).find('.i_tax_inclusive').is(':checked')
      var tax_group_id = $(this_parent).find(".i_tax_group").val()

      if(inclusive){
        var taxable_amount = (amount * tax_rate)/(100 + tax_rate)
        var non_taxable_amount = amount - taxable_amount
        var total_amount = amount
      } else {
        var taxable_amount = (amount * tax_rate)/100
        var non_taxable_amount = amount
        var total_amount = amount + taxable_amount
      }
      $(this_parent).find('.i_taxable_amount').val(taxable_amount.toFixed(2))
      $(this_parent).find('.i_non_taxable_amount').val(non_taxable_amount.toFixed(2))
      $(this_parent).find('.i_price').val(total_amount.toFixed(2))
      $(this_parent).find('.i_tax_group').attr('data-amount', amount)
      $(this_parent).find('.i_price').trigger('change')
      var get_service_count = $(this_parent).find('.i_taxable_amount').attr('name').replace(/[^0-9\.]/g, '')[0]
      var get_item_count = $(this_parent).find('.i_taxable_amount').attr('name').replace(/[^0-9\.]/g, '')[1]

      $.ajax({
        type: 'GET',
        dataType: 'JSON',
        data: { tax_group_id: tax_group_id, taxable_amount: taxable_amount},
        url: '/invoice/invoices/tax_breakup',
        success: function(response){
          $(this_parent).find('.tax_fields').html("")
          $.each(response.tax, function(key, value) {
            $(this_parent).find('.tax_fields').append('<div class="tax_box"><input type="hidden" name="invoice_ipd[services][' + get_service_count + '][items][' + get_item_count + '][tax_group][][amount]" value="' + parseFloat(value[2]).toFixed(2) + '" class="i_tax_group_amount"><input type="hidden" name="invoice_ipd[services][' + get_service_count + '][items][' + get_item_count + '][tax_group][][name]" value="' + value[1] + '" class="i_tax_group_name"><input type="hidden" name="invoice_ipd[services][' + get_service_count + '][items][' + get_item_count + '][tax_group][][_id]" value="' + value[0] + '" class="i_tax_group_id"></div>')
          });

          $("#invoice_gross_total").trigger('change')
        }
      })
    }

    $("#invoice_gross_total").on('change', function(){
      $("#tax-cage").html("")
      var tax_field = $('.tax_fields')
      var counter = 0
      for (var j = tax_field.length - 1; j >= 0; j--) {

        var tax_box = $(tax_field[j]).find('.tax_box')
        for (var i = tax_box.length - 1; i >= 0; i--) {
          var tax_group_id2 = $(tax_box[i]).find('.i_tax_group_id').val()
          var tax_group_id = $("#tax-cage").find('.tax_group_' + tax_group_id2)
          var tax_group_name = $(tax_box[i]).find('.i_tax_group_name').val()
          var tax_group_amount = $(tax_box[i]).find('.i_tax_group_amount').val()
          if(tax_group_id.length <= 0){
            $("#tax-cage").prepend('<div class="row mb5 tax_group_' + tax_group_id2 + '"><div class="col-md-5 text-right"><b>' + tax_group_name + ' :</b></div><div class="col-md-3 text-right"><input style="padding:5px 10px 0;border: none;border-bottom: 1px solid #aaa;" class="form-control text-right tax_group_id_' + tax_group_id2 + '" value="' + tax_group_id2 + '" type="hidden" name="invoice_ipd[tax_breakup][][_id]" readonly="readonly"><input style="padding:5px 10px 0;border: none;border-bottom: 1px solid #aaa;" class="form-control text-right tax_group_id_' + tax_group_id2 + '" value="' + tax_group_name + '" type="hidden" name="invoice_ipd[tax_breakup][][name]" readonly="readonly"><input style="padding:5px 10px 0;border: none;border-bottom: 1px solid #aaa;" class="form-control text-right tax_group_amount_' + tax_group_id2 + '" value="' + parseFloat(tax_group_amount).toFixed(2) + '" type="text" name="invoice_ipd[tax_breakup][][amount]" readonly="readonly"></div></div>')
          } else {
            var old_value = $(tax_group_id).find('.tax_group_amount_' + tax_group_id2).val()
            var new_value = (parseFloat(tax_group_amount) + parseFloat(old_value)).toFixed(2)
            $(tax_group_id).find('.tax_group_amount_' + tax_group_id2).val(new_value)
          }
          if(counter == 0){
            $("#tax-cage").attr('style', 'background: #eee;padding: 10px;margin-bottom: 10px;')
          }
          counter = counter + 1
        }
      }

      non_taxable_amount()
    })

    function non_taxable_amount(){
      var non_taxable_amount = 0.0
      var x = $(".i_non_taxable_amount")
      for (var i = x.length - 1; i >= 0; i--) {
        non_taxable_amount = (parseFloat(non_taxable_amount) + parseFloat($(x[i]).val())).toFixed(2)
