<% if false %>
  <% if beds_hash.size > 0 %>
      <table class="table table-striped table-bordered bed-management-table" id="bed-management-table">
        <thead>
        <tr>
          <th width="30%" style="padding-top:0px;padding-bottom:0px;" class="required"><label> Name</label></th>
          <th width="10%" style="padding-top:0px;padding-bottom:0px;" class="required"><label> Code</label></th>
          <th width="13%" style="padding-top:0px;padding-bottom:0px;" class="required"><label> # of Beds</label></th>
          <th width="12%" style="padding-top:0px;padding-bottom:0px;"><label> Price</label></th>
          <th width="10%" style="padding-top:0px;padding-bottom:0px;"></th>
        </tr>
        </thead>
        <tbody class="bed-management-table-body-added bed-management-table-body-added-<%= room_index %>" id="bed-management-table-body-added-<%= room_index %>">
  <% end %>
  <% beds_hash.each_with_index do |bed_key, bed_index| %>
      <tr class="add-bed-tr add-bed-tr-<%= room_index %>" id="add-bed-tr-<%= room_index %>-<%= bed_index %>">

        <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
          <div class="form-group">
            <div class="input-group mb15">
              <div class="ui-widget">
                <%= hidden_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][organisation_id]", @organisation_id.to_s, {:class => 'form-control ward_rooms_bed_organisation_id'} %>
                <%= hidden_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][facility_id]", bed_key[1].first.facility_id.to_s, {:class => 'form-control ward_rooms_bed_facility_id'} %>
                <%= hidden_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][_destroy]", 0, {:class => 'form-control ward_rooms_bed_destory'} %>
                <%= hidden_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][sequence]", bed_key[1].first.sequence.to_s, {:class => 'form-control ward_rooms_bed_sequence'} %>

                <%= hidden_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][ids]", "#{bed_key[1].map(&:id).map(&:to_s).join("###")}", {:class => 'form-control ward_rooms_bed_id id'} %>
                <%= text_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][name]", bed_key[1].first.name, {:maxlength => 30, :size => 30, :class => 'form-control bed_name'} %>

              </div>
                </div>
              </div>
        </td>

        <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
          <div class="form-group">
            <div class="input-group mb15">
              <div class="ui-widget">
                <%= text_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][code]", bed_key[1].first.code, {:maxlength => 5, :size => 10, :class => 'form-control bed_code', :readonly => "readonly"} %>
              </div>
                </div>
              </div>
        </td>

        <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
          <div class="form-group">
            <div class="input-group mb15">
              <div class="ui-widget">
                <%= number_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][no_of_beds]", bed_key[1].size, {:min => 1, :max => 20, :step => 1, :class => 'form-control no_of_beds'} %>
              </div>
                </div>
              </div>
        </td>

        <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
          <div class="form-group">
            <div class="input-group mb15">
              <div class="ui-widget">
                <%= text_field_tag "ward[rooms_attributes][#{room_index}][beds_attributes][#{bed_index}][price]", bed_key[1].first.price, {:maxlength => 8, :size => 10, :class => 'form-control bed_price'} %>
              </div>
            </div>
          </div>
        </td>

        <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
          <div class="form-group">
            <span class="btn btn-xs btn-brown btn-danger remove-bed-button-<%= room_index %>" id="remove-bed-button-<%= room_index %>-<%= bed_index %>" name="remove-bed-button" data-room_remove_bed="<%= bed_index %>"><i class="glyphicon glyphicon-remove"></i></span>
          </div>

        </td>
      </tr>
  <% end %>
      </tbody>
      </table>
  <% if beds_hash.size > 0 %>
      <div class="bed-management-table-body-removed bed-management-table-body-removed-<%= room_index %>" id="bed-management-table-body-removed-<%= room_index %>" style="display: none;">
      </div>
  <% end %>
<% end %>