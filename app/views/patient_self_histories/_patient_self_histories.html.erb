<style type="text/css">
  .paper_view {
    box-shadow: 0 0 6px #ccc;
    padding: 0 0.400000in 0 0.550000in;
    font-family: 'Open Sans';
    background-color: #fff;
  }
  .modal-content {
    width: 102%;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
    -moz-box-shadow: 7px 7px 0 rgba(0,0,0,0.4);
    -webkit-box-shadow: 7px 7px 0 rgba(0,0,0,0.4);
    box-shadow: 7px 7px 0 rgba(0,0,0,0.4);
    border: 0;
  }
  .nav-pills > li.active > a {
    font: bold 15px arial;
    padding: 10px;
    margin: 10px;
  }


  * {
    box-sizing: border-box;
  }

  /* Set a background color */
  body {
    background-color: #3cc1ff;
    font-family: Helvetica, sans-serif;
  }

  /* The actual timeline (the vertical ruler) */
  .timeline {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    background-color: #474e5d;
    font-family: roboto;
  }

  /* The actual timeline (the vertical ruler) */
  .timeline::after {
    content: '';
    position: absolute;
    width: 6px;
    background-color: #ffffff;
    top: 0;
    bottom: 0;
    left: 2.5%;
    margin-left: -1px;
  }

  /* Container around content */
  .container {
    padding: 10px 40px;
    position: relative;
    background-color: inherit;
    width: 94%;
  }

  /* The circles on the timeline */
  .container::after {
    content: '';
    position: absolute;
    width: 25px;
    height: 25px;
    right: -17px;
    background-color: #ffffff;
    border: 4px solid #3cc1ff;
    top: 15px;
    border-radius: 50%;
    z-index: 1;
  }

  /* Place the container to the left */
  /*.left {*/
  /*left: 0;*/
  /*}*/

  /* Place the container to the right */
  /*.right {*/
  /*left: 3%;*/
  /*}*/

  /* Add arrows to the left container (pointing right) */
  .left::before {
    content: " ";
    height: 0;
    position: absolute;
    top: 22px;
    width: 0;
    z-index: 1;
    right: 30px;
    border: medium solid white;
    border-width: 10px 0 10px 10px;
    border-color: transparent transparent transparent white;
  }

  /* Add arrows to the right container (pointing left) */
  .right::before {
    content: " ";
    height: 0;
    position: absolute;
    top: 22px;
    width: 0;
    z-index: 1;
    left: 30px;
    border: medium solid white;
    border-width: 10px 10px 10px 0;
    border-color: transparent white transparent transparent;
  }

  /* Fix the circle for containers on the right side */
  .right::after {
    left: -16px;
  }

  /* The actual content */
  .content {
    padding: 5px 30px;
    background-color: white;
    position: relative;
    border-radius: 6px;
  }

  /* Media queries - Responsive timeline on screens less than 600px wide */
  @media all and (max-width: 600px) {
    /* Place the timelime to the left */
    .timeline::after {
      left: 31px;
    }

    /* Full-width containers */
    .container {
      width: 100%;
      padding-left: 70px;
      padding-right: 25px;
    }

    /* Make sure that all arrows are pointing leftwards */
    .container::before {
      left: 60px;
      border: medium solid white;
      border-width: 10px 10px 10px 0;
      border-color: transparent white transparent transparent;
    }

    /* Make sure all circles are at the same spot */
    .left::after, .right::after {
      left: 15px;
    }

    /* Make all right containers behave like the left ones */
    .right {
      left: 0%;
    }
  }

</style>
<script type="text/javascript">
  $("#show_more_timeline").on('click',function(e){
    e.preventDefault();

    var timeline_data_count = parseInt($(this).attr('data-count'))+1

    $(this).attr("data-count",timeline_data_count)

    var past_encounter_date = $(".events-date:last > button").html()

    var filter = $(".filter-header").find('.active').find('.filter-tab').data("tab-id")

    $.ajax({
      type: "GET",
      dataType: "script",
      data: {
        timeline_data_count: timeline_data_count,
        past_encounter_date: past_encounter_date,
        patient_id: "<%=@patient.id%>",
        filter: filter
      },
      url: "/patient_summary_timelines/show_more_timeline"
    })
  })
</script>