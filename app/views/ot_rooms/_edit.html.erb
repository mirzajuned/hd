<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog ot-dialog modal-md" style="width:60%;">
  <div class="modal-content">
    <div class="modal-header">
      <button type= "button" class= "close" data-dismiss= "modal">&times;</button>
      <h4 class= "modal-title">Edit OT room</h4>
    </div>
    <%= simple_form_for @ot_room, remote: true, html: { id: "edit-ot-form", class: "ot-edit-form" } do |ot_fields| %>
      <% facility = current_facility %>
      <%= ot_fields.hidden_field :organisation_id, value: facility.organisation_id %>
      <div class="modal-body">
        <div class="ot-edit-form">
          <div class="row ot-form-row mb10">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-3">
                  <b style="color:#000;">Facility</b>
                </div>
                <div class="col-md-3">
                  <b style="color:#000;">OT Name</b>
                </div>
                <div class="col-md-3">
                  <b style="color:#000;">Speciality</b>
                </div>
                <div class="col-md-3">
                  <b style="color:#000;">Capacity</b>
                </div>
              </div>
              <div class="row ot-room-row">
                <div class="col-md-3">
                  <%= ot_fields.select :facility_id, options_for_select(@facilities, @ot_room.facility_id), {class: 'form-control p5_10 ot-facility_id'} %>
                </div>
                <div class="col-md-3">
                  <%= ot_fields.text_field :name, class: 'form-control p5_10' %>
                </div>
                <div class="col-md-3">
                  <%= ot_fields.select :specialty_id, options_for_select(@specialties, @ot_room.specialty_id), {class: 'form-control p5_10  edit_ot_specialty'} %>
                </div>
                <div class="col-md-3">
                  <%= ot_fields.number_field :capacity, min: "1", max: "100", class: 'form-control p5_10' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= ot_fields.submit "Update", class: "btn btn-success", data: { "disable-with": "Please Wait...", onclick: "editotformvalidate()" } %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>

