<!-- Discharge Details -->
<%= render partial: 'inpatient/ipd_records/common/discharge/views/discharge_details.html.erb', locals: {ipdrecord: ipdrecord, patient: @patient, admission: @admission,type: "summary" } %>
<!-- Discharge Details Ends -->

<!-- Clinical Details -->
<%= render partial: 'inpatient/ipd_records/'+ @department +'/discharge/views/advice_on_discharge.html.erb', locals: {ipdrecord: ipdrecord, patient: @patient, admission: @admission } %>
<!-- Clinical Details Ends -->


<% unless @procedure_notes.to_s == "" %>
  <% if (params[:action] != "print_summary") || ipdrecord.print_procedure %>
  <!-- Procedure Details -->
    <%= render partial: 'inpatient/ipd_records/common/discharge/views/procedure_details.html.erb', locals: {ipdrecord: ipdrecord, patient: @patient, admission: @admission, procedure_notes: @procedure_notes } %>
  <!-- Procedure Details Ends -->
  <% end %>
<% end %>