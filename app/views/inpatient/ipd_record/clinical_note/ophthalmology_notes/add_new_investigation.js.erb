var investigation_type = "<%= @investigation_type%>"

if (investigation_type == "ophthal") {
   $(".ophthal-investigations-added").append("<%= escape_javascript(render partial: "/inpatient/ipd_record/clinical_note/ophthalmology_notes/add_new_ophthal_investigation", locals: { i: @total_rows, source: 'inpatient_ipd_record'}) %>")

} else if (investigation_type == "radiology") {
  $(".radiology-investigations-added").append("<%= escape_javascript(render partial: "/inpatient/ipd_record/clinical_note/ophthalmology_notes/add_new_radiology_investigation", locals: { i: @total_rows, source: 'inpatient_ipd_record'}) %>")

} else if (investigation_type == "laboratory") {
  $(".laboratory-investigations-added").append("<%= escape_javascript(render partial: "/inpatient/ipd_record/clinical_note/ophthalmology_notes/add_new_laboratory_investigation", locals: { i: @total_rows, source: 'inpatient_ipd_record'}) %>")
}

_renumber_id_after_remove("tbody.ophthal-investigations-added", "div.ophthal-investigations-removed");
_renumber_id_after_remove("tbody.radiology-investigations-added", "div.radiology-investigations-removed");
_renumber_id_after_remove("tbody.laboratory-investigations-added", "div.laboratory-investigations-removed");