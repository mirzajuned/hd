<% if mail_job == true %>
  <% @patient = patient %>
  <% @admission = admission %>
  <% @ipdrecord = ipd_record %>
  <% @clinical_note = clinical_note %>
  <% @tpa = tpa %>
  <% @case_sheet = case_sheet %>
  <% @mail_job = mail_job %>
<% end %>
<% @current_facility = current_facility if @current_facility.blank? %>


<% @poi = PatientOtherIdentifier.find_by(patient_id: @patient.id) %>
<div class="master-row">
  <div class="row ">
    <div class="col-md-12">
      <%= render partial: 'inpatient/ipd_record/patient_info.html.erb', locals: { current_facility: current_facility } %>
    </div>
    <div class="col-md-12 text-center">
      <% if view == "Summary" %>
        <div class="pcs-entity-title"><span>Admission Summary</span></div>
      <% else %>
        <div class="pcs-entity-title"><span>Admission Note</span></div>
      <% end %>
    </div>
  </div>
  <% if view == "Summary" %>
    <%= render partial: 'inpatient/ipd_record/clinical_note/ophthalmology_notes/clinical_summary.html.erb' %>
  <% else %>
    <%= render partial: 'inpatient/ipd_record/clinical_note/ophthalmology_notes/clinical_note.html.erb'  %>
  <% end %>
</div>
