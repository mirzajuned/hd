function ipd_ot_validate(){
    $("#ipdrecord_form").validate({

        errorPlacement: function (error, element) {
            if ($("#error_procedure_performed").children().length == 0 ) {
                error.appendTo($("#error_procedure_performed"));
            }
        }

    })

}