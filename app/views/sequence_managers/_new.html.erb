<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog sequence-manager-modal-md" style="width:50%;">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Create <%=@sequence_manager.try(:module_name).try(:titleize)%> Sequence Manager</h4>
    </div>
    <%= simple_form_for @sequence_manager, method: "post", remote: true, html: { id: "manage_sequence_manager", class: "sequence-manager-new-form" } do |f| %>
      <%= f.hidden_field :id, value: @sequence_manager.id.to_s %>
      <%= render partial: 'form.html.erb', locals: { f: f } %>
      <div class="modal-footer">
        <div class="col-md-12">
          <div class="col-md-4">
            <div class="notify_area"></div>
          </div>
          <div class="col-md-8">
            <button type="button" class="btn btn-warning btn-preview">Preview</button>
            <button type='button' class="btn btn-success btn-submit" data-disable-with="Please Wait..." disabled="true">Create</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
