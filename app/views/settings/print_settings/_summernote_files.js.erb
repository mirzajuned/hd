$(document).ready(function() {
  $('#print_setting_customised_letter_head_false').on('click', function() {
    $('#customised_letter_head_alert_false').show()
    $("#customised_letter_head_alert_false").html("Are you sure you don't want to create letterhead?")
    jQuery('#customised_letter_head_alert_false').addClass("alert alert-warning")
    $('#customised_letter_head_alert_false').delay(5000).fadeOut();
});

  $("input[name='print_setting[customised_letter_head]']").on('change',function(){
    if($("[name='print_setting[customised_letter_head]']:checked").val()=='true'){
      $("#header_loc").show()
      $("#header-master").show()
      $("#logo_loc").show()
      $("[name='print_setting[header_logo_location]']").change()
    }
    else{
      $("#header_loc").hide()
      $("#header-master").hide()
      $("#logo_loc").hide()
      $("#left_header").hide()
      $("#right_header").hide()
    }
  }).change();

  
  $("[name='print_setting[header_logo_location]']").on('change',function(){
    if($("[name='print_setting[header_logo_location]']:checked").val()=='left'){
        $(".add-remove-class").removeClass("col-md-6")
        $("#organisation_logo").show()
        $("#left_header").hide()
        $("#right_header").show()
    } else if($("[name='print_setting[header_logo_location]']:checked").val()=='right'){
        $(".add-remove-class").removeClass("col-md-6")
        $("#organisation_logo").show()
        $("#left_header").show()
        $("#right_header").hide()
    } else if($("[name='print_setting[header_logo_location]']:checked").val()=='none'){
        $(".add-remove-class").addClass("col-md-6")
        $("#organisation_logo").hide()
        $("#left_header").show()
        $("#right_header").show()
    }
  })
  $("[name='print_setting[customised_footer]']").on('change',function(){
   if($("[name='print_setting[customised_footer]']:checked").val()=='true'){
       $("#footer-div").show()
   } else {
       $("#footer-div").hide()
   }
  })

