// From To Datepicker
datepicker_options = {
  maxDate: -1,
  dateFormat: "dd/mm/yy",
  changeMonth: true,
  changeYear: true
}

$("#user_education_qualification_educ_start").datepicker(datepicker_options)
$("#user_education_qualification_educ_end").datepicker(datepicker_options)

// Validation
function edit_education_information(){
  $("#edit_user_<%= @user.id.to_s %>").validate({
    rules: {
      "user[education_qualification][school]": {
        required: true,
      },
      "user[education_qualification][degree]": {
        required: true,
      },
      "user[education_qualification][field_of_study]": {
        required: true,
      },
      "user[education_qualification][educ_start]": {
        required: true,
      }
    },
    messages: {
      "user[education_qualification][school]": {
        required: "*Required."
      },
      "user[education_qualification][degree]": {
        required: "*Required."
      },
      "user[education_qualification][field_of_study]": {
        required: "*Required.",
      },
      "user[education_qualification][educ_start]": {
        required: "*Required.",
      }
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  })
}
edit_education_information()