// From To Datepicker
datepicker_options = {
  maxDate: -1,
  dateFormat: "dd/mm/yy",
  changeMonth: true,
  changeYear: true
}

$("#user_work_experience_joining_date").datepicker(datepicker_options)
$("#user_work_experience_leaving_date").datepicker(datepicker_options)

// Validation
function edit_work_experience(){
  $("#edit_user_<%= @user.id.to_s %>").validate({
    rules: {
      "user[work_experience][company_name]": {
        required: true,
      },
      "user[work_experience][job_title]": {
        required: true,
      },
      "user[work_experience][job_location]": {
        required: true,
      },
      "user[work_experience][joining_date]": {
        required: true,
      }
    },
    messages: {
      "user[work_experience][company_name]": {
        required: "*Required."
      },
      "user[work_experience][job_title]": {
        required: "*Required."
      },
      "user[work_experience][job_location]": {
        required: "*Required.",
      },
      "user[work_experience][joining_date]": {
        required: "*Required.",
      }
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  })
}
edit_work_experience()