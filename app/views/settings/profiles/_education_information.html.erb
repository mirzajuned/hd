<!-- In Use -->
<div class="row">
  <div class="col-md-6">
    <h4>EDUCATIONAL INFORMATION</h4>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to settings_profiles_edit_education_information_path(user_id: @user.id.to_s), :class => "btn btn-info navbar-btn add_education_info", data: {remote: true, 'toggle': "modal", 'target': '#edit-user-setting-modal'} do %><i class="fa fa-plus"></i> Add<% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <% education_qualification = @user.education_qualification %>
    <% if education_qualification.count > 0 %>
      <% education_qualification.each_with_index do |education, i| %>
        <div class="row">
          <div class="col-md-3">
            <label>School</label>
          </div>
          <div class="col-md-6">
            <%= education['school'] %>
          </div>
          <div class="col-md-3 text-right">
            <%= link_to settings_profiles_edit_education_information_path(user_id: @user.id.to_s, index: i), :class => "btn btn-success btn-xs edit_education_info", data: {remote: true, 'toggle': "modal", 'target': '#edit-user-setting-modal'} do %><i class="fa fa-edit"></i><% end %>
            <%= link_to settings_profiles_delete_education_information_path(user_id: @user.id.to_s, index: i), method: 'delete', :class => "btn btn-danger btn-xs delete_education_info", data: {remote: true} do %><i class="fa fa-times"></i><% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <label>Degree</label>
          </div>
          <div class="col-md-9">
            <%= education['degree'] %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <label>Field of study</label>
          </div>
          <div class="col-md-9">
            <%= education['field_of_study'] %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <label>Grade</label>
          </div>
          <div class="col-md-9">
            <%=education['grade'] %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <label>Duration</label>
          </div>
          <div class="col-md-2">
            <label>From</label>
          </div>
          <div class="col-md-2">
            <%= education['educ_start'] %>
          </div>
          <div class="col-md-1">
            <label>To</label>
          </div>
          <div class="col-md-1">
            <%= education['educ_end'] %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <label> Description </label>
          </div>
          <div class="col-md-9">
            <%= education['educ_desc'] %>
          </div>
        </div>
        <hr/>
      <% end %>
    <% else %>
      No Education Qualifications
    <% end %>
  </div>
</div>