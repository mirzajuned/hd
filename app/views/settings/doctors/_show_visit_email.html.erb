
<%= form_tag "/doctors/visit_email_setting.js", :method => :post, :remote => true, :id => 'customise_email', :class => 'form form-bordered'  do  %>
    <div class="row mb10 clearfix">
      <div class="col-md-2"><b>E-mail Settings</b></div>

      <div class="col-md-6">
        <div class="col-md-3">Email Time:</div>
        <div class="col-md-3">
          <%= select_tag :visit_email_time, options_for_select([['8am','08:00:00'],['8pm','20:00:00']],selected: @user_settings.try(:visit_email_time).try(:strftime, "%H:%M:%S")), { :class => 'form-control'} %>
        </div>
        <div class="col-md-2">Email Day</div>
        <div class="col-md-4">
          <%= select_tag :visit_email_schedule, options_for_select([['Same day',"0"],['Following Day',"1"]],selected: @user_settings.try(:visit_email_schedule)), { :class => 'form-control'} %>
        </div>
      </div>

      <div class="col-md-2 col-md-offset-2">
        <%= submit_tag("Save Changes",{:class=>"btn btn-success"}) %>
      </div>
    </div>


    <div class="panel-body">
      <div class="form-group">
        <%= text_field_tag :visit_email_subject ,@user_settings.try(:visit_email_subject),class: 'form-control',placeholder: "Subject"%>
      </div>
      <div>
        <%= text_area_tag :visit_email_body ,@user_settings.try(:visit_email_body),class: 'form-control',rows: "10",placeholder: "Enter your mail", id: "wysiwyg"%>
      </div>
    </div>
<% end %>

<strong style="color: red">*Note: Text b/w "% %",eg:"%pat_name%" in above body are place holders for the information like patient name,organisation,phone number etc, so do not edit them and use them accordingly.</strong>
