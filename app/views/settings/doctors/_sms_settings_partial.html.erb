  <tr class="visit-sms-setting">
    <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
      <div class="form-group">
        <div class="input-group mb15">
          Visit Ack
        </div>
      </div>
    </td>
    <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
      <div class="form-group">
        <%#= text_field_tag :visit_sms_text ,@user_settings.visit_sms_text,class: 'form-control'%>
        <div><a href="/doctors/sms_visit_modal" data-remote="true"> Edit SMS Content/Schedule</a>,<%= @user_settings.visit_sms_time.try(:strftime,"%I:%M %p")%> <%= @user_settings.try(:visit_sms_schedule) == "0" ? "Same Day" : "After "+@user_settings.try(:visit_sms_schedule).to_s+ " day"%></div>
