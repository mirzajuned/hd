
<%= form_tag "/doctors/campaign_email_setting.js", :method => :post, :remote => true, :id => 'customise_email', :class => 'form form-bordered'  do  %>
    <div class="row mb10 clearfix">
      <div class="col-md-2"><b>E-mail Settings</b></div>

      <div class="col-md-6">
        <div class="col-md-3">Email Sent Time:</div>
        <div class="col-md-3">
          <%= select_tag :campaign_email_time, options_for_select([['7am','07:00:00'],['8am','08:00:00'],['9am','09:00:00'],['10am','10:00:00'],['11am','11:00:00'],['12pm','12:00:00'],['1pm','13:00:00'],['2pm','14:00:00'],['3pm','15:00:00'],['4pm','16:00:00'],['5pm','17:00:00'],['6pm','18:00:00']],selected: @user_settings.try(:campaign_email_time).try(:strftime, "%H:%M:%S")), { :class => 'form-control'} %>
        </div>
        <div class="col-md-3">Time Before Event:</div>
        <div class="col-md-3">
          <%= select_tag :campaign_email_schedule, options_for_select([['Same day',"0"],['1 day',"1"],['1 days',"1"],['2 days',"2"],['3 days',"3"],['4 days',"4"],['5 days',"5"],['6 days','6'],['7 days','7'],['8 days','8'],['9 days','9'],['10 days','10'],['11 days','11'],['12 days','12']],selected: @user_settings.try(:campaign_email_schedule)), { :class => 'form-control'} %>
        </div>
      </div>

      <div class="col-md-2 col-md-offset-2">
        <%= submit_tag("Save Changes",{:class=>"btn btn-success"}) %>
      </div>
    </div>


    <div class="panel-body">
      <div class="form-group">
        <%= text_field_tag :campaign_email_subject ,@user_settings.try(:campaign_email_subject),class: 'form-control',placeholder: "Subject"%>
      </div>
      <div>
        <%= text_area_tag :campaign_email_body ,@user_settings.try(:campaign_email_body),class: 'form-control',rows: "10",placeholder: "Enter your mail", id: "wysiwyg"%>
      </div>
    </div>
<% end %>

<strong style="color: red">*Note: Text b/w "% %",eg:"%pat_name%" in above body are place holders for the information like patient name,organisation,phone number etc, so do not edit them and use them accordingly.</strong>
