<%= javascript_include_tag 'application-loggedin', 'data-turbolinks-track' => true %>
<div class="modal-dialog modal-md" style="width:95%;">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Update Pricing Master</h4>
    </div>
    <%= form_tag '/pricing_masters/update_multiple', method: 'patch', remote: true, id: 'edit-pricing_master-form', class: 'pricing-form' do %>
      <div class="modal-body">
        <div class="row pricing_form_details">
          <% if @service_master.present? %>
            <%= render partial: 'form.html.erb' %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <% if @service_master.present? && @service_master.try(:is_active) %>
          <%= submit_tag 'Save', class: 'btn btn-success', data: { 'disable-with': 'Please Wait...' }, onclick: 'pricing_master_form()' %>
        <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>
