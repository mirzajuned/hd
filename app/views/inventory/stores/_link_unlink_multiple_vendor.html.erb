<div class="modal-dialog" style="width:40%;">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><% if @type == "unlink_vendor" %>Un<% end %>Link Existing Vendor</h4>
    </div><br>
    <%= form_tag("/inventory/stores/save_link_unlink_multiple_vendor", method: "patch", remote: true, id: 'save_link_unlink_multiple_vendor') do %>
      <%= hidden_field_tag :store_id, @store_id %>
      <%= hidden_field_tag :type, @type %>
      <%= hidden_field_tag :store_type, @store_type %>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">
            <strong>Select Vendors</strong><br>
            <%= select_tag :vendor_ids, options_for_select(@vendors.pluck(:name, :id)), { class: 'form-control', multiple: true} %>
          </div>
        </div>

        <div class="row" style="padding-top: 35px;">
          <div class="col-sm-12" style="text-decoration: underline;">
            <strong>Currently <%= @type&.split('_')[0] %>ed Vendor</strong>
          </div>

          <div class="col-sm-12">
            <% if @other_vendors.present? %>
              <% @other_vendors.each do |vendor| %>
                <div style="margin: 7px;">
                  <i class="fa fa-arrow-right"></i> <%= vendor.name.upcase %><br>
                </div>
              <% end %>
            <% else %>
              <div style="margin: 7px;font-style: italic;"><strong>No <%= @type&.split('_')[0] %>ed Vendor existed</strong></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%#= submit_tag "Save", class: 'btn btn-success', onclick: 'link_unlink_vendor()' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>
