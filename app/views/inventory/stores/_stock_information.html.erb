<div class="modal-dialog" style="width: 60%">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title" style="color: #1E90FF"><%= @store.name %></h4>
    </div>
    <div class="modal-body window-body">
      <div class="row">
        <h4 style="color: blue; text-align: center;">Item Level</h4>
        <div class="col-md-12" style="text-align: center;">
          <h4 title="see details">Out Of Stock Items:&nbsp;&nbsp;&nbsp;<a href='/inventory/items?item_type[]=all_item&stock=out_stock&store_id=<%=@store.id %>' data-remote="true" class="stock-information"></i><%= @item_out_stock %></a></h4>
          <h4 title="see details">Running Low Items:&nbsp;&nbsp;&nbsp;<a href='/inventory/items?item_type[]=all_item&stock=running_low&store_id=<%=@store.id %>' data-remote="true" class="stock-information"></i><%= @item_running_low %></a></h4>
        </div>
      </div>
      <hr>
      <div class="row">
        <h4 style="color: blue; text-align: center;">Variant Level</h4>
        <div class="col-md-12" style="text-align: center;">
          <h4 title="see details">Out Of Stock Items:&nbsp;&nbsp;&nbsp;<a href='/inventory/item/variants?item_type[]=all_item&stock=out_stock&store_id=<%=@store.id %>' data-remote="true" class="stock-information"></i><%= @variant_out_stock %></a></h4>
          <h4 title="see details">Running Low Items:&nbsp;&nbsp;&nbsp;<a href='/inventory/item/variants?item_type[]=all_item&stock=running_low&store_id=<%=@store.id %>' data-remote="true" class="stock-information"></i><%= @variant_running_low %></a></h4>
        </div>
      </div>
      <hr>
      <div class="row">
        <h4 style="color: blue; text-align: center;">Lot Level</h4>
        <div class="col-md-12" style="text-align: center;">
          <h4 title="see details" style="color: red">Expiring Soon Items (<%= @store.days_before_expired%> days):&nbsp;&nbsp;&nbsp;<a href='/inventory/item/lots?expiry_time=<%= @store.days_before_expired%>_days&store_id=<%=@store.id %>' data-remote="true" class="stock-information"></i><%= @expiring_soon_item %></a></h4>
        </div>
      </div>
    </div>
    <div class="modal-footer window-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.stock-information').on('click', function() {
    $('#stock-notification-modal').modal('hide');
  })
</script>