<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Edit Store</h4>
    </div>
    <%= form_for @store, remote: true , html: { id: "inventory_store_form" } do |f| %>
        <%= f.hidden_field :organisation_id, { value: @current_user.organisation_id } %>
        <%= f.hidden_field :last_edited_by, { value: @current_user.fullname } %>
        <%= f.hidden_field :facility_name, { value: current_facility.name } %>
        <div class="modal-body">
          <%= render partial: 'form.html.erb', locals: { f: f } %>
        </div>
        <div class="modal-footer">
          <%= f.submit "Update Changes", { class: 'btn btn-success', onclick: 'validate_inventory_store_form()' } %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    <% end %>
  </div>
</div>

<style type="text/css">

  .ui-menu-item a.ui-state-focus {
    background-color: #929090;
    color: #fff;
  }

  .select2-container .select2-selection--single {
    height: 34px !important;
  }
</style>