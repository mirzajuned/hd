<div class="modal-dialog" style="width: 60%">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title" style="color: #00BFFF">Previous Rate</h4>
    </div>
    <form id="vendor_purchase_rate" novalidate="novalidate" style="max-height: 600px; overflow: auto;">
      <div class="modal-body window-body">
        <div class="row check-font">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Vendor Name</th>
                <th>Description</th>
                <th>Rate</th>
                <th>Paid Qty.</th>
                <th>Free Qty.</th>
                <th>GRN No.</th>
                <th>GRN Time</th>
                <th>PO No.</th>
                <th>PO Time</th>
                <th>PO Status</th>
              </tr>
            </thead>
            <tbody>
              <% @vendor_purchare_rates.each_with_index do |purchase_rate,index| %>
                <tr>
                  <td><%= purchase_rate.vendor_name %></td>
                  <td><%= purchase_rate.variant_name %>&nbsp;&nbsp;<%= purchase_rate.variant_identifier %></td>
                  <td><%= purchase_rate.purchase_rate %></td>
                  <td><%= purchase_rate.paid_quantity %></td>
                  <td><%= purchase_rate.free_quantity %></td>
                  <td><%= purchase_rate.grn_number %></td>
                  <td><%= purchase_rate.grn_date_time&.strftime("%d %b %Y | %I:%M %p") %></td>
                  <td><%= purchase_rate.po_number %></td>
                  <td><%= purchase_rate.po_date_time&.strftime("%d %b %Y | %I:%M %p") %></td>
                  <td><%= Inventory::Order::Purchase.find_by(purchase_display_id: purchase_rate.po_number)&.order_status %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </form>
    <div class="modal-footer window-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>

<style type="text/css">
  .check-font table tr th {
    padding: 2px 5px;
    text-align: center;
    background-color: #4CAF50;
    color: white;
  }

  .check-font table tr td {
    padding: 2px 5px;
    text-align: center;
  }

  .check-font {
    font-size: 13px;
  }
</style>