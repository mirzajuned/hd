function validate_inventory_other_charge_form() {
  $('#inventory_other_charge_form').validate({
    rules: {
      "inventory_other_charge[name]": {
        required: true,
      }
    },
    messages: {
      "inventory_other_charge[name]": {
        required: "Required."
      }
    },
    errorPlacement: function (error, element) {
      var elem = $(element);
      error.insertAfter(element);
      if(elem.hasClass("select2-hidden-accessible")) {
        element = $("#select2-" + elem.attr("id") + "-container").parent();
        error.insertAfter(element);
      } else {
        error.insertAfter(element);
      }
    }
  });
}
validate_inventory_other_charge_form()