<% if @inventory_other_charge.is_disable == false %>
$('#other_charge_disable_button_<%= @inventory_other_charge.id %>').html(`
  	  <div class="btn btn-danger btn-xs btn-disable-sub-category" style="display: inline;" data-toggle="modal" data-target="#confirmation-modal" data-sub-category='<%= @inventory_other_charge.name %>'>Disable</div>
	  <%= escape_javascript(link_to 'Confirm', toggle_disable_inventory_other_charge_path(id: @inventory_other_charge.id, is_disable: true), class: "btn btn-danger", remote: true, style: "display: none;", data: {dismiss: "modal"}) %>
	`)
$('#other_charge_disable_button_<%= @inventory_other_charge.id %>').closest('tr').find('td:not(#other_charge_disable_button_<%= @inventory_other_charge.id %>)').css({'visibility': 'visible'})
<% else %>
$('#other_charge_disable_button_<%= @inventory_other_charge.id %>').html(`
    <%= escape_javascript(link_to 'Active', toggle_disable_inventory_other_charge_path(id: @inventory_other_charge.id, is_disable: false), class: "btn btn-xs btn-primary", remote: true, style: "display: inline;") %>
    `)
$('#other_charge_disable_button_<%= @inventory_other_charge.id %>').closest('tr').find('td:not(#other_charge_disable_button_<%= @inventory_other_charge.id %>)').css({'visibility': 'hidden'})
<% end %>

$('.btn-disable-sub-category').on('click', function(){
  var btn = $(this).closest('td').find('a')
  var other_charge = $(this).data('sub-category')
  $('#confirmation-modal').html(`
    <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Are You Sure?</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure, you want disable <strong>${other_charge}</strong>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        ${btn[0].outerHTML}
      </div>
    </div>
  </div>
  `)
})
