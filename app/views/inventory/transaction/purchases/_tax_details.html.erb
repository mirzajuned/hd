<div class="col-md-12 purchase-invoice-information">
  <div class="col-sm-7 font-size">
    <div class="row">
      <div class="col-md-6">
        <%= f.text_area :comments, class: 'form-control', placeholder: 'Comments' %>
      </div>
      <div class="col-md-6">
        <div id='tax-cage' class="col-sm-12"></div>
      </div>
    </div>
  </div>
  <div class="col-sm-5 text-right">
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <b>Gross Amount</b>
        </div>
        <div class="col-sm-2 text-center">
          :
        </div>
        <div class="col-sm-4">
          <%= f.text_field :total_cost, class: 'fi_input_style fullname', placeholder: 'Amount', style: 'width:92%; background-image: none;',readonly: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <b>Total Discount</b>
        </div>
        <div class="col-sm-2 text-center">
          :
        </div>
        <div class="col-sm-4">
          <%= f.text_field :discount, class: 'fi_input_style', placeholder: 'Amount', style: 'width:92%; background-image: none;', value: 0, onkeypress: 'return event.charCode >= 48 && event.charCode <= 57', readonly: true %>
        </div>
      </div>
    </div>
    <div id="tax_details" class="row"></div>
    <%= f.hidden_field :tax_amount, class: 'fi_input_style input_focus_none', placeholder: 'Amount', style: 'width:92%; background-image: none;', value: 0, readonly: true %>
    <%= f.hidden_field :version, class: 'fi_input_style input_focus_none', placeholder: 'Amount', style: 'width:92%; background-image: none;', value: "1.0.1", readonly: true %>

    <!-- <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6 font_size">
          <b>Tax amount</b>
        </div>
        <div class="col-sm-2 text-center font_size">
          :
        </div>
        <div class="col-sm-3 font_size">
          <%#= f.hidden_field :tax_amount, class: 'fi_input_style input_focus_none', placeholder: 'Amount', style: 'width:92%; background-image: none;', value: 0, readonly: true %>
        </div>
      </div>
    </div> -->
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <b>Other Charges</b>
        </div>
        <div class="col-sm-2 text-center">
          :
        </div>
        <div class="col-sm-4">
          <%= f.text_field :total_other_charges_amount, id: 'total_other_charges_amount', class: 'fi_input_style purchase-net-amount', placeholder: 'Amount', style: 'width:92%',readonly: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <b>Net Amount</b>
        </div>
        <div class="col-sm-2 text-center">
          :
        </div>
        <div class="col-sm-4">
          <%= f.text_field :net_amount, class: 'fi_input_style purchase-net-amount', placeholder: 'Amount', style: 'width:92%; background-image: none;',readonly: true, min: 1 %>
        </div>
      </div>
    </div>
    <div class="pending_amount_details">
      <%= f.hidden_field :amount_paid, class: 'fi_input_style purchase-amount-paid', placeholder: 'Amount', style: 'width:92%',readonly: true, value: 0 %>
      <%= f.hidden_field :amount_remaining, class: 'fi_input_style purchase-amount-remaining', placeholder: 'Amount', style: 'width:92%',readonly: true, value: 0 %>
      <%= f.hidden_field :extra_amount_paid, class: 'fi_input_style amount_paid_other', id: 'inventory_transaction_purchase_extra_amount_paid', placeholder: 'Amount', name: 'inventory_transaction_purchase[extra_amount_paid]', value: 0 %>
    </div>
  </div>
</div>