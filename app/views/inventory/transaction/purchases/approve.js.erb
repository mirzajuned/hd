var row = $('.purchase-transaction-list #<%= @purchase_transaction.id %>')
row.trigger('click')

<% if @purchase_transaction.approved? %>
  row.find('.status b').text('Approved')
  notice = new PNotify({ title: 'Approved', text: 'This Purchase Order is approved', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });