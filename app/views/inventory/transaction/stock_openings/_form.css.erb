  table-layout: fixed;
}
.transaction-lots-list .table tbody {
  display: block;
  overflow-y: scroll;
}
.transaction-lots-list .table tbody tr td {
  vertical-align: middle;
}
.transaction-datepicker, .transaction-timepicker{
  cursor: pointer !important;
}

.disabled_row{
  pointer-events: none;
