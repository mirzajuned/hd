  .form-control-custom-input{
    padding: 5px 10px;
    border-right: none;
  }
  .form-control-custom-select{
    padding: 6px 10px;
    border-left: none;
  }
  .form-control-custom-slash {
    background: #FFFFFF;
    padding: 0px;
    margin: 0px;
    border-right: none;
    border-left: none;
  }

  .form-control-custom-unit {
    margin: 0px;
    border-left: none;
  }

  .item-info {

  }

  .ui-datepicker-calendar{
    display: <%= organization_expiry_calendar %>;
  }
</style>

<script type="text/javascript">
  expiry_type = "<%= organization_expiry_calendar %>"
  if(expiry_type == 'none'){
      $('.son-lot-datepicker').datepicker({
      dateFormat: "dd/mm/yy",
      minDate: -0,
      changeMonth: true,
      changeYear: true,
      showButtonPanel: true,
      onClose: function(dateText, inst) { 
                 last_date = new Date(inst.selectedYear, inst.selectedMonth + 1, 0).getDate()
                 $(this).datepicker('setDate', new Date(inst.selectedYear, inst.selectedMonth, last_date)); 
               }
    });
  }
  </script>