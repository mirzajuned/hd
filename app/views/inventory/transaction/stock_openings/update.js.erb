<% if @stock_opening.new_record? %>
  notice = new PNotify({ title: 'Failed', text: 'SON creation failed', type: 'error' });
<% else %>
  $("#inventory-modal").modal('hide')
  notice = new PNotify({ title: 'Updated', text: 'New SON updated', type: 'success' });
<% end %>
notice.get().click(function(){ notice.remove() });

$("#inventory-modal").modal('hide')
$('.inventory-items #<%= @stock_opening.id.to_s%>')
  .html("<%= escape_javascript(render('inventory/transaction/stock_openings/stock_opening.html', stock_opening: @stock_opening)) %>").trigger('click')
