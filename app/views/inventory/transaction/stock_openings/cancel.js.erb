$('.modal-backdrop').remove();
$("#cancelModal").modal('hide');

var row = $('.inventory-items #<%= @stock_opening.id.to_s%>')
row.trigger('click')
<% if @stock_opening.status_cancelled? %>
  row.find('.status b').text('Cancelled')
  notice = new PNotify({ title: 'Cancelled', text: 'This Stocking Opening is cancelled', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });

$('#confirmation-modal').modal('hide')