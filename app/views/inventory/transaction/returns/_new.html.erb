<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog modal-lg" style="width: 98%">
  <div class="modal-content transaction-content" style="">
    <div class="modal-header transaction-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title text-center">Request from <%= @patient.fullname %> on <%= Time.current.strftime('%d/%m/%Y') %></h4>
    </div>
    <div class="modal-body transaction-body">
      <div class="row">
        <div class="col-md-3 col-sm-5 col-xs-5 items-lots">

          <div class="items-lots-search">
            <div class="col-md-3">
              <strong>Search By:</strong>
            </div>
            <div class="col-md-9 input-group">
              <div class="input row btn-group" target-input-id="search_type">
                <button type="button" input-value="Barcode" class="btn btn-xs btn-white searchtype custom-radio-button btn-brown" name="searchtype">Barcode Scan</button>
                <button type="button" input-value="Description" class="btn btn-xs btn-white searchtype custom-radio-button" name="searchtype">Description</button>
              </div>
              <div class="input"><input name="inventory_transaction_transfer[search_type]" class="hidden" type="hidden" id="search_type" value="Barcode"></div>
            </div>
          </div>

          <div class="items-lots-list">

            <div class="row items-lots-search mb5">
              <div class="col-md-9">
                <div class="input-group">
                  <input type="text" id="lots_search" placeholder="Type Description / Model No. to search..." class="form-control">
                  <input type="text" id="lots_search_barcode" placeholder="Type Barcode to search..." class="form-control">
                  <span class="input-group-addon"><i class="fa fa-times-circle" style="display: none"></i></span>
                </div>
              </div>
              <div class="col-md-3 search-barcode">
                <button id="search_by_barcode" type="button" style="margin: 2px; color: blue;">Submit</button>
              </div>
            </div>

            <table class="table items-lots-table">
              <tbody class="items-lots-body">
              <%= render partial: 'inventory/item/lots/index_body' %>
              </tbody>
            </table>
          </div>

          <% unless @lots.count < 30 %>
            <div class="show-more-timeline">
              <a class="col-sm-12", href="javascript:;", id="show_more_lots", data-count = "0" , style="text-align: right;text-decoration: none;position: fixed;margin-left: 200px;">
                <i class="fa fa-spinner fa-spin"></i> Loading...
              </a>
            </div>
          <% end %>
        </div>

        <div class="col-md-9 col-sm-7 col-xs-7 items-lots">
          <%= form_for @return_transaction, remote: true , html: { id: "inventory_return_transactions_form" } do |f| %>
            <%= render partial: '/inventory/transaction/returns/form.html', locals: {f:f} %>
            <div class="col-sm-12 mb5">
              <div class="col-sm-6">
                <% @mop_list = Invoice::InvoicesHelper.mop_list(current_facility.country_id) %>
                <div class="col-sm-4"> <b>Mode of Payment </b></div>
                <div class="col-sm-1 text-center">:</div>
                <div class="col-sm-6" style="padding-right: 0">
                  <%= f.select :mode_of_payment, options_for_select(@mop_list), { include_blank: "Please Select" }, { class: "form-control p7_10 mode_of_payment", style: "height:34px;" } %>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="mode_of_payment_details mb10">
                </div>
              </div>
            </div>
            <div class="col-md-6 col-sm-6">
              <%= f.submit "Save Changes", { class: 'col-sm-3 btn btn-success', onclick: 'validate_inventory_return_transactions_form()', data: { disable_with: "Please Wait..."} } %>
              <div class="col-sm-7 col-sm-offset-1 tax-breakup-info" style="background: #eee; padding: 5px;display: none;">
                <div class="row mb5">
                  <div class="col-md-5 text-right"><b>Taxable Amount</b></div>
                  <div class="col-md-2 text-center">:</div>
                  <div class="col-md-4 text-right">
                    <%= f.text_field :taxable_amount, id: 'total_taxable_amount', readonly: true, class: 'fi_input_style text-right', style: "width: 92%;" %>
                  </div>
                </div>
                <div class="tax-breakup-container " >
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="row">
                <div class="col-sm-6 font_size">
                  <b>Gross Return Amt.</b>
                </div>
                <div class="col-sm-2 text-center font_size">
                  :
                </div>
                <div class="col-sm-4 font_size">
                  <span><%= f.text_field :total_cost, { class: 'form-control p7_10 return-total-cost',readonly: true, placeholder: "Total Cost" } %></span>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6 font_size">
                  <b>Return charges</b>
                </div>
                <div class="col-sm-2 text-center font_size">
                  :
                </div>
                <div class="col-sm-4 font_size">
                  <span><%= f.text_field :return_charges, { class: 'form-control p7_10 return-changes', placeholder: "Return Charges", onkeypress: 'return isNumberKey(this, event)' } %></span>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6 font_size">
                  <b>Net Return Value</b>
                </div>
                <div class="col-sm-2 text-center font_size">
                  :
                </div>
                <div class="col-sm-4 font_size">
                  <span><%= f.text_field :return_amount, { class: 'form-control p7_10 return-amount',readonly: true, placeholder: "Return Amount" } %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

