function add_lot(lot_id) {
  var id =  lot_id
  if (!checkItem.includes(id)) {
    checkItem.push(id)
    $.ajax({
      type: 'POST',
      data: {
        lot_id: id,
        remote: true
      },
      url: '/inventory/transaction/store_consumptions/add_lot',
      success: function(){
        $('#'+id).css('background-color', '#cfe8d2')
        // $('#'+id).addClass('disabled_row')
      }
    })
  }
}

