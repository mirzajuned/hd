$("#<%= @transfer_transaction.id %>.inventory-list-row")
  .html("<%=escape_javascript(render('transfer', transfer: @transfer_transaction,count: params[:count]))%>")
  .trigger('click')
<% if @transfer_transaction.status.cancelled? %>
  notice = new PNotify({ title: 'Cancelled', text: 'Transfer has been cancelled', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });

$('#confirmation-modal').modal('hide')