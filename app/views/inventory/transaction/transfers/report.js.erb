$("#transfer-report-modal").html("<%= escape_javascript(render 'report.html.erb') %>")

$('.transfer-report-timepicker').timepicker({minuteStep: 5});

$('.transfer-report-start-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});
$('.transfer-report-end-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});

$(".transfer-report-concerned-person").on('change', function() {
  var user_id = $('#transfer_report_user_name').val()
  var start_date = $('#transfer_report_start_date').val()
  var start_time = $('#transfer_report_start_time').val()
  var end_date = $('#transfer_report_end_date').val()
  var end_time = $('#transfer_report_end_time').val()

  var transfer_data = `&user_id=${user_id}&start_date=${start_date}&start_time=${start_time}&end_date=${end_date}&end_time=${end_time}`

  var download_report_setting = $(".download_report_setting");
  for (var i = download_report_setting.length - 1; i >= 0; i--) {
    var transfer_setting = $(download_report_setting[i]).attr('href');
    $(download_report_setting[i]).attr('href', transfer_setting + transfer_data)
  }
}).trigger('change')

