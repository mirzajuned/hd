$("#inventory-modal").modal("hide")
$("#<%= @transfer_transaction.id %>.inventory-list-row")
	.html("<%=escape_javascript(render('transfer', transfer: @transfer_transaction, count: params["inventory_transaction_transfer"]["count"]))%>")
	.trigger('click')

<% if flash[:success].present? %>
  notice = new PNotify({ title: 'Updated', text: 'Transfer has been updated successfully', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });