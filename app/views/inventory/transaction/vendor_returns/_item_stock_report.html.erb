<div class="modal-dialog" style="width: 50%">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h5 class="modal-title" style="color: #1E90FF">Item Wise - Stock Purchase Return Report</h5>
    </div>
    <div class="modal-body window-body">
      <div class="row mb10">
        <div class="col-md-6">
          <b>From</b>
        </div>
        <div class="col-md-6">
          <b>To</b>
        </div>
        <div class="col-md-3">
          <b>Date:</b>
          <%= text_field_tag 'vendor_return_item_report[start_date]', @start_date, class: 'form-control vendor-return-item-report-start-datepicker p5_10' %>
        </div>
        <div class="col-md-3">
          <b>Time:</b>
          <div class="bootstrap-timepicker timepicker">
            <% start_time = Time.current.beginning_of_day %>
            <%= text_field_tag 'vendor_return_item_report[start_time]', start_time.try(:strftime, '%I:%M %p'), class: 'form-control vendor-return-item-report-timepicker p5_10' %>
          </div>
        </div>
        <div class="col-md-3">
          <b>Date:</b>
          <%= text_field_tag 'vendor_return_item_report[end_date]', @end_date, class: 'form-control vendor-return-item-report-end-datepicker p5_10' %>
        </div>
        <div class="col-md-3">
          <b>Time:</b>
          <div class="bootstrap-timepicker timepicker">
            <% end_time = Time.current.end_of_day %>
            <%= text_field_tag 'vendor_return_item_report[end_time]', end_time.try(:strftime, '%I:%M %p'), class: 'form-control vendor-return-item-report-timepicker p5_10' %>
          </div>
        </div>
        <div class="col-md-3"></div>
      </div>
      <div class="row mb10">
        <div class="col-md-4">
          <b>User:</b>
          <% @all_user = @all_user << ['All User', 'all_user'] %>
          <%= select_tag 'vendor_return_item_report[user_name]', options_for_select(@all_user, selected: current_user.id), include_blank: false, include_hidden: false, class: 'form-control vendor-return-item-report-concerned-person', style: 'padding: 5px' %>
          <input type="hidden" name="vendor_return_item_report[user_id]" id="concerned_user_id">
        </div>
      </div>
    </div>
    <div class="modal-footer window-footer">
      <% download_report = "download_item_stock_report_inventory_transaction_vendor_returns_path(start_date: @start_date, end_date: @end_date, store_id: @inventory_store.id, department_id: @inventory_store.department_id, department_name: @inventory_store.department_name, format: 'xlsx')" %>
      <%= link_to eval(download_report), class: "download-report btn btn-primary download_report_setting", data: { method: :get } do %> <i class="fa fa-download mr5"></i> Download <% end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>