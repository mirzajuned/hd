$("#vendor-return-report-modal").html("<%= escape_javascript(render 'item_stock_report.html.erb') %>")

$('.vendor-return-item-report-timepicker').timepicker({minuteStep: 5});

$('.vendor-return-item-report-start-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});
$('.vendor-return-item-report-end-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});

$(".vendor-return-item-report-concerned-person").on('change', function() {
  var user_id = $('#vendor_return_item_report_user_name').val()
  var start_date = $('#vendor_return_item_report_start_date').val()
  var start_time = $('#vendor_return_item_report_start_time').val()
  var end_date = $('#vendor_return_item_report_end_date').val()
  var end_time = $('#vendor_return_item_report_end_time').val()

  var data = `&user_id=${user_id}&start_date=${start_date}&start_time=${start_time}&end_date=${end_date}&end_time=${end_time}`

  var download_report_setting = $(".download_report_setting");
  for (var i = download_report_setting.length - 1; i >= 0; i--) {
    var setting = $(download_report_setting[i]).attr('href');
    $(download_report_setting[i]).attr('href', setting + data)
  }
}).trigger('change')

