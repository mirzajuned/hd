var row = $('.inventory-items #<%= @direct_stock.id.to_s%>')
row.trigger('click')

<% if @direct_stock.status_approved? %>
  row.find('.status b').text('Approved')
  notice = new PNotify({ title: 'Approved', text: 'This Direct Stock Entry is approved', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });