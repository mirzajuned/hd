var row = $('.inventory-items #<%= @direct_stock.id.to_s%>')
row.trigger('click')
<% if @direct_stock.status_cancelled? %>
  row.find('.status b').text('Cancelled')
  notice = new PNotify({ title: 'Cancelled', text: 'This Direct Stock Entry is cancelled', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });

$('#confirmation-modal').modal('hide')