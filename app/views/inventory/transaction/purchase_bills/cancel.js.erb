$("#cancelModal").modal('hide')
var row = $('.purchase-transaction-list #<%= @purchase_bill.id %>')
row.trigger('click')
<% if @purchase_bill.cancelled? %>
  row.find('.status b').text('cancelled')
  notice = new PNotify({ title: 'Cancelled', text: 'This Purchase Bill is cancelled', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });

$('#confirmation-modal').modal('hide')
$('.modal-backdrop').hide();