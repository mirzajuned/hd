$("#adjustment-report-modal").html("<%= escape_javascript(render 'report.html.erb') %>")

$('.adjustment-report-timepicker').timepicker({minuteStep: 5});

$('.adjustment-report-start-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});
$('.adjustment-report-end-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});

$(".adjustment-report-concerned-person").on('change', function() {
  var user_id = $('#adjustment_report_user_name').val()
  var start_date = $('#adjustment_report_start_date').val()
  var start_time = $('#adjustment_report_start_time').val()
  var end_date = $('#adjustment_report_end_date').val()
  var end_time = $('#adjustment_report_end_time').val()

  var adjustment_data = `&user_id=${user_id}&start_date=${start_date}&start_time=${start_time}&end_date=${end_date}&end_time=${end_time}`

  var download_report_setting = $(".download_report_setting");
  for (var i = download_report_setting.length - 1; i >= 0; i--) {
    var adjustment_setting = $(download_report_setting[i]).attr('href');
    $(download_report_setting[i]).attr('href', adjustment_setting + adjustment_data)
  }
}).trigger('change')

