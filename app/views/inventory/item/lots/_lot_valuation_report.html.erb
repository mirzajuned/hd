<div class="modal-dialog" style="width: 50%">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h5 class="modal-title" style="color: #1E90FF">Stock Valuation Report</h5>
    </div>
    <div class="modal-body window-body">
      <div class="row mb10">
        <div class="col-md-6">
          <b>Date:</b>
          <%= text_field_tag 'sales_report[end_date]', @date, class: 'form-control sales-report-start-datepicker p5_10' %>
        </div>
        <div class="col-md-6">
          <b>Time:</b>
          <div class="bootstrap-timepicker timepicker">
            <% end_time = 'sales_report[end_date]' %>
            <%= text_field_tag 'sales_report[end_time]', end_time.try(:strftime, '%I:%M %p'), class: 'form-control sales-report-timepicker p5_10', disabled: true %>

          </div>
        </div>
        <div class="col-md-3"></div>
      </div>
        
    </div>

    <div class="modal-footer window-footer">
      <% download_report = "download_lot_valuation_report_inventory_stocks_sales_path(store_id: @inventory_store.id, format: 'xlsx')" %>
      <%= link_to eval(download_report), class: 'download-report btn btn-primary download_report_setting', data: { method: :get } do %> <i class="fa fa-download mr5"></i> Download <% end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>

<style type="text/css">
  .sales-report-start-datepicker, .sales-report-end-datepicker, .sales-report-timepicker {
    cursor: pointer !important;
    background-color: #fff !important;
  }
</style>
