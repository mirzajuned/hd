function validate_inventory_transportation_form() {
  $('#inventory_transportation_form').validate({
    rules: {
      "inventory_transportation[name]": {
        required: true,
      }
    },
    messages: {
      "inventory_transportation[name]": {
        required: "Required."
      }
    },
    errorPlacement: function (error, element) {
      var elem = $(element);
      error.insertAfter(element);
      if(elem.hasClass("select2-hidden-accessible")) {
        element = $("#select2-" + elem.attr("id") + "-container").parent();
        error.insertAfter(element);
      } else {
        error.insertAfter(element);
      }
    }
  });
}
validate_inventory_transportation_form()

$.validator.addMethod("checkName", function(value) {
  if (value.trim() == '') {
    return false
  } else {
    return true
  }
}, "Required");
$.validator.addClassRules("transportation-name", { required: true, checkName: true });