function validate_inventory_dispensing_unit_form() {
  $('#inventory_dispensing_unit_form').validate({
    rules: {
      "inventory_dispensing_unit[name]": {
        required: true,
      }
    },
    messages: {
      "inventory_dispensing_unit[name]": {
        required: "Required."
      }
    },
    errorPlacement: function (error, element) {
      var elem = $(element);
      error.insertAfter(element);
      if(elem.hasClass("select2-hidden-accessible")) {
        element = $("#select2-" + elem.attr("id") + "-container").parent();
        error.insertAfter(element);
      } else {
        error.insertAfter(element);
      }
    }
  });
}
validate_inventory_dispensing_unit_form()

$.validator.addMethod("checkFullName", function(value) {
  if (value.trim() == '') {
    return false
  } else {
    return true
  }
}, "Required");

$.validator.addClassRules("fullname", { required: true, checkFullName: true});
