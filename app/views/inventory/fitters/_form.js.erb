// Validation
function validate_inventory_fitter_form() {
  $('#inventory_fitter_form').validate({
    rules: {
      "inventory_fitter[name]": {
        required: true,
      },
      "inventory_fitter[mobile_number]": {
        required: true,
      }
    },
    messages: {
      "inventory_fitter[name]": {
        required: "Required."
      },
      "inventory_fitter[mobile_number]": {
        required: "Required."
      },
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  });
}
validate_inventory_fitter_form()

$(".cancel-inventory-fitter").on("click",function(){
  $(".fitter-form").html("")
})