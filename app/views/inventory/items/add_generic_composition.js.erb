$(".generic-compositions-<%=@index%>").append("<%= escape_javascript(render partial: '/inventory/items/generic_compositions.html.erb', locals: { index: @index, item: @item }) %>")
$('.btn-add-item').unbind().on('click',function(){
  var index = $(this).data('index')
  $.ajax({
    type: 'POST',
    url: "/inventory/items/add_generic_composition",
    data: { 
      index: index
    }
  })
})

$('.btn-remove-item').unbind().on('click',function(){
  $(this).parent().parent().remove()
})