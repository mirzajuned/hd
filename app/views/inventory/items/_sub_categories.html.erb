<%if item.present? %>
    <%= select_tag "inventory_item[#{index}][sub_category_id]", options_for_select(sub_categories.map { |ele| [ele.name, ele.id.to_s]}, item.sub_category_id.to_s), { class: 'form-control p7_10 item_sub_category', "data-index": index } %>
    <%= hidden_field_tag "inventory_item[#{index}][sub_category_name]", item.sub_category_name %>
<% else %>
    <%= select_tag "inventory_item[#{index}][sub_category_id]", options_for_select(sub_categories.map { |ele| [ele.name, ele.id.to_s]}, sub_categories&.first&.id&.to_s), { class: 'form-control p7_10 item_sub_category', "data-index": index } %>
    <%= hidden_field_tag "inventory_item[#{index}][sub_category_name]", sub_categories&.first&.name %>
<% end %>