jQuery("#inventory-modal").html("<%= escape_javascript(render '/inventory/items/show_checkout_cart') %>")


function checkoutCart_page() {
  $("#formCheckoutDetails").validate({
    rules: {
      "recipient": {
        required: true,
      },
      "authorized_by": {
        required: true,
      },
    },
    messages: {
      "recipient": {
        required: "Please Enter Recipient Name."
      },
      "authorized_by": {
        required: "Please Enter Authorizing Person Name."
      },

    },
    errorPlacement: function (error, element) {
      var id = $(element).attr("id");
      var parent = $("#"+id).parents(".input-group").length
      if(parent == 0){
        error.insertAfter(element);
      } else {
        error.insertAfter($("#"+id).parents(".input-group"));
      }
    }
  });
}
checkoutCart_page()