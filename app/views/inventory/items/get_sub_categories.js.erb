$(".item-sub-categories-data-<%=@index%>").html("<%= escape_javascript(render partial: 'inventory/items/sub_categories.html.erb', locals: { sub_categories: @inventory_sub_categories, index: @index, item: nil }) %>")
$("#inventory_item_<%=@index%>_sub_category_id").select2()
$('.item_sub_category').on('change',function(){
  var index = $(this).data('index');
  var subCategoryName = $(this).find('option:selected').text()
  $('#inventory_item_'+index+'_sub_category_name').val(subCategoryName)
})
$("#inventory_item_<%=@index%>_sub_category_id").change()