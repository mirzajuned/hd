<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>

<%= form_for Inventory::Item::Consumable.new, as: :inventory_item,:url => inventory_items_path,:format => :js ,:method => :post,:remote=>true, :validate => true do |f| %>

  <%= render partial: 'inventory/items/item_categories/item_form', locals: { f: f, category: "consumable" } %>

<% end %>

<style>
  input.error, select.error {
    border-color: #b94a48;
    background-image: none;
  }
  input.valid, select.valid {
    border-color: #468847;
    background-image: none;
  }
</style>

<script type="text/javascript">
  datepicker_options = {
    changeMonth: true,
    changeYear: true,
    dateFormat: "yy-mm-dd",
    minDate: -0
    //showButtonPanel: true,
  };

  $('.datepicker').datepicker(datepicker_options);

  // Select2
  $.fn.modal.Constructor.prototype.enforceFocus = function() {};
  $(".dispensing-unit-dd").select2();

  // Tooltip
  $(".hg-tooltip").tipsy();



</script>