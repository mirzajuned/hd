<div class="col-md-12">
   <% if @vendor_locations.count > 0 %>
      <table id="manage_inventory_stores_table" class="table table-primary table-bordered">
        <thead>
        <th width="15%">Name</th>
        <th width="10%">Mobile No.</th>
        <th width="10%">Sec. Mobile No.</th>
        <th width="15%">Company Name</th>
        <th width="15%">Email</th>
        <th width="20%">Address</th>
        <th width="15%" class="text-center">Actions</th>
        </thead>
        <tbody>
        <% @vendor_locations.each do |location| %>
            <tr>
              <td>
                <%= location.try(:name) %>
              </td>
              <td>
                <%= location.try(:mobile_number) %>
              </td>
              <td>
                <%= location.try(:secondary_mobile_number) %>
              </td>
              <td>
                <%= location.try(:company_name) %>
              </td>
                <td>
                <%= location.try(:email) %>
              </td>
              <td>
                <%= location.try(:address) %>
              </td>
               <td>
              <table style="width: 100%;">
                <tr>
                  <td>
                    <%= link_to edit_inventory_vendor_location_path(id: location.id.to_s, vendor_id: @vendor_id), method: :get, data: { remote: true }, class: "btn btn-info btn-xs", style: "display: inline;" do %>Edit<% end %>
                  </td>
                </tr>
              </table>
            </td>              
            </tr>
        <%end%>
        </tbody>
      </table>
  <% else %>
      <div class="col-md-12 text-center mt10">
        No Vendor Location to Show.
      </div>
  <% end %>

</div>
<style>
  #confirmation-modal a{
    display: inline-block !important;
  }
  .row-container{
    height: 25px;
  }
</style>