$("#store-modal").html("<%= escape_javascript(render 'index.html.erb') %>")
jQuery("#store-modal").modal("show")
$('.btn-disable-filter').on('click', function(){
  var btn = $(this).closest('td').find('a')
  var fitter_name = $(this).data('fitter')
  $('#confirmation-modal').html(`
    <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Are You Sure?</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure, you want disable <strong>${fitter_name}</strong>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        ${btn[0].outerHTML}
      </div>
    </div>
  </div>
  `)
})