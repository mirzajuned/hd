<div class="row">
  <div class="col-sm-12 text-center" style="border-bottom:1px solid #ccc;border-top:1px solid #ccc;"><strong>Vendor Information</strong></div>
</div>

<div class="row" style="margin-top:15px;">
  <div class="col-sm-6 mb5">
    <strong>Name</strong><br>
    <%= f.text_field :name, { class: 'form-control p7_10 company_name', placeholder: ' Name' , readonly: true, :value => @vendor_name}%>
  </div>
  <div class="col-sm-6 mb5">
    <strong>Company Name</strong><br>
    <%= f.text_field :company_name, { class: 'form-control p7_10 company_name', placeholder: 'Company name' } %>
  </div>

  <div class="col-sm-6 mb5">
    <strong>Contact Person</strong><br>
    <%= f.text_field :contact_person, { class: 'form-control p7_10 contact_person', placeholder: 'Contact Person' } %>
  </div>

  <div class="col-sm-6 mb5">
    <strong>Mobile Number</strong><br>
    <%= f.text_field :mobile_number, { class: 'form-control p7_10 mobilenumber', placeholder: 'Mobile No.', minlength: 6, maxlength: 10, onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' } %>
  </div>
  <div class="col-sm-6 mb5">
    <strong>Email</strong><br>
    <%= f.text_field :email, { class: 'form-control p7_10 email', placeholder: 'Email' } %>
  </div>

  <div class="col-sm-6 mb5">
    <strong>Secondary Mobile Number</strong><br>
    <%= f.text_field :secondary_mobile_number, { class: 'form-control p7_10 secondarymobilenumber', placeholder: 'Secondary Mobile No.', minlength: 6, maxlength: 10, onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' } %>
  </div>

  <div class="col-sm-6 mb5">
    <strong>Pan Number</strong><br>
    <%= f.text_field :pan_number, { class: 'form-control p7_10 pan_number', placeholder: 'Pan Number'} %>
  </div>

  <div class="col-sm-6 mb5">
    <strong>CIN Number</strong><br>
    <%= f.text_field :cin_number, { class: 'form-control p7_10 cin_no', placeholder: 'CIN Number' } %>
  </div>
  <div class="col-sm-6 mb5">
    <strong>MSME Number</strong><br>
    <%= f.text_field :msme_number, { class: 'form-control p7_10 msme_number', placeholder: 'MSME Number' } %>
  </div>
   <div class="col-sm-6 mb5"> 
    <strong>Credit Days</strong><br>
    <%= f.text_field :credit_days, { class: 'form-control p7_10 credit_days', placeholder: 'Credit Days', oninput: 'this.value = this.value.match(/^\d+\.?\d{0,2}/);' } %>
  </div>
  <div class="col-sm-6 mb5">
    <strong>Credit Limit</strong><br>
    <%= f.text_field :credit_limit, { class: 'form-control p7_10 credit_limit', placeholder: 'Credit Limit' } %>
  </div>

  <div class="col-sm-6 mb5">
    <strong>DL Number</strong><br>
    <%= f.text_field :dl_number, { class: 'form-control p7_10 dl-number', placeholder: 'Drug Licence Number' } %>
   </div>
  <div class="col-sm-6 mb5">
    <strong>GST</strong><br> 
    <%= f.text_field :gst_number, { class: 'form-control p7_10 gst-number', placeholder: 'GST' } %>
  </div>

  <div class="col-sm-6 mb5">
    <strong>Expire PO after(days)</strong><br> 
    <%= f.text_field :po_expiry_days, { class: 'form-control p7_10 po_expiry_days', placeholder: 'Days', oninput: 'this.value = this.value.match(/^\d+\.?\d{0,2}/);' } %>
   </div>
</div>

<div class="row" style="margin-top:15px;">
  <div class="col-sm-12 text-center" style="border-bottom:1px solid #ccc;border-top:1px solid #ccc;"><strong>Corporate Address Information</strong></div>
</div>

<div class="row" style="margin-top:15px;">
  <div class="col-sm-4">
    <strong>Country</strong><br>
    <%= f.select :country_id, options_for_select(@countries.collect {|p| [ p.name + " ("+p.abbreviation1+") ", p.id ] },@vendor_location.try(:country_id)), {include_blank: "Select Country"}, {class: 'form-control country', style:'max-height:40px;'} %>
  </div>
</div>

<div class="row" style="margin-top:15px;">
  <div class="col-sm-12">
    <strong>Address</strong><br>
    <%= f.text_field :address, { class: 'form-control p7_10 address', placeholder: "Address" } %>
  </div>
</div>
<div class="row other-facility" style="margin-top:15px;">
  <div class="col-sm-4">
    <strong>Pincode</strong><a href="" class="clear-pincode" style="display:none;font-size: 10px;margin-top: -7px;">  Clear</a><br>
    <%= f.text_field :pincode, { class: 'form-control p7_10 pincode', placeholder: "Pincode", minlength: 5, maxlength: 7, onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' } %>
  </div>
  <div class="col-sm-4">
    <strong>State</strong><br>
    <%= f.text_field :state, { class: 'form-control p7_10 state', placeholder: "State" } %>
  </div>
  <div class="col-sm-4">
    <strong>City</strong><br>
    <%= f.text_field :city, { class: 'form-control p7_10 city', placeholder: "City" } %>
  </div>
</div>

<div class="row vietnam-facility" style="margin-top:15px;">
  <div class="col-sm-4">
    <strong>City</strong><a href="" class="clear-commune" style="display:none;font-size: 10px;margin-top: -7px;">Clear</a><br>
