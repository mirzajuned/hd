    <%= f.text_field :district, { class: 'form-control district p7_10', placeholder: "District" } %>
  </div>
  <div class="col-sm-4">
    <strong>Commune</strong><br>
    <%= f.text_field :commune, { class: 'form-control commune p7_10', placeholder: "Commune"} %>
  </div>
