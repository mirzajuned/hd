//inventory_vendor_location country id check_
function autocomplete_check(country_id){
  if (country_id == 'IN_108') {
    $('#inventory_vendor_location_state').autocomplete("enable");
    $('#inventory_vendor_location_city').autocomplete("enable");
    $('#inventory_vendor_location_pincode').autocomplete("enable");
  } else if (country_id == 'VN_254') {
    $('#inventory_vendor_location_district').autocomplete("enable");
    $('.vietnam-city').autocomplete("enable");
    $('#inventory_vendor_location_commune').autocomplete("enable");inventory_vendor_location_country_id
  } else {
    $('#inventory_vendor_location_state').autocomplete("disable");
    $('#inventory_vendor_location_city').autocomplete("disable");
    $('#inventory_vendor_location_pincode').autocomplete("disable");
    $('.vietnam-city').autocomplete("disable");
  }
}

