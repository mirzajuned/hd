$("#stock-lot-sales-report-modal").html("<%= escape_javascript(render 'stock_movement_report.html.erb') %>")

$('.stock-movement-report-timepicker').timepicker({minuteStep: 5});
var start_date = '<%= @first_date %>'
var end_date = '<%= Date.yesterday %>'
$('.stock-movement-report-start-datepicker').datepicker({
  dateFormat: "yy-mm-dd",
  minDate: start_date,
  maxDate: end_date
});
$('.stock-movement-report-end-datepicker').datepicker({
  dateFormat: "yy-mm-dd",
  minDate: start_date,
  maxDate: end_date
});

$(".stock-movement-report-concerned-person").on('change', function() {
  var user_id = $('#stock_movement_report_user_name').val()
  var start_date = $('#stock_movement_report_start_date').val()
  var end_date = $('#stock_movement_report_end_date').val()

  var collection_data = `&user_id=${user_id}&start_date=${start_date}&end_date=${end_date}`

  var download_report_setting = $(".download_report_setting");
  for (var i = download_report_setting.length - 1; i >= 0; i--) {
    var collection_setting = $(download_report_setting[i]).attr('href');
    $(download_report_setting[i]).attr('href', collection_setting + collection_data)
  }
}).trigger('change')

