$("#stock-lot-sales-report-modal").html("<%= escape_javascript(render 'lot_sales_report.html.erb') %>")

$('.sales-report-timepicker').timepicker({minuteStep: 5});
$('.sales-report-start-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});
$('.sales-report-end-datepicker').datepicker({
  dateFormat: "yy/mm/dd"
});

$(".sales-report-concerned-person").on('change', function() {
  var user_id = $('#sales_report_user_name').val()
  var start_date = $('#sales_report_start_date').val()
  var start_time = $('#sales_report_start_time').val()
  var end_date = $('#sales_report_end_date').val()
  var end_time = $('#sales_report_end_time').val()
  var format = $('#sales_report_format').val()

  var collection_data = `&user_id=${user_id}&start_date=${start_date}&start_time=${start_time}&end_date=${end_date}&end_time=${end_time}&format=${format}`

  var download_report_setting = $(".download_report_setting");
  for (var i = download_report_setting.length - 1; i >= 0; i--) {
    var collection_setting = $(download_report_setting[i]).attr('href');
    $(download_report_setting[i]).attr('href', collection_setting + collection_data)
  }
}).trigger('change')

