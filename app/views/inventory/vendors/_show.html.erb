<% currency_symbol = current_facility.currency_symbol %>
<div class="container-fluid" id="freeInvoiceEdit" style="border-bottom:1px solid #eee;">
  <h3 class="text-center" style="color: #00BFFF"><%= @vendor.name %></h3>
  <br>
  <div class="col-md-12 mb5">
    <div class="col-md-4">
      <h4 style="margin-top:0; color: #1E90FF">Vendor Details&nbsp;</h4>
    </div>
    <div class="col-md-4">
      <%= link_to edit_inventory_vendor_path(id: @vendor.id.to_s, store_id: @store_id), id: 'edit_vendor', data: { remote: true, toggle: 'modal', target: '#vendor-modal' }, class: 'btn btn-primary btn-xs' do %><i class="fa fa-edit"></i> Edit<% end %>
    </div>
    <div class="col-md-4">
      <% if @vendor.is_deleted %>
        <%= link_to enable_vendor_inventory_vendors_path(id: @vendor.id.to_s, store_id: @store_id), id: 'enable_vendor', data: { remote: true }, class: 'btn btn-success btn-xs' do %>Enable Vendor<% end %>
      <% else %>
        <%= link_to inventory_vendor_path(id: @vendor.id.to_s, store_id: @store_id), method: :delete, id: 'delete_vendor', data: { remote: true }, class: 'btn btn-danger btn-xs' do %><i class="fa fa-ban"></i> Disable Vendor<% end %>
      <% end %>
    </div>
  </div>
