      <b>Company:&nbsp;&nbsp; <%= @vendor.company_name&.titleize %></b>
    </div>
    <div class="col-md-6">
      <b>Email:&nbsp;&nbsp; <%= @vendor.email %></b>
    </div>
  </div>
  <div class="row mb5">
    <% if @vendor.dl_number.present? %>
      <div class="col-md-6">
        <b>DL Number:&nbsp;&nbsp; <%= @vendor.dl_number %></b>
      </div>
    <% end %>
  <% if @vendor.gst_number.present? %>
