$("#cancelModal").modal('hide')
var row = $('.tax-invoice-list #<%= @tax_invoice.id %>')
row.trigger('click')

<% if @tax_invoice.cancelled? %>
  row.find('.status').text('Cancelled')
  notice = new PNotify({ title: 'Cancelled', text: 'This Transaction is Cancelled', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });

$('#confirmation-modal').modal('hide')
$('.modal-backdrop').hide();