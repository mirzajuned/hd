var row = $('.tax-invoice-list #<%= @tax_invoice.id %>')
row.trigger('click')

<% if @tax_invoice.approved? %>
  row.find('.status').text('Approved')
  notice = new PNotify({ title: 'Approved', text: 'This Transaction is approved', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });