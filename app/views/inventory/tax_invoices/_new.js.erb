function validate_tax_invoice_form() {
	$("#inventory_tax_invoice_form").validate({
    rules: {
      "inventory_tax_invoice[transportation_mode]": {
        required: true,
      },
      "inventory_tax_invoice[transportation_transaction_id]": {
        required: true,
      },
      "inventory_tax_invoice[delivery_date]": {
        required: true,
      },
      "inventory_tax_invoice[taxable_amount]": {
        required: true,
      },
      "inventory_tax_invoice[total_amount]": {
        required: true,
        min: 1,
      },
    },
    messages: {
      "inventory_tax_invoice[transportation_mode]": {
        required: "Required"
      },
      "inventory_tax_invoice[transportation_transaction_id]": {
        required: "Required"
      },
      "inventory_tax_invoice[delivery_date]": {
      	required: "Required"
      },
      "inventory_tax_invoice[taxable_amount]": {
      	required: "Required"
      },
      "inventory_tax_invoice[total_amount]": {
      	required: "Required"
      }
    },
    errorPlacement: function (error, element) {
      var elem = $(element);
      error.insertAfter(element);
      if(elem.hasClass("select2-hidden-accessible")) {
        element = $("#select2-" + elem.attr("id") + "-container").parent();
        error.insertAfter(element);
      } else {
        error.insertAfter(element);
      }
    }
  });
}
validate_tax_invoice_form()