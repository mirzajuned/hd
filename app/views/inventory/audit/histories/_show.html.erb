<% currency_symbol = current_facility.currency_symbol %>
<div id="<%= @history.id %>">
  <h3 class="text-center" style="color: #00BFFF"><%= @history.user_name&.upcase %></h3>
  <br>
  <div class="col-lg-12 col-md-12 col-sm-12">
    <div class="col-lg-6">
      <h4 style="margin-top:0; color: #1E90FF;">Item Details&nbsp;
      </h4>
    </div>
  </div>

  <div id="item_information" class="col-lg-12 col-md-12 col-sm-12">

    <div class="row" style="margin-bottom: 5px">
      <div class="col-md-12">
        <div class="col-md-3">
          <span class="variant_code">Variant Code:</span>
        </div>
        <div class="col-md-3">
          <strong style="font-size: 80%"><%= @history.variant_code %></strong>
        </div>
        <div class="col-md-2">
          <span class="description">Batch No:</span>
        </div>
        <div class="col-md-4">
          <strong><%= @history.batch_no %></strong>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-3">
          <span class="item_code">Stock Value:</span>
        </div>
        <div class="col-md-3">
          <strong><%= @history.stock_value&.abs %>&nbsp;&nbsp;(<%= @history.flow%>)</strong>
        </div>
        <div class="col-md-3">
          <span class="stock">Amount Value:</span>
        </div>
        <div class="col-md-3">
          <strong><%= @history.amount_value&.abs %>&nbsp;&nbsp;(<%= @history.flow%>)</strong>
        </div>
      </div>
    </div><br>

    <b style="color: #1E90FF">Transaction Details:</b>
    <div class="row check-font">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Sl. No.</th>
            <th>Date</th>
            <th>Lot Type</th>
            <th>Flow</th>
            <th>Stock Before</th>
            <th>Stock After</th>
            <th>Amount Before</th>
            <th>Amount After</th>
            <!-- <th>Total Txn Cost</th>
            <th>Lot Value With Tax</th> -->
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td><%= @history.transaction_date %></td>
            <td><%= @history.sub_store_name&.titleize %></td>
            <td><%= @history.flow %>&nbsp;(<%= @history.transaction_type %>)</td>
            <td><%= @history.stock_before %></td>
            <td><%= @history.stock_after %></td>
            <td><%= @history.amount_before %></td>
            <td><%= @history.amount_after %></td>
            <!-- <td><%#= @history.total_transaction_cost %></td> -->
            <!-- <td><%#= @history.amount_after&.round(2) %></td> -->
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style type="text/css">
  .table-add-item td{
    padding: 5px 5px 0;
  }
</style>

<script type="text/javascript">
  $('#btn_remove_item_confirm').on('click', function(){
    $('#input_remove_confirmation').show()
    $('#verified_item_remove').show()
    $(this).hide()
    $('#verified_item_remove').attr('disabled','disabled')
    $(".variant_code").addClass("glow-animation")
  })

  $('#input_remove_confirmation').on('keyup', function(){
    if($(".variant_code_value").text().trim() === $(this).val()){
      $('#verified_item_remove').removeAttr('disabled')
    } else {
      $('#verified_item_remove').attr('disabled', 'disabled')
    }

  })

  $('.btn_remove_lot_confirm').on('click', function(){
    $('.verified_lot_remove').hide()
    $('.btn_remove_lot_confirm').show()
    $(this).siblings('.verified_lot_remove').show()
    $(this).hide()
  })
</script>

<style type="text/css">
  .check-font table tr th {
    padding: 2px 5px;
    text-align: center;
    background-color: #4CAF50;
    color: white;
  }

  .check-font table tr td {
    padding: 2px 5px;
    text-align: center;
  }

  .check-font {
    font-size: 11px;
  }
</style>
