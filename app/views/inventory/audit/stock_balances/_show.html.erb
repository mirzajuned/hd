<% if @histories.size > 0 %>
  <div id="<%= @balance&.id %>">
    <div id="item_information" class="col-lg-12 col-md-12 col-sm-12">
      <h3 style="color: #00BFFF">Transaction Details:</h3>
      <div class="row check-font">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Sl. No.</th>
              <th>Date</th>
              <th>User Name</th>
              <th>Sub-Store</th>
              <th>Flow</th>
              <th>Stock Before</th>
              <th>Stock After</th>
              <th>Amount Before</th>
              <th>Amount After</th>
              <th>Amount Value</th>
              <th>Type</th>
            </tr>
          </thead>
          <tbody>
            <% @histories.each_with_index do |history, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= history.transaction_date %></td>
                <td><%= history.user_name %></td>
                <td><%= history.sub_store_name&.titleize %></td>
                <td><%= history.flow %>&nbsp;(<%= history.transaction_type %>)</td>
                <td><%= history.stock_before %></td>
                <td><%= history.stock_after %></td>
                <td><%= history.amount_before %></td>
                <td><%= history.amount_after %></td>
                <td><%= history.amount_value %></td>
                <td><%= history.transaction_type %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <h3 style="text-align: center;">No Transactions Found</h3>
<% end %>

<style type="text/css">
  .table-add-item td{
    padding: 5px 5px 0;
  }

  .check-font table tr th {
    padding: 2px 5px;
    text-align: center;
    background-color: #4CAF50;
    color: white;
  }

  .check-font table tr td {
    padding: 2px 5px;
    text-align: center;
  }

  .check-font {
    font-size: 11px;
  }
</style>
