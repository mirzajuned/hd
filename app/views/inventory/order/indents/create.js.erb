jQuery("#inventory-modal").modal("hide")

$(".inventory-table-body").html("<%= escape_javascript(render partial: 'inventory/order/indents/index_body.html.erb') %>")

$('.inventory-items .inventory-list-row').unbind()
$('.inventory-items .inventory-list-row').on('click', function(e){
  e.preventDefault();
  var _id =  $(this).attr('id');
  $('.inventory-list-row').css('background-color', '')
  $(this).css('background-color', '#f0f0f0')
  $.ajax({
    type: 'GET',
    data: {
      store_id: '<%= @inventory_store.id %>',
      remote: true
    },
    url: '/inventory/order/indents/'+_id,
    success: function(){
    }
  })
})
