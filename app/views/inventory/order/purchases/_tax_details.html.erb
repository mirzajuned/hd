<div class="col-md-12 purchase-invoice-information">
  <div class="col-sm-4 font-size">
    <!-- <div class="row"> -->
      <!-- <div class="col-md-8"> -->
        <%= f.text_area :comments, class: 'form-control', placeholder: 'Comments' %>
      <!-- </div> -->
      <!-- <div class="col-md-4">
        <div id='tax-cage' class="col-sm-12"></div>
      </div> -->
    <!-- </div> -->
  </div>
  <div class="col-sm-4">
    <div class="col-md-12">
      <div class="col-md-12 mt10">
        <b>Global&nbsp;Discount:</b>
      </div>
    </div>
    <div class="col-md-12 mt10">
      <div class="col-md-8">
        <div class="input-group">
          <%= hidden_field_tag 'hdn_global_discount', f.object.hdn_global_discount.present? ? f.object.hdn_global_discount : 0, class: 'hdn_global_discount' %>
          <%= text_field_tag 'global_discount', f.object.global_discount.present? ? f.object.global_discount : 0, type: 'number', class: 'form-control discount-amount modalRequest_input_style info-text global_discount', style: 'width:110%;text-align:left;height: 50%;border: 1px solid #ccc;background-image:none;' %>
          <span class="input-group-addon form-control-custom-slash" style="padding: 0px;border: none">|</span>
          <%=select_tag "global_discount_type", options_for_select(["#{current_facility.currency_symbol}", '%'], f.object.global_discount_type.present? ? f.object.global_discount_type : current_facility.currency_symbol), class: 'form-control global_discount_type', id: 'global_discount_type', style: "width:100%;text-align:left;background-color: white;height: 34px;border: 1px solid #ccc;background-image:none;min-width: 45px;" %>
        </div>
      </div>
      <div class="col-md-4">
        <%= button_tag 'Apply', type: 'button', class: 'btn btn-primary btn-xs apply_global_discount disabled' %>
      </div>
    </div>
  </div>
  <div class="col-sm-4 text-right">
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6 font_size">
          <b>Gross Amount</b>
        </div>
        <div class="col-sm-1 text-center font_size">
          :
        </div>
        <div class="col-sm-4 font_size">
          <%= f.text_field :total_cost, class: 'fi_input_style fullname input_focus_none', placeholder: 'Amount', style: 'width:92%',readonly: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6 font_size">
          <b>Total Discount</b>
        </div>
        <div class="col-sm-1 text-center font_size">
          :
        </div>
        <div class="col-sm-3 font_size">
          <%= f.text_field :discount, class: 'fi_input_style input_focus_none', placeholder: 'Amount', style: 'width:92%;', readonly: true %>
        </div>
      </div>
    </div>
    <div class="row" id="tax_details"></div>
    <%= f.hidden_field :tax_amount, class: 'fi_input_style input_focus_none', placeholder: 'Amount', style: 'width:92%; background-image: none;', readonly: true %>
    <%= f.hidden_field :version, class: 'fi_input_style input_focus_none', placeholder: 'Amount', style: 'width:92%; background-image: none;', value: "1.0.1", readonly: true %>
    <% if false %>
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6 font_size">
          <b>Credit Adjustment</b>
        </div>
        <div class="col-sm-1 text-center font_size">
          :
        </div>
        <div class="col-sm-4 font_size" id="credit_adjustment">
          <%= f.text_field :credit_adjustment, class: 'fi_input_style input_focus_none', placeholder: 'Amount', style: 'width:92%;' %>
        </div>
      </div>
    </div>
    <% end %>

    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6 font_size">
          <b>Other Charges</b>
        </div>
        <div class="col-sm-1 text-center">
          :
        </div>
        <div class="col-sm-4 font_size">
          <%= f.text_field :total_other_charges_amount, class: 'fi_input_style input_focus_none',id: 'total_other_charges_amount', placeholder: 'Amount', style: 'width:92%',readonly: true %>
          <%= f.hidden_field :remaining_total_other_charges_amount %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6 font_size">
          <b>Net Amount</b>
        </div>
        <div class="col-sm-1 text-center font_size">
          :
        </div>
        <div class="col-sm-4 font_size">
          <%= f.text_field :net_amount, class: 'fi_input_style purchase-net-amount input_focus_none', placeholder: 'Amount', style: 'width:92%',readonly: true %>
        </div>
      </div>
    </div>
  </div>
</div>