$("#cancelModal").modal('hide')
var row = $('.purchase-order-list #<%= @purchase_order.id %>')
row.trigger('click')
<% if @purchase_order.cancelled? %>
  row.find('.order-status b').text('Cancelled')
  notice = new PNotify({ title: 'Cancelled', text: 'This Purchase Order is Cancelled', type: 'success' });
<% else %>
  notice = new PNotify({ title: 'Error', text: 'Please try again', type: 'error' });
<% end %>
notice.get().click(function(){ notice.remove() });
$('#confirmation-modal').modal('hide')
$('.modal-backdrop').hide();
