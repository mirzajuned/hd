<% if flash[:error].present? %>
  notice = new PNotify({ title: 'Error', text: "<%= flash[:error] %>", type: 'error' });
<% else %>
	$("#communication_settings-table").html("<%= escape_javascript(render 'communication_settings/approved_numbers/approved_numbers.html.erb') %>")
	$("#communication-whatsapp-number-modal").modal("hide")
	<%= render partial: 'communication_settings/approved_numbers/active.js.erb' %>
	<%= render partial: 'communication_settings/approved_numbers/disable.js.erb' %>
<% end %>
notice.get().click(function(){ notice.remove() });