<% if @communication_template.is_disable == false %>
  $('#template_setting_disable_button_<%= @communication_template.id %>').html(`
        <div class="btn btn-danger btn-xs btn-disable-approve_template" style="display: inline;" data-toggle="modal" data-target="#confirmation-modal" data-category='<%= @communication_template.template_title %>'>Disable</div>
      <%= escape_javascript(link_to 'Confirm', toggle_disable_template_communication_setting_path(id: @communication_template.id, is_disable: true), class: "btn btn-danger", remote: true, style: "display: none;", data: {dismiss: "modal"}) %>
    `)
  $('#template_edit_button_<%= @communication_template.id %>').css({'visibility': 'visible'})

<% else %>
  $('#template_setting_disable_button_<%= @communication_template.id %>').html(`
      <div class="btn btn-primary btn-xs btn-active-approve_template" style="display: inline;" data-toggle="modal" data-target="#confirmation-modal" data-category='<%= @communication_template.template_title %>'>Active</div>
      <%= escape_javascript(link_to 'Confirm', toggle_disable_template_communication_setting_path(id: @communication_template.id, is_disable: false), class: "btn btn-danger", remote: true, style: "display: none;", data: {dismiss: "modal"}) %>
      `)
  $('#template_edit_button_<%= @communication_template.id %>').css({'visibility': 'hidden'})
<% end %>
<%= render partial: 'communication_settings/approved_templates/active.js.erb' %>
<%= render partial: 'communication_settings/approved_templates/disable.js.erb' %>
