<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">View Template and Number</h4>
      <div class="row" style="margin-top:15px;">
				<div class="col-sm-6">
			  	<strong>Linked Mobile Number: </strong><strong><%= @communication_setting.try(:communication_number).try(:country_code)%><%=@communication_setting.communication_number.communication_number%></strong> 
				</div>
			</div>
			<div class="row" style="margin-top:15px;">
				<div class="col-sm-12">
			  	<strong>Templates: </strong>
					<% @templates = CommunicationTemplate.in(id: @communication_setting.communication_template_ids) %>
					<table class="table table-primary table-bordered">
						<thead>
							<tr>
								<th>Template Title</th>
								<th>Template Content</th>
							</tr>
						</thead>
						<tbody>
							<%@templates.each do |template|%>
								<tr>
									<td><%= template.template_title %></td>
									<td><%= template.template_content %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>				
			</div>
			<div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	     </div>
		</div>
  </div>
</div>

<style type="text/css">
	#communication-template-whatsapp-view-modal .modal-dialog{
		max-width: 80%;
		width: 100%;
	}
	 table tr td, textarea{
    word-wrap: break-word !important;
  }
</style>