<div class="modal-dialog modal-lg" style="width:99%">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">New Receipt Item Cards</h4>
    </div>
    <%= form_tag(invoice_item_cards_path, :method => "post", data: {remote: true}) do %>
      <input type="hidden" name="invoice_service_card_id" class="form-control" value="<%= @service_card.id.to_s %>">
      <input type="hidden" name="user_id" class="form-control" value="<%= current_user.id %>">
      <input type="hidden" name="facility_id" class="form-control" value="<%= current_facility.id %>">
      <input type="hidden" name="organisation_id" class="form-control" value="<%= current_facility.organisation_id %>">
      <input type="hidden" name="created_from" class="form-control" value="Settings">
      <div class="modal-body">
        <% if @invoice_setting.tax_enabled_opd && false %>
          <%= render partial: 'new_tax_enabled.html.erb' %>
        <% else %>
          <%= render partial: 'new_tax_disabled.html.erb' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= submit_tag "Save", class: "btn btn-success" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>


<style type="text/css">
  .instruction-for-doctor-item-false * {
    color: #f00;
  }
  .instruction-for-doctor-item-true * {
    color: #1CAF9A;
  }
</style>