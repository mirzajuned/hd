<div class="row">
  <div class="col-md-12">
    <b>Tip: If Type is Doctor Please Dont include Doctor Name in Item Name.</b><br>
    Example:
    <div class="row instruction-for-doctor-item-header">
      <div class="col-md-1"></div>
      <div class="col-md-3">Item Name</div>
      <div class="col-md-2">Type</div>
      <div class="col-md-2">Quantity</div>
      <div class="col-md-2">Amount</div>
      <div class="col-md-2">Users</div>
    </div>
    <div class="row instruction-for-doctor-item-false">
      <div class="col-md-1"><i class="fa fa-times"></i></div>
      <div class="col-md-3">Surgeon Charges (Dr.John Doe)</div>
      <div class="col-md-2">User</div>
      <div class="col-md-2">1</div>
      <div class="col-md-2">100000</div>
      <div class="col-md-2">Dr.John Doe</div>
    </div>
    <div class="row instruction-for-doctor-item-true">
      <div class="col-md-1"><i class="fa fa-check"></i></div>
      <div class="col-md-3">Surgeon Charges</div>
      <div class="col-md-2">User</div>
      <div class="col-md-2">1</div>
      <div class="col-md-2">100000</div>
      <div class="col-md-2">Dr.John Doe</div>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12 instruction-for-doctor-item-false">
        <b>Note: If Item Name is Kept empty it wont be saved.</b>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="row mb5">
      <div class="col-md-2">
        Item Name
      </div>
      <div class="col-md-1">
        Type
      </div>
      <div class="col-md-1">
        Quantity
      </div>
      <div class="col-md-1">
        Amount
      </div>
      <div class="doctor-text-here col-md-1 col-md-3-shared">Users</div>
      <div class="col-md-2 col-md-3-shared">
        Tax Group
      </div>
      <div class="col-md-1 text-center">
        Tax Incl.
      </div>
      <div class="col-md-1">
        Tax
      </div>
      <div class="col-md-1">
        Total Amount
      </div>
      <div class="col-md-1">
        SAC
      </div>
    </div>
    <% 10.times do |i| %>
      <div class="row invoice-item-card_<%=i%> invoice-item-card-row mb10">
        <div class="col-md-2">
          <input type="text" name="invoice_item_card[<%=i%>][item_name]" class="form-control" placeholder="Item Name">
        </div>
        <div class="col-md-1">
          <select class="form-control item-type_<%=i%>" name="invoice_item_card[<%=i%>][item_type]" >
            <option value="Item">Item</option>
            <option value="User">User</option>
          </select>
        </div>
        <div class="col-md-1">
          <input type="number" name="invoice_item_card[<%=i%>][quantity]" class="form-control invoice_item_card_quantity" value="1">
        </div>
        <div class="col-md-1">
          <input type="number" name="invoice_item_card[<%=i%>][amount]" class="form-control invoice_item_card_amount" value="0">
        </div>
        <div class="list-of-doctors col-md-1 col-md-3-shared">
          <input type='hidden' name='invoice_item_card[<%=i%>][item_id]' class='form-control' value='<%= BSON::ObjectId.new() %>'>
          <span class="doctor_msg" style="opacity:0.3">Select Type: User</span>
        </div>
        <div class="col-md-2 col-md-3-shared">
          <select name="invoice_item_card[<%=i%>][tax_group_id]" class='form-control invoice_item_card_tax_group'>
            <option value="" data-tax-rate='0'> </option>
            <% @tax_groups.each do |tax_group| %>
              <option value="<%= tax_group.id.to_s %>" data-tax-rate='<%= tax_group.rate %>'><%= tax_group.name %> - <%= tax_group.rate %>%</option>
            <% end %>
          </select>
        </div>
        <div class="col-md-1">
          <div class="ckbox ckbox-primary" style="margin-left:25px;">
            <input type="checkbox" name="invoice_item_card[<%=i%>][tax_inclusive]" id='tax_inclusive_<%= i %>' class="invoice_item_card_tax_inclusive" value='true'>
            <label for='tax_inclusive_<%= i %>'></label>
          </div>
        </div>
        <div class="col-md-1">
          <input type="number" name="invoice_item_card[<%=i%>][taxable_amount]" class="form-control invoice_item_card_taxable_amount" value="0" readonly="readonly">
          <input type="hidden" name="invoice_item_card[<%=i%>][non_taxable_amount]" class="form-control invoice_item_card_non_taxable_amount" value="0" readonly="readonly">
        </div>        
        <div class="col-md-1">
          <input type="number" name="invoice_item_card[<%=i%>][item_price]" class="form-control invoice_item_card_item_price" value="0" readonly='readonly'>
        </div>
        <div class="col-md-1">
          <input type="text" name="invoice_item_card[<%=i%>][sac]" class="form-control invoice_item_card_sac" value="">
        </div>
      </div>
    <% end %>
  </div>
</div>