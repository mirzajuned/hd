$("#investigation-modal").html('<%= escape_javascript(render "investigation/investigation_details/investigation_performed_form.html.erb") %>')

function investigation_page(){
  $("#edit-investigation-form").validate({
    rules: {
      "investigation[performed_outside_by]": {
        required: true
      },
      "investigation[performed_at]": {
        required: true
      }
    },
    messages: {
      "investigation[performed_outside_by]": {
        required: "Who Performed the Test?"
      },
      "investigation[performed_at]": {
        required: "Cant be Blank"
      }
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  })
}