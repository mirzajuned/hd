<% @data.each do |key, value| %>
  <% key = key.to_i + params[:row_count].to_i %>

  <div class='row ophthal-investigation-row mb5'>
    <input type='hidden' name='ophthal_investigation[<%= key %>][investigation_id]' class='form-control investigation_id' value='<%= value["investigation_id"] %>'>
    <div class='col-sm-5'>
      <input type='text' name='ophthal_investigation[<%= key %>][investigationname]' class='form-control investigationname p5_10' value='<%= value["investigationname"] %>'>
    </div>
    <div class='col-sm-5'>
      <select class='form-control investigationside p5_10' name='ophthal_investigation[<%= key %>][investigationside]'>
        <% if current_user.role_ids.include?(158965000) %>
          <option <%= "selected='selected'" if value["investigationside"] == "40638003" %> value='40638003'>B/E</option>
        <% end %>
        <option <%= "selected='selected'" if value["investigationside"] == "18944008" %> value='18944008'>R</option>
        <option <%= "selected='selected'" if value["investigationside"] == "8966001" %> value='8966001'>L</option>
      </select>
    </div>
    <div class='col-sm-2'>
      <button class='btn btn-danger btn-xs delete-row'>&times;</button>
    </div>
  </div>
<% end %>