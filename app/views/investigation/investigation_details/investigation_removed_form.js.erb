$("#investigation-modal").html('<%= escape_javascript(render "investigation/investigation_details/investigation_removed_form.html.erb") %>')

function investigation_page(){
  $("#edit-investigation-form").validate({
    rules: {
      "investigation[removing_reason]": {
        required: true
      }
    },
    messages: {
      "investigation[removing_reason]": {
        required: "Reason Is Required"
      }
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  })
}