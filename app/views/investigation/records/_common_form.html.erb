<div class="row mb10">
  <div class="col-md-4">
    <%= f.text_field :investigation_name,:value => @investigation_advised.name ,class: "fi_input_style",style: 'width: 100%'%>
  </div>
  <% if !["RadiologyRecord","OphthalmologyRecord"].include?@type %>
      <div class="col-md-4 ">
        <%= f.text_field :specimen_type ,class: "fi_input_style ",placeholder: "Specimen Type" ,style: 'width: 100%'%>
      </div>

      <div class="col-md-4 pull-right">
        <%= f.text_field :specimen_date ,class: "fi_input_style datepicker pull-right",placeholder: "Specimen Date"%>
  </div>
  <% end %>
</div>
<div class="row mb10">
  <% if !["RadiologyRecord","OphthalmologyRecord"].include?@type %>
      <div class="col-md-offset-4 col-md-4">
        <%= f.text_field :investigation_val,class: "form-control",placeholder: "Result" %>
      </div>

      <div class="col-md-4">
        <%= f.text_field :normal_range,value: lab_test.try(:normal_range),class: "form-control",placeholder: "Normal Range" %>
      </div>
  <% else %>
      <div class="col-md-offset-4 col-md-8">
        <%= f.text_area :investigation_val,class: "form-control",placeholder: "Findings" %>
      </div>
<% end %>
</div>
<div class="row mb10" >
  <div class=" col-md-offset-4 col-md-4">
    <%= f.text_area :investigation_comment ,class: "form-control",placeholder: "Investigation Remark" %>
  </div>
  <% if current_user.role_ids.include?158965000 %>
      <div class="col-md-4">
        <%= f.text_area :doctors_remark,class: "form-control",placeholder: "Doctor's Remark" %>
      </div>
  <% end %>
</div>
