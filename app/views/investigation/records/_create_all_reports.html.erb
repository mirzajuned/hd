        $(this).datepicker({
            format: 'dd/mm/yy'
        });
    });
    $('#fill-lab-record').on('shown.bs.modal', function (e) {
        // do something..
        var modal_height = $('.template-new-sidebar').height();
        $('.template-sidebar').css('height',modal_height+'px')
    })

</script>