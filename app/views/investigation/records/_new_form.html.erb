<div class="row" style="margin-left: 20px">
  <h3 class="col-md-4">
    INVESTIGATION
  </h3>

  <% if @type == 'LabRecord' %>
      <h5 class="col-md-4 text-center">
        <strong>RESULT</strong>
      </h5>

      <h5 class="col-md-4 text-center">
        <strong>NORMAL RANGE</strong>
      </h5>
  <% else %>
      <h5 class="col-md-7 text-center">
        <strong>FINDINGS</strong>
      </h5>
  <% end %>

</div>
    <% if @type.to_s == "LabRecord" %>
        <%= render partial: 'investigation/records/laboratory/lab_new_form',locals: {f: f,lab_test: lab_test} %>
    <% elsif @type.to_s == "RadiologyRecord" %>
        <%= render partial: 'investigation/records/radiology/radiology_new_form',locals: {f: f,lab_test: other_test} %>
    <% elsif @type.to_s == "OphthalmologyRecord" %>
        <%= render partial: 'investigation/records/ophthalmology/ophthal_new_form',locals: {f: f,lab_test: other_test} %>
    <% end %>

    <%= f.fields_for :record_history do |record| %>
        <%= record.hidden_field :user_id,:value => current_user.id.to_s%>
        <%= record.hidden_field :action,:value => 'C'%>
        <%= record.hidden_field :actiontime,:value => Time.current%>
        <%= record.hidden_field :template_type,:value => @type%>
    <%end%>



