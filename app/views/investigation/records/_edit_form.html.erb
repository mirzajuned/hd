<div class="panel-heading" style="padding: 0;">
  <div class="row mb10" style="margin-left: 20px;">
    <h5 class="col-md-4 text-center">
      <strong>INVESTIGATION</strong>
    </h5>
    <% if lab_test._type == 'LabRecord' %>
        <h5 class="col-md-4 text-center">
          <strong>RESULT</strong>
        </h5>

        <h5 class="col-md-4 text-center">
          <strong>NORMAL RANGE</strong>
        </h5>
    <% else %>
        <h5 class="col-md-7 text-center">
          <strong>FINDINGS</strong>
        </h5>
    <% end %>

  </div>
</div>
<div class="panel-body">
  <% if @type.to_s == "LabRecord" %>
      <%= render partial: 'investigation/records/laboratory/lab_edit_form',locals: {f: f,lab_test: lab_test} %>
  <% elsif @type.to_s == "RadiologyRecord" %>
      <%= render partial: 'investigation/records/radiology/radio_edit_form',locals: {f: f,lab_test: lab_test} %>
  <% elsif @type.to_s == "OphthalmologyRecord" %>
      <%= render partial: 'investigation/records/ophthalmology/ophthal_edit_form',locals: {f: f,lab_test: lab_test} %>
  <% end %>

  <%= f.fields_for :record_history do |record| %>
      <%= record.hidden_field :user_id,value: current_user.id%>
      <%= record.hidden_field :template_type,value: @type.to_s%>
      <%= record.hidden_field :actiontime,value: Time.current%>
      <%= record.hidden_field :action,value: "U"%>
  <%end%>
</div>



