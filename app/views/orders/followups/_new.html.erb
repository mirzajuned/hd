<div class="modal-dialog modal-lg" style="width: 80%">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Counselling Followup</h4>
    </div>
      <div class="modal-body">
        <div style="padding: 10px; border: 1px solid #e3e3e3;">
          <%= simple_form_for @order_followup, url: orders_followups_path, class: "order", method: :post, remote: true  do |f| %>
            <%= hidden_field_tag "case_sheet_id", @case_sheet.id.to_s %>
            <%= f.hidden_field :appointment_id, value: @appointment.id.to_s %>
            <%= f.hidden_field :created_by_id, value: current_user.id.to_s %>
            <%= f.hidden_field :created_by, value: current_user.fullname %>
            <%= f.hidden_field :counselling_date, value: Time.current %>
            <%= render partial: 'form.html.erb', locals: { f: f, submit_btn: "Save - Counsel Followup" } %>
          <% end %>
        </div>  
      </div>
  </div>
</div>

<style>
  #order-procedures-table.table-striped > tbody > tr:nth-child(2n+1) > td, .table-striped > tbody > tr:nth-child(2n+1) > th {
    background-color: #fff;
  }
  #procedures .row:nth-child(even) {
    background-color: #e3e3e3;
  }
  #order_followup_followup_time, #order_followup_followup_date{
    cursor: pointer;
    background-color: #fff,
  }
</style>