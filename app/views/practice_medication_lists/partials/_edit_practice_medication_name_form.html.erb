<%= form_for @medicationlistid, url: practice_medication_lists_update_name_path, :method => :patch, :remote => true, :html => {:class => 'update-medication-name-form form_validator', :id => "update-medication-name-form"} do |f| %>
<input type="hidden" name="level" value="<%= @level %>">
  <div class="modal-body">
    <div class="row">
        <div class="col-md-12">
          <div class="col-md-4">
            <label>Medicine Name</label>
            <%= f.text_field :name, :maxlength => 40, :size => 30, :class => 'form-control name_required', :placeholder => "Medicine Name" %>
          </div>          
          <div class="col-md-4">
            <label>Generic Name</label>
            <%= f.text_field :contents, :maxlength => 40, :size => 30, :class => 'form-control name', :placeholder => "Generic Name" %>
          </div>
          <div class="col-md-4">
            <label>Medicine Type</label>
            <%#= f.text_field :med_type, :maxlength => 40, :size => 30, :class => 'form-control name', :placeholder => "Medicine Type" %>
            <%= f.select :med_type, options_for_select([['Select',''],['Tablets','Tablets'],['Capsules','Capsules'],['Sachets','Sachets'],['Syrups','Syrups'],['Spray','Spray'],['Powder','Powder'],['Eyedrops','Eyedrops'],['Vaccines','Vaccines'],['Ointment','Ointment'],['Granules','Granules'],['Inhalers','Inhalers'],['Rotacaps','Rotacaps'],['Oraldrops','Oraldrops'],['Eardrops','Eardrops'],['Cream','Cream'],['Aerosols','Aerosols'],['Cartridges','Cartridges'],['Gel','Gel'],['Enema','Enema'],['Suppository','Suppository'],['Pessary','Pessary'],['Lotion','Lotion'],['Nosedrops','Nosedrops'],['Solution','Solution'],['Suspension','Suspension'],['Injectable','Injectable']],selected: @medicationlistid.med_type),{},{ :class=> "form-control" } %>                        
          </div>
        </div>
    </div>

    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :listid, :value => "#{@medicationlistid.id}" %>

  </div>
  <div class="modal-footer">
    <div class="pull-right"> <!-- Action Buttons starts -->
      <button aria-hidden="true" class="btn btn-success updatemedicationname">Update Name</button>
      <button aria-hidden="true" class="btn btn-info" data-dismiss="modal">Do not Save & Close</button>
    </div> <!-- Action Buttons ends -->  
  </div>
<% end %>
<script>

function add_validation(){
  $("#update-medication-name-form").validate({
    errorElement: 'div',
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    },
    rules: {
      "my_practice_medication_list[name]":{
        required: true
      }
    }
  });
}   

add_validation();
</script>