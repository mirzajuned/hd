<div class="modal-dialog modal-md">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Copayment</h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-4 col-md-offset-2">
          <b>Name:</b> <%= @copay.service %>
        </div>
        <div class="col-md-4">
          <b>Amount:</b> <%= @copay.amount %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to copayments_print_copay_receipt_path(id: @copay.id.to_s, format: "pdf"), :target => "_blank", class: "btn btn-info pull-left" do %><i class="fa fa-print fa-xs"></i> Print <% end %>
      <%= link_to edit_copayment_path(id: @copay.id, admission_id: @copay.admission_id), class: "btn btn-primary", :data => {:remote => true, 'toggle' =>  "modal", 'target' => '#insurance-modal'} do %><i class="fa fa-edit fa-xs"></i> Edit <% end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>