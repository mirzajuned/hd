<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog modal-md">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for(@copay, :remote=>true) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Copayment</h4>
      </div>
      <div class="modal-body">
        <%= f.hidden_field :admission_id, value: @admission.id %>
        <%= f.hidden_field :patient_id, value: @patient.id %>
        <%= f.hidden_field :organisation_id, value: @organisation.id %>
        <%= f.hidden_field :facility_id, value: @facility.id %>
        <%= f.hidden_field :user_id, value: @user.id %>

        <div class="row">
          <div class="col-md-4 col-md-offset-2">
            <b>Name:</b>
            <%= f.text_field :service, value: "Co-Payment", class: "form-control" %>
          </div>
          <div class="col-md-4">
            <b>Amount:</b>
            <%= f.number_field :amount, value: "", class: "form-control copay_amount" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Save", { class: "btn btn-success", :onclick => 'copay_new()' } %>
        
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>

<style type="text/css">
  input.error, select.error {
    border-color: #b94a48;
    background-image: none;
  }
  input.valid, select.valid {
    border-color: #468847;
    background-image: none;
  }
</style>