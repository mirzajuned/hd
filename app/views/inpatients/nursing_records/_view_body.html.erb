<% @poi = PatientOtherIdentifier.find_by(patient_id: @patient.id) %>
<% @nursing_record = nursing_record %>
<% @print_flag = print_flag %>
<div class="master-row">
  <div class="row ">
    <div class="col-md-12">
      <%= render partial: 'inpatient/ipd_record/patient_info.html.erb' %>
    </div>
    <div class="col-md-12 text-center">
      <div class="pcs-entity-title"><span><%= nursing_record.fullname %></span></div>
    </div>
    <% if templatetype == "aldrete" %>
      <%= render partial: "/inpatients/nursing_records/aldrete_summary.html.erb" %>
    <% elsif templatetype == "pain" %>
      <%= render partial: "/inpatients/nursing_records/pain_summary.html.erb" %>
    <% elsif templatetype == "careplan" %>
      <%= render partial: "/inpatients/nursing_records/care_plan_summary.html.erb" %>
    <% elsif templatetype == "sedation" %>
      <%= render partial: "/inpatients/nursing_records/sedation_summary.html.erb" %>      
    <% end %>
  </div>
</div>
