function customHeaderFormValidate(){
  $("#custom-template-header-form").validate({
    rules: {
      "header_titles[cash_header_title]": {
        required: true
      },
      "header_titles[credit_header_title]": {
        required: true
      }
    },
    messages: {
      "header_titles[cash_header_title]": {
        required: "Cash Header Title is Required."
      },
      "header_titles[credit_header_title]": {
        required: "Credit Header Title is Required."
      }
    },
    errorElement: 'div',
    errorPlacement: function (error, element) {
      error.insertAfter(element.prepend());
    }
  });
}
customHeaderFormValidate()

