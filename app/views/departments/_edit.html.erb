<div class="modal-dialog">
	<div class="modal-content">  
	  		
	    <div class="modal-header">
	    	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title">Manage Department</h4>	 
		</div>
		<div class="modal-body">
		<%= form_for(@facility_department,:remote=>true) do |f| %>
			<div class="row form-group">
				<div class="col-md-2">Name :</div>
				<div class="col-md-5"><%= f.select(:department_id, Department.all.collect {|p| [ p.name, p.id ] },{},{:class=>'form-control'})  %></div>
			</div>
			<div class="row">
				<div class="col-md-2"></div>
				<div class="col-md-3"><%= f.submit "Save Changes",:class=> "btn btn-primary" %></div>
			</div>
			<% end %>
		</div>
	</div>
</div>