<div class="row mb10" style="background:#354670;color:#fff">
  <div class="col-md-5">
    <h4>Facility Contact List</h4>
  </div>
  <div class="col-md-3 text-right">
    <input type="text" name="" class="search-facility-contact form-control" placeholder="Search Contact..." value="<%= params[:search] %>" style="margin-top: 5px;">
  </div>
  <div class="col-md-4 text-right">
    <%= link_to new_facility_contact_path, class: "btn btn-primary navbar-btn", data: {remote: true, 'toggle': 'modal', 'target': '#contact-modal'} do %><i class="fa fa-plus"></i>&nbsp;&nbsp;Add Contact<% end %>
  </div>
</div>
<div class="row mb10">
  <div class="col-md-6">
    <b class="filter-search-text">Filtered as <b style="color:#f00;">"ALL"</b></b>
  </div>
  <div class="col-md-4 text-right">
    <b style="color:#000;">Filter By Group:</b>
  </div>
  <div class="col-md-2">
    <select class="filter-facility-contact-group form-control">
      <option value="all">All</option>
      <% @contact_groups.each do |contact_group| %>
        <option value="<%= contact_group.id %>"><%= contact_group.name %></option>
      <% end %>
    </select>
  </div>
</div>
<div id='show-facility-contacts-details'>
  <%= render partial: 'view.html.erb' %>
</div>