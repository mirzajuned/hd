<% @investigation_present = (@ophthal_investigations.count > 0 || @laboratory_investigations.count > 0 || @radiology_investigations.count > 0) %>
<% if @investigation_present %>
  <div class="row">
    <div class="col-md-12" style="text-decoration: underline;"><b>INVESTIGATIONS</b></div>
  </div>
  <% if @case_sheet.specialty_id.to_s == "309988001" %>
    <div class="row patient-ophthal_investigations">
      <div class="col-md-12">
        <%= render partial: "case_sheets/views/case_ophthal_investigations.html.erb" %>
      </div>
    </div>
    <hr/>
  <% end %>
  <div class="row patient-laboratory_investigations">
    <div class="col-md-12">
      <%= render partial: "case_sheets/views/case_laboratory_investigations.html.erb" %>
    </div>
  </div>
  <hr/>
  <div class="row patient-radiology_investigations">
    <div class="col-md-12">
      <%= render partial: "case_sheets/views/case_radiology_investigations.html.erb" %>
    </div>
  </div>
<% end %>
<% if @free_form_investigations.count > 0 %>
  <div class="row">
    <div class="col-md-12" style="text-decoration: underline;"><b>INVESTIGATIONS</b></div>
    <% @free_form_investigations.each do |key, investigation| %>
      <div class="col-md-12">
        <span><b style="color: #333;"><%= investigation[:content].to_s.html_safe() %></b></span>
      </div>
    <% end %>
  </div>
<% end %>

<% if !@investigation_present && @free_form_investigations.count == 0 %>
  <div class="row">
    <div class="col-md-12" style="text-decoration: underline;"><b>INVESTIGATIONS</b></div>
    <div class="col-md-12">
      <span>No Investigations</span>
    </div>
  </div>
<% end %>