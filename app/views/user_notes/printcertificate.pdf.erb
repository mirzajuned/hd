    color: #333333;
    background:  #ffffff ;
  }
  .pcs-header-content {
    font-size: 8pt;
    color: #333333;
    background-color: #ffffff;
  }
  .pcs-template-body {
    padding: 0 0.400000in 0 0.550000in;
  }
  .pcs-template-footer {
    height: 0.700000in;
    font-size: 6pt;
    color: #aaaaaa;
    padding: 0 0.400000in 0 0.550000in;
    background-color: #ffffff;
  }
  .pcs-footer-content {
    word-wrap: break-word;
    color: #aaaaaa;
    border-top: 1px solid #eeeeee;
  }
  .pcs-label {
    color: #000000;
  }
  .pcs-entity-title {
    font-size: 9pt;
