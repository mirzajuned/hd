<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog modal-lg">
  <%= simple_form_for(@user_note, format: :js, remote: true, method: :POST) do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-md-7 col-lg-7 col-sm-12 col-xs-12">
            <h4 class="modal-title pull-right">Generate <%= Global.user_notes_types[@type][:name] %></h4>
          </div>
          <div class="col-md-5 col-lg-5 col-sm-12 col-xs-12">
            <div class="pull-right">
              <%= f.button :submit,"Save #{Global.user_notes_types[@type][:name]}", {class: 'btn btn-success', onclick: 'new_user_note()'}%>
              <button type="button" class="btn btn-default" data-dismiss="modal" id="btn_generate_medical_certificate_id">Close</button>
            </div>
          </div>
        </div>

   
      </div>
      <div class="modal-body form-bordered">
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.text_field :patient_id, {type: "hidden", value: @patient_id} %>
            <%= f.text_field :user_id, {type: "hidden", value: current_user.id} %>
            <%= f.text_field :doctor, {type: "hidden", value: @doctor_id} %>
            <%= f.text_field :type, {type: "hidden", value: @type} %>
            <div class="row">
              <div class="form-group">
                <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                  <div class="col-sm-12">
                    <label>Heading :</label>
                  </div>
                  <div class="col-sm-12">
                    <%= f.text_field :category, {class: 'form-control'} %>
                  </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                  <div class="col-sm-12">
                    <label>Issue Date :</label>
                  </div>
                  <div class="col-sm-12">
                    <%= f.text_field :date_of_issue, {class: 'form-control', id: 'user-note-datepicker-inline', style: "cursor: pointer;", readonly: true, placeholder: 'dd/mm/yyyy'} %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mb15">
              <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                  <div class="col-sm-12">
                    <label>Subject :</label>
                  </div>   
                  <div class="col-sm-12">
                    <%= f.text_field :medical_subject, {class: 'form-control'} %>
                  </div> 
                </div>
              </div>
            </div>

            <div class="row mb15">
              <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                  <div class="col-sm-12">
                    <label>Content :</label>                
                  </div>
                  <div class="col-sm-12">
                    <%= f.text_area :medical_body, {class: 'summernote form-control', rows: "10" } %>
                  </div>
                </div>
              </div>
            </div>

          </div>
      </div>
    </div>
 <% end %>
</div>

<style type="text/css">

  input.error, select.error {
    border-color: #b94a48;
    background-image: none;
  }
  input.valid, select.valid {
    border-color: #468847;
    background-image: none;
  }
  .panel-default > .panel-heading {
    background-color: #1CAF9A;
  }
  .note-editable.panel-body{
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
  }
</style>
