$("#letters").hide();
jQuery('#followup').on("click", function(e) {
    e.preventDefault()
    $("#letters").hide();
    $.ajax({
        method: 'get',
        url: 'followup_patient'

    })


}).click()

jQuery('#birthday').on("click", function(e) {
    e.preventDefault()
    $("#letters").hide();
    data = {patient_type: "birthday"}
    $.ajax({
        method: 'get',
        url: 'filter_patient_birthday'

    })

})

jQuery('#alphabetically').on("click", function(e) {
    e.preventDefault()
    $("#letters").show();
    $('.letter-class').removeClass('active')
    $('.letter-class').removeClass('color-change')
    $.ajax({
        method: 'get',
        url: 'patient_alphabetically'

    })

})



jQuery('#missed').on("click", function(e) {
    e.preventDefault()
    $("#letters").hide();
    $.ajax({
        method: 'get',
        url: 'followup_long_overdue'
    })
})

