<div class="each-appointment-day-controls">
  <div class="row">
    <div class="col-md-3">
      <%= link_to edit_patient_path(:id => patient.id), :class => "btn btn-xs btn-primary", :title => "Edit Patient Details", :data => {:remote => true, 'toggle' =>  "modal", 'target' => '#appointment-modal'} do %>
          <i class="fa fa-edit"></i>
      <% end %>
    </div>
    <div class="col-md-2">
      <%= link_to patient_path(:id => patient.id),:method => "delete",data:{:remote => true,confirm: "Are you sure you want to delete this patient's records?"},:class => "btn btn-xs btn-danger",:id => "delete-patient" do %>
          <i class="fa fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
</div>


