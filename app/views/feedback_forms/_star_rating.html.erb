<style type="text/css">
    /* Base setup */

  h1 {
    font-size: 5em; 
    margin-bottom: .5rem;
  }

  /* Ratings widget */
  .rate {
    display: inline-block;
    border: 0;
  }
  /* Hide radio */
  .rate > input {
    display: none;
  }
  /* Order correctly by floating highest to the right */
  .rate > .star {
    float: right;
  }
  /* The star of the show */
  .rate > .star:before {
    display: inline-block;
    font-size: 2.1rem;
    padding: .3rem .2rem;
    margin: 0;
    cursor: pointer;
    font-family: FontAwesome;
    content: "\f005 "; /* full star */
  }
  /* Zero stars rating */
  .rate > .star:last-child:before {
    content: "\f006 "; /* empty star outline */
  }
  /* Half star trick */
  .rate .half:before {
    content: "\f089 "; /* half star no outline */
    position: absolute;
    padding-right: 0;
  }
  /* Click + hover color */
  input:checked ~ .star  { color: #f2ae30;  } /* color current and previous stars on checked */
  .star:hover, .star:hover ~ .star { color: #d89d4e;  } /* color previous stars on hover */

  /* Hover highlights */
  input:checked + .star:hover, input:checked ~ .star:hover, /* highlight current and previous stars */
  input:checked ~ .star:hover ~ .star, /* highlight previous selected stars for new rating */
  .star:hover ~ input:checked ~ .star /* highlight previous selected stars */ { color: #f2ae30;  } 

</style>