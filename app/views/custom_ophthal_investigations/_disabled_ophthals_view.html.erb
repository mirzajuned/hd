<% if @disabled_ophthals.count > 0 %>  
  <div class="row" style="background:#354670;color:#fff;margin-top:50px;">
    <div class="col-md-6">
      <h4>Disabled Ophthal Investigations List</h4>
    </div>
    <div class="col-md-6 text-right">
    </div>
  </div>
  <div class="all-procedures-row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" width="50%">Investigation Name</th>
          <th scope="col" width="40%">Code</th>
          <th scope="col" width="10%">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @disabled_ophthals.each_with_index do |disabled_ophthal| %>
          <tr class="procedures_table_row">
            <td width="30%"><%= disabled_ophthal.investigation_name %></td>
            <td width="10%"><%= disabled_ophthal.investigation_id %></td>
            <td width="20%"><%= link_to custom_ophthal_investigations_enable_ophthal_investigation_path(id: disabled_ophthal.id.to_s), method: :get, data: {confirm: "<b style='color:#000'>This Will Enable Investigation - <b style='color:#ff0000'>'" + disabled_ophthal.investigation_name + "'</b> </b>", :remote => true}, class: "btn btn-info btn-xs enable-procedure-btn" do %>Enable<% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="row" style="margin-top:50px;">
    <div class="col-md-12">
      <h4>No Ophthal Investigations Disabled!!</h4>
    </div>
  </div>
<% end %>