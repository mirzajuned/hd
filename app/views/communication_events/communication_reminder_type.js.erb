<% if params[:id] == "same day" %>
	$('#reminder_event_confirmation').html("<%= escape_javascript(render partial: 'communication_events/same_day') %>");
<% elsif params[:id] == "prior day" || params[:id] == "2 day prior" || params[:id] == "3 day prior" %>
	$("#reminder_event_confirmation").html("<%= escape_javascript(render partial: 'communication_events/prior_day') %>");
<%else%>
	$("#reminder_event_confirmation").html("<%= escape_javascript(render partial: 'communication_events/instant') %>");
<% end %>