<strong>Reminder Type</strong><br>
<%= select_tag "communication_event[reminder_type]",options_for_select([['Instantly','Instantly'] ,['Same Day','same day'],['Prior Day','prior day'],['2 Day Prior', '2 day prior'], ['3 Day prior','3 day prior']],@communication_event.try(:reminder_type)),:class => "form-control" , :required => true %>

<script>
  $("#communication_event_reminder_type").on("change",function() {
    $.ajax({
      type: "GET",
      dataType: "script",
      url: '/communication_events/'+event.target.value+'/communication_reminder_type',
    });
    dropDownValues()
  })

  dropDownValues()

  function dropDownValues(){
    value_r = $("#communication_event_reminder_type").val();
    communication_event_id_r = $("#communication_event_id").val();
    $.ajax({
      type: "GET",
      dataType: "script",
      url: '/communication_events/'+value_r+'/communication_reminder_type?communication_event_id='+communication_event_id_r,
    });
  }
</script>

