<% if params[:id] == "instantly_and_reminder" %>
	$('#reminder_confirmation').html("<%= escape_javascript(render partial: 'communication_events/instantly_and_reminder') %>");
<% elsif params[:id] == "reminder" %>
	$('#reminder_confirmation').html("<%= escape_javascript(render partial: 'communication_events/reminder') %>");
<% else %>
	$("#reminder_confirmation").html("<%= escape_javascript(render partial: 'communication_events/confirmation') %>");
	$("#reminder_event_confirmation .row").remove()
<% end %>
