<div class="row form-group">
<div class="col-sm-2"><%= f.text_field :name, {:class => 'form-control', :id =>'facility_name_'+f.index.to_s} %></div>
<div class="col-sm-2"><%= f.telephone_field :telephone, {:class => 'form-control'} %></div>
<div class="col-sm-2"><%= f.email_field :email, {:class => 'form-control'} %></div>
<div class="col-sm-2"><%= f.text_field :city, {:class => 'form-control'} %></div>
<div class="col-sm-2"><%= f.number_field :pincode, {:class => 'form-control'} %></div>
  <%= f.hidden_field :department_ids %>
<div class="col-sm-1">
  <a id="remove_item_<%= f.index %>" class="btn btn-sm btn-danger"> Remove </a>
</div>
<%= f.hidden_field :organisation_id, {:class => 'form-control'} %>
</div>

