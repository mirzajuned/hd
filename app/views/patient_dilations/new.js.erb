$("#appointment-modal").html("<%= escape_javascript(render 'new.html.erb') %>")


function dilation_option() {
  $("#dilation-appointment-form").validate({
    rules: {
      "patient_dilation[drops]": {
        required: true,
      },
      "patient_dilation[dilated_by]": {
        required: true,
      },
      "patient_dilation[eye_side]": {
        required: true,
      },
    },
    messages: {
      "patient_dilation[drops]": {
        required: "Select Drops."
      },
      "patient_dilation[dilated_by]": {
        required: "Dilating User is Required.",
      },
      "patient_dilation[eye_side]": {
        required: "Select Eye."
      },
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  });
}
dilation_option()