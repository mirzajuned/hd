$(document).ready(function(){





    $('.operationsother').hide();
    $('.questionsforhistoryofallergies').hide();
      
    $('#opdrecord_history_of_allergies').on('change',function(){
        var cc=$(this).val();
        if(cc=='Yes')
            $(".questionsforhistoryofallergies").slideDown();
        else
            $(".questionsforhistoryofallergies").slideUp();

    });
 
 
     
    $('#opdrecord_pastmedicalhistory').on('change',function(){
        var cc=$(this).val();
        if(cc=='Other')
            $(".operationsother").slideDown();
        else
            $(".operationsother").slideUp();

    });

      
});

