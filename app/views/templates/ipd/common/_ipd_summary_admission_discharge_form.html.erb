<div class="print-template" style="margin-top:25px;">
  <br><div class="pcs-entity-title"><span>Admission Note</span></div>
  <div class="patientinfo mb10" id="patientinfo" style="font-size:8pt;margin-top:20px;margin-left:20px;">

    <div class="row">
      <div class="col-md-6">
        <span><b><%= patient.fullname %></b></span><br>
        <% if patient.age? || patient.gender? %><span><% if patient.age? %><%= patient.age %><% end %><% if patient.gender == 'Male' %>/M<% end %><% if patient.gender == 'Female' %>/F)<% end %></span><br><% end %>
        <span><%= PatientIdentifier.find_by(:patient_id => patient.id, :organisation_id => current_user.organisation_id).try(:patient_org_id) %></span><br>
        <span><%= patient.mobilenumber %></span>
      </div>
      <div class="col-md-6 text-right">
        <span><b>Dr. <%= User.find_by(id: @admission.doctor).fullname %></b></span><br>
        <% unless User.find_by(id: @admission.doctor).designation.nil? %><span><%= User.find_by(id: @admission.doctor).designation %></span><br><% end %>
        <span><%= @admission.display_id %></span><br>
        <span><%= @admission.admissiontime.strftime("%d-%m-%y") %></span>
      </div>
    </div>

  </div>
  <hr>
  <div class="container" style="margin-left:25px;width:100%;">
    <div class="row">

      <div class="col-md-6">
        <% unless @ipdrecord_admission.surgerytype.blank? %>
          <span style="font-weight:bold"><i>Type of Surgery : </i></span>
          <%= @ipdrecord_admission.read_attribute(:"surgerytype") %>
          <div class="mb3"></div>
        <% end %>
      </div>

      <div class="col-md-6">
        <% unless @ipdrecord_admission.admissiondate.blank? %>
          <span style="font-weight:bold"><i>Admission Date : </i></span>
          <%= @ipdrecord_admission.read_attribute(:"admissiondate") %>
          <div class="mb3"></div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% if !@ipdrecord_admission.hpi.blank? || !@ipdrecord_admission.pasthistory.blank? || !@ipdrecord_admission.familyhistory.blank? || !@ipdrecord_admission.socialhistory.blank? || !@ipdrecord_admission.pastmedications.blank? %>
        <h5 class="hpi-ei-cp-title" style="font-size:18px; margin-top:0px;text-decoration:underline;">History of Patient Illness</h5>
      <% end %>
        <div class="col-md-6">
          <% unless @ipdrecord_admission.hpi.blank? %>
              <% if @ipdrecord_admission.hpi.length > 0 %>
                  <span style="font-weight:bold"><i>History of present illness : </i></span>
                  <%= @ipdrecord_admission.read_attribute(:"hpi") %>
                  <div class="mb3"></div>
              <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
          <% unless @ipdrecord_admission.pasthistory.blank? %>
              <% if @ipdrecord_admission.pasthistory.length > 0 %>
                  <span style="font-weight:bold"><i>Past history : </i></span>
                  <%= @ipdrecord_admission.read_attribute(:"pasthistory") %>
                  <div class="mb3"></div>
              <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
          <% unless @ipdrecord_admission.familyhistory.blank? %>
              <% if @ipdrecord_admission.familyhistory.length > 0 %>
                  <span style="font-weight:bold"><i>Family history : </i></span>
                  <%= @ipdrecord_admission.read_attribute(:"familyhistory") %>
                  <div class="mb3"></div>
              <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
          <% unless @ipdrecord_admission.socialhistory.blank? %>
              <% if @ipdrecord_admission.socialhistory.length > 0 %>
                  <span style="font-weight:bold"><i>Personal / social history : </i></span>
                  <%= @ipdrecord_admission.read_attribute(:"socialhistory") %>
                  <div class="mb3"></div>
              <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
          <% unless @ipdrecord_admission.pastmedications.blank? %>
              <% if @ipdrecord_admission.pastmedications.length > 0 %>
                  <span style="font-weight:bold"><i>Previous / on-going medications : </i></span>
                  <%= @ipdrecord_admission.read_attribute(:"pastmedications") %>
                  <div class="mb3"></div>
              <% end %>
          <% end %>
        </div>
    </div>
    <div class="row">
      <% if !@ipdrecord_admission.generalexamination.blank? || !@ipdrecord_admission.localexamination.blank? || !@ipdrecord_admission.laboratory.blank? || !@ipdrecord_admission.radiology.blank? || !@ipdrecord_admission.otherinvestigations.blank? || !@ipdrecord_admission.provisionaldiagnosis.blank? %>
        <h5 class="hpi-ei-cp-title" style="font-size:18px; margin-top:0px;text-decoration:underline;">Examination & Investigation</h5>
      <% end %>
      <div class="col-md-6">
        <% unless @ipdrecord_admission.generalexamination.blank? %>
          <% if @ipdrecord_admission.generalexamination.length > 0 %>
              <span style="font-weight:bold"><i>General examination : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"generalexamination") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-6">
        <% unless @ipdrecord_admission.localexamination.blank? %>
          <% if @ipdrecord_admission.localexamination.length > 0 %>
              <span style="font-weight:bold"><i>Local examination : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"localexamination") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-6">
        <% unless @ipdrecord_admission.laboratory.blank? %>
          <% if @ipdrecord_admission.laboratory.length > 0 %>
              <span style="font-weight:bold"><i>laboratory : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"laboratory") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-6">
        <% unless @ipdrecord_admission.radiology.blank? %>
          <% if @ipdrecord_admission.radiology.length > 0 %>
              <span style="font-weight:bold"><i>Radiology : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"radiology") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-6">
        <% unless @ipdrecord_admission.otherinvestigations.blank? %>
          <% if @ipdrecord_admission.otherinvestigations.length > 0 %>
              <span style="font-weight:bold"><i>Others : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"otherinvestigations") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-6">
        <% unless @ipdrecord_admission.provisionaldiagnosis.blank? %>
          <% if @ipdrecord_admission.provisionaldiagnosis.length > 0 %>
              <span style="font-weight:bold"><i>Provisional diagnosis : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"provisionaldiagnosis") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% if !@ipdrecord_admission.investigations.blank? || !@ipdrecord_admission.treatment.blank? %>
        <h5 class="hpi-ei-cp-title" style="font-size:18px; margin-top:0px;text-decoration:underline;">Care Plan</h5>
      <% end %>
      <div class="col-md-6">
        <% unless @ipdrecord_admission.investigations.blank? %>
          <% if @ipdrecord_admission.investigations.length > 0 %>
              <span style="font-weight:bold"><i>Investigations : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"investigations") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-6">
        <% unless @ipdrecord_admission.treatment.blank? %>
          <% if @ipdrecord_admission.treatment.length > 0 %>
              <span style="font-weight:bold"><i>Treatment : </i></span>
              <%= @ipdrecord_admission.read_attribute(:"treatment") %>
              <div class="mb3"></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <br>
</div>