<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs nav-dark" role="tablist">
    <li role="presentation" class="active"><a href="#todayotherinvestigations" aria-controls="todayotherinvestigations" role="tab" data-toggle="tab">Add Others</a></li>
    <li role="presentation"><a href="#lastotherinvestigations" aria-controls="lastotherinvestigations" role="tab" data-toggle="tab">Previous Others</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">

    <div role="tabpanel" class="tab-pane fade in active" id="todayotherinvestigations">

      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th width="85%">Name</th>
          <th width="15%"></th>
        </tr>
        </thead>
        <tbody class="otherinvestigations">

        </tbody>

      </table>

    </div>
    <div role="tabpanel" class="tab-pane fade in" id="lastotherinvestigations">

      <% if @opdrecord.has_addedotherinvestigationlist? %>

          <table class="table table-striped table-bordered">
            <thead>
            <tr>
              <th width="3%">#</th>
              <th width="40%">Name</th>
            </tr>
            </thead>
            <tbody class="previousotherinvestigations">
            <% @opdrecord.addedotherinvestigationlist.each_with_index do |elem, i|  %>
                <tr>
                  <td>
                    <h5><%= (i.to_i + 1) %></h5>
                  </td>
                  <td>
                    <h5><%= elem.investigationname %></h5>
                  </td>
                </tr>
            <% end %>
            </tbody>

          </table>

      <% else %>

          <p>No Other Investigations History.</p>

      <% end %>

    </div>

  </div>

</div>