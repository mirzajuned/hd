<div class="tab-pane" id="procedure">

<% if false %>
  <div class="row">

    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Regions</th>
        <th>Procedures</th>
      </tr>
      </thead>
      <tbody class="procedure-types-tbody">

              <tr class="procedure-types-tr">
                <td>
                  <span class="label label-primary"><%= @templatetype.capitalize %></span>
                </td>
                <td>
                  <div class="btn-group" role="group" aria-label="...">
                    <% Global.send("#{@speciality_folder_name}#{@templatetype}procedures").send("procedures").each_with_index do |proceduretype| %>
                        <%= button_tag "opdrecord[procedure_attributes][0][proceduretype]", { type: :button, :class => 'btn btn-xs btn-white opdrecord_proceduretype1', :data => { proceduretype: "#{proceduretype.to_a[1][1]}", proceduretypecounter: "0" }  } do %>
                            <%= label_tag "#{proceduretype.to_a[0][1]}" %>
                        <% end %>
                    <% end %>
                  </div>
                  <%= hidden_field_tag "opdrecord[procedure_attributes][0][procedureregionnametext]", "#{@templatetype}", { :class => 'form-control opdrecord_procedureregionnametext'} %>
                </td>
              </tr>

      </tbody>

    </table>

  </div>

  <div class="row">

    <div id="procedures">

      <table class="table table-striped">
        <thead>
        <tr>
          <th width="10%">Status</th>
          <th width="8%">Side or Site</th>
          <th width="12%">Nature</th>
          <th width="10%">Approach</th>
          <th width="20%">Procedure</th>
          <th width="22%">Details</th>
          <th width="13%">Device</th>
          <th width="5%"></th>
        </tr>
        </thead>
        <tbody class="procedurelist-tbody-added">

        <%= render partial: "opd_records/orthopedics_notes/opd_partials/regiontemplate_assessment_tab_procedure" , locals: { f: f, procedure: @opdrecord.procedure, opdrecord: @opdrecord,  specalityfoldername: @speciality_folder_name, templatetype: @templatetype, opdspeciality: @opdspeciality } %>

        </tbody>

      </table>

      <div class="procedurelist-tbody-removed" style="display:none;">
      </div>

    </div>

  </div>
<% end %>

  <div class="row">

    <div class="col-md-8">

      <!-- <label for="comments-textarealabel">Comments</label> -->
      <%= f.input :procedurecomments, as: :text,  :label => false, :required => false, :input_html => {:class => 'form-control', :rows => 2, :cols => 70, :required => false, :name => "opdrecord[procedurecomments]", :value => opdrecord.read_attribute(:procedurecomments), onblur: "check_validation_status(this, 'procedure_is_valid', 'advice_step_procedure')" } %>

    </div>

  </div>

</div>

