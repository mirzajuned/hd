<%= hidden_field_tag "opdrecord[encountertype]", Global.ehrcommon.opd.abbr %>
<%= hidden_field_tag "opdrecord[specalityname]", specalityfoldername %>
<%= hidden_field_tag "opdrecord[templatetype]", templatetype %>
<%= hidden_field_tag "opdrecord[specalityfoldername]", specalityfoldername.capitalize %>
<%= hidden_field_tag "opdrecord[specalityid]", specalityid %>
<%= hidden_field_tag "opdrecord[templateid]", templateid %>
<%= hidden_field_tag "opdrecord[encountertypeid]", Global.ehrcommon.opd.id %>
<%= hidden_field_tag "opdrecord[opdrecordid]", opdrecord.id %>
<% if @patient != nil %>
    <%= hidden_field_tag "opdrecord[userid]", @appointment.consultant_id %> <!-- Head doctor(userid) to whom the patient is registered and appointment is created. -->
    <%= hidden_field_tag "opdrecord[patientid]", patient.id %>
    <%= hidden_field_tag "opdrecord[appointmentid]", @appointment.id %>
<% end %>
<%= hidden_field_tag "opdrecord[authorid]", current_user.id %> <!-- Userid of user, who authored the opdrecord. In case of fellows or interns working with head doctor, this id could be different if a fellow wrote the initial document. See userid above for more details.  -->