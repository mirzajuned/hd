<%= hidden_field_tag "ipdrecord[encountertype]", Global.ehrcommon.ipd.abbr %>
<%= hidden_field_tag "ipdrecord[specalityname]", specalityfoldername %>
<%= hidden_field_tag "ipdrecord[templatetype]", templatetype %>
<%= hidden_field_tag "ipdrecord[templateid]", templateid %>
<%= hidden_field_tag "ipdrecord[specalityfoldername]", specalityfoldername.capitalize %>
<%= hidden_field_tag "ipdrecord[specalityid]", specalityid %>
<%= hidden_field_tag "ipdrecord[encountertypeid]", Global.ehrcommon.ipd.id %>
<%= hidden_field_tag "ipdrecord[ipdrecordid]", ipdrecord.id %>
<% if @patient != nil %>
    <%= hidden_field_tag "ipdrecord[userid]", current_user.id %> <!-- Head doctor(userid) to whom the patient is registered and appointment is created. -->
    <%= hidden_field_tag "ipdrecord[patientid]", patient.id %>
    <%= hidden_field_tag "ipdrecord[admissionid]", @admission.id %>
<% end %>
<%= hidden_field_tag "ipdrecord[authorid]", current_user.id %> <!-- Userid of user, who authored the ipdrecord. In case of fellows or interns working with head doctor, this id could be different if a fellow wrote the initial document. See userid above for more details.  -->

