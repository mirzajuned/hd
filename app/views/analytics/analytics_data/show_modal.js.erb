<% if @on_zoom == "true" %>
  function testAnim(x) {
    $('.modal .modal-dialog').attr('class', 'modal-dialog ' + x + ' animated delay-0s');
  };

  $('#expandedModal').on('show.bs.modal', function (e) {
    var anim = $('#entrance').val();
        testAnim('zoomIn');
  });

  $('#expandedModal').on('hide.bs.modal', function (e) {
    var anim = $('#exit').val();
        testAnim('zoomOut');
  });


  $("#expandedModal").html('<%= escape_javascript(render partial: "analytics/shared/modal_content") %>')
  $('#expandedModal').modal("show");


  // setting values for modal headers

  $(".dropdown-facilitymenu-button_modal").html($(".dropdown-facilitymenu-button").html());
  $(".dropdown-facilitymenu-button_modal").attr("data-facility-id", $(".dropdown-facilitymenu-button").attr("data-facility-id"));

  $(".dropdown-timemenu-button_modal").html($(".dropdown-timemenu-button").html());

  $(".analytics-from-datepicker_modal").val($(".analytics-from-datepicker").val());
  $(".analytics-to-datepicker_modal").val($(".analytics-to-datepicker").val());

<% end %>

$("#expandedModal #partial_data_here").html('<%= escape_javascript(render partial: "analytics/partials/#{@partial_name}") %>')