<% if @specialty_id == '309988001' || (@current_user.specialty_ids.include?('309988001') && @specialty_id == 'all') %>
  <div class="row tile_count" style="margin-bottom: 15px;">
    <div class="col-md-3 col-sm-6 col-xs-12 panel-head ">
      <div class="panel_h">
        <div class="count_top title_h"> Total Count </div>
        <span class="count ">
            <% if @todays_data.present? %>
              <%= @optical_total_count.reject(&:blank?).last.to_i %>
            <% else %>
              <%= @optical_total_count.reject(&:blank?).sum %>
            <% end %>
            </span>
        <span id="weekly-appointment-created-counts" class="panel_chart chart pull-right"></span>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12 panel-head ">
      <div class="panel_h">
        <div class="count_top title_h"> Converted Count</div>
        <span class="count">
            <% if @todays_data.present? %>
              <%= @optical_converted_count.reject(&:blank?).last.to_i %>
            <% else %>
              <%= @optical_converted_count.reject(&:blank?).sum %>
            <% end %> 
          </span>
        <span id="weekly-appointment-arrived-counts" class="panel_chart chart pull-right"></span>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12 panel-head ">
      <div class="panel_h">
        <div class="count_top title_h"> Not Converted Count</div>
        <span class="count green">
            <% if @todays_data.present? %>
              <%= @optical_not_converted_count.reject(&:blank?).last.to_i %>
            <% else %>
              <%= @optical_not_converted_count.reject(&:blank?).sum %>
            <% end %>
              
            </span>
        <span id="weekly-admission-counts" class="panel_chart chart pull-right"></span>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12 panel-head">
      <div class="panel_h">
        <div class="count_top title_h"> Overall Earnings </div>
        <span class="count_earning">
            <% if @todays_data.present? %>
              <%= @optical_earnings.reject(&:blank?).last.to_f %>
            <% else %>
              <%= @optical_earnings.reject(&:blank?).sum.to_f%>
            <% end %>
          </span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6">
      <%= render partial: '/analytics/partials/optical_data.html.erb' %>
    </div><!-- panel -->
    <div class="col-sm-6 col-md-6">
      <%= render partial: '/analytics/partials/optical_earnings_data.html.erb' %>
    </div>
  </div>
  <script type="text/javascript">
    window.counting_animation()
  </script>
<% else %>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default panel_b borderd_panel">
        <div class="panel-heading to_add_expand_button">
          <span>Change Specialty to&emsp;<b style="color:#000;"><i>Ophthalmology</i></b>&emsp;or&emsp;<b style="color:#000;"><i>All Specialties</i></b>&emsp;to view Graphs.</span>
        </div>
      </div>
    </div>
  </div>
<% end %>