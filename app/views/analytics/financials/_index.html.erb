.panel_h {
    border: 1px solid #fff;
    padding: 20px;
    text-align: center;
    background: #fff;
    padding: 25px;
    height: 110px;
    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.23);
    border-radius: 4px;
    white-space: nowrap;
