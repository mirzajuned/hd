<% partial_name = @partial_name.present? %>
<% data = {
    service_name: "DoctorOperationalData",
    action_name: "doctor_average_time",
    partial_name: "average_patient_time"
}%>
<div class="row">
  <div class="<%= partial_name ? 'col-md-6': 'col-md-12' %>">
    <div class="panel panel-default panel_b borderd_panel">
      <div class="panel-heading to_add_expand_button">
        <h5 class="subtitle mb5 title_in_caps"><i class="fa fa-bar-chart" aria-hidden="true"></i><strong>Average Time taken</strong></h5>
        <%=render partial: "/analytics/shared/expand_button", locals:{partial_name: partial_name, data: data }%>
      </div>
      <div class="panel-body reduced_padding">
        <canvas id="patients-time-line-chart_<%= partial_name %>" width="800" height="400"></canvas>
      </div>
    </div>
  </div>
  <% if partial_name %>
    <div class="col-md-6">
      <div class="table_wrapper">
        <table class="table table_data table-bordered table-hover">
          <thead>
          <tr>
            <th>On</th>
            <th>Avearge Time given (hrs)</th>
          </tr>
          </thead>
          <tbody>
          <% @doctor_name_labels.each_with_index do |f_name, indx|%>
            <tr>
              <td><%= f_name %></td>
              <td><%= @total_avg_time_given[indx].to_i %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>

<script>
  new Chart(document.getElementById("patients-time-line-chart_<%= partial_name %>"), {
    type: 'line',
    data: {
      labels: <%=raw @doctor_name_labels %>,
      datasets: [{
        data: <%=raw @total_avg_time_given%>,
        label: "Time taken in Hours",
        borderColor: "#227093",
        fill: false
      }
      ]
    },
    options: {
      legend: { display: false },
      responsive: true,
      title: {
        display: false,
        text: ''
      },
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
//              stepSize: 1
          }
        }],
        xAxes: [{
          gridLines:{
            display : false
          }
        }]
      }
    }
  });

</script>
<style>
  .no_data{
    text-align: center;
    color: #444;
  }
</style>