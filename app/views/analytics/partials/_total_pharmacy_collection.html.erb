<% partial_name = @partial_name.present? %>
<% data = {
  service_name: "FinanceOverviewData",
  action_name: "periodic_optical_data",
  partial_name: "total_pharmacy_collection"
}%>
<div class="row">
  <div class="<%= partial_name ? 'col-md-6': 'col-md-12' %>">
    <div class="panel panel-default panel_b borderd_panel">
      <div class="panel-heading to_add_expand_button">
        <h5 class="subtitle mb5 title_in_caps"><i class="fa fa-bar-chart" aria-hidden="true"></i><strong>Total pharmacy collection</strong></h5>
        <%=render partial: "/analytics/shared/expand_button", locals:{partial_name: partial_name, data: data }%>
      </div>
      <div class="panel-body reduced_padding">
        <canvas id="total_pharmacy_collection_<%= partial_name %>" width="800" height="400"></canvas>
      </div>
    </div>
  </div>
  <% if partial_name %>
    <div class="col-md-6">
      <div class="table_wrapper">
      <table class="table table_data table-bordered table-hover">
        <thead>
          <tr>
            <th>On</th>
            <th>Total Pharmacy Earnings</th>
          </tr>
        </thead>
        <tbody>
          <% appointment_chart_labels = @appointment_chart_labels.reverse %>
          <% weekly_pharmacy_amount = @weekly_pharmacy_amount.reverse %>
          <% appointment_chart_labels.each_with_index do |f_name, indx|%>
            <tr>
              <td><%= f_name %></td>
              <td><%= weekly_pharmacy_amount[indx].to_f %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  <% end %>
</div>


<script>

var ctx = document.getElementById("total_pharmacy_collection_<%= partial_name %>")
var lineChart = new Chart(ctx, {
  type: 'line',
  data: {
      labels: <%= raw @appointment_chart_labels%>,
      datasets: [
          {
            labels: [],
            data: <%= @weekly_pharmacy_amount%>,
            borderColor: "#1dd1a1",
            backgroundColor: "#1dd1a1"
          }
      ] 
  },
  options: {
      legend: { display: false },
      responsive: true,
      title: {
        display: false,
      },
      scales: {
        yAxes: [{
            gridLines:{
              display : false
            },
            ticks: {
              beginAtZero: true
//              stepSize: 1
            }
        }],
        xAxes: [{
          gridLines:{
              display : false
          }
        }]
      }
    }
});
</script>