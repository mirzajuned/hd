<% partial_name = @partial_name.present? %>
<% data = {
  service_name: "DoctorOperationalData",
  action_name: "doctor_procedures_converted",
  partial_name: "doctor_converted_procedures"
}%>
  <% if @group_by == '$dayOfMonth' %>
    <% @group_by = 'DAY' %>
  <% end %>
 <% text_val =  ('Doctor Surgery Advised / Converted ( ' + @group_by.gsub("$",'').to_s + ' - WISE )').upcase %>
<div class="row">
    <div class="<%= partial_name ? 'col-md-6': 'col-md-12' %>">
      <div class="panel panel-default panel_b borderd_panel">
        <div class="panel-heading to_add_expand_button">
          <h5 class="subtitle mb5 title_in_caps"><i class="fa fa-bar-chart" aria-hidden="true"></i><strong><%= text_val %></strong></h5>
          <%=render partial: "/analytics/shared/expand_button", locals:{partial_name: partial_name, data: data }%>
        </div>
        <div class="panel-body reduced_padding">
          <canvas id="doctor-procedures-converted-chart_<%= partial_name %>" width="800" height="400"></canvas>
        </div>
      </div>
    </div>

    <% if partial_name %>
    <div class="col-md-6">
      <div class="table_wrapper">
      <table class="table table_data table-bordered table-hover">
        <thead>
          <tr>
            <th>On</th>
            <th>Converted Count</th>
            <th>Not Converted Count</th>
            <th>Total Count</th>
          </tr>
        </thead>
        <tbody>
          <% procedure_labels = @procedure_labels.reverse %>
          <% procedures_not_converted_count = @procedures_not_converted_count.reverse %>
          <% procedures_converted_count = @procedures_converted_count.reverse %>


          <% procedure_labels.each_with_index do |f_name, indx|%>
            <tr>
              <td><%= f_name %></td>
              <td><%= procedures_converted_count[indx].to_i %></td>
              <td><%= procedures_not_converted_count[indx].to_i %></td>
              <td><%= procedures_not_converted_count[indx].to_i + procedures_converted_count[indx].to_i%>  </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  <% end %>
</div>


<script>

  
  var ctx = document.getElementById('doctor-procedures-converted-chart_<%= partial_name %>');
  var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: <%= raw @procedure_labels %>,
      datasets: [
        {
          label: 'Not Converted',
          data: <%= raw @procedures_not_converted_count %>,
          backgroundColor: '#576574',
        },
        {
          label: 'Converted',
          data: <%= raw @procedures_converted_count %>,
          backgroundColor: '#54a0ff',
        }
      ]
    },
    options: {
      legend: { display: false },
      responsive: true,
      title: {
        display: false,
      },
      scales: {
        yAxes: [{
          stacked: true,
          barPercentage: 0.4,
          categoryPercentage: 0.4,
          gridLines:{
            display : false
          },
          ticks: {
            beginAtZero: true,
            // stepSize: 1
          }
        }],
        xAxes: [{
          stacked: true,
          barPercentage: 0.4,
          categoryPercentage: 0.4,
          maxBarThickness: 20,
          gridLines:{
            display : false
          }
        }]
      }
    }
  });
</script>