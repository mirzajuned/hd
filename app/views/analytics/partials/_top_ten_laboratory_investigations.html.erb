<% partial_name = @partial_name.present? %>
<% data = {
  service_name: "InvestigationsData",
  action_name: "top_ten_laboratory_investigations",
  partial_name: "top_ten_laboratory_investigations"
}%>
<div class="row">
  <div class="<%= partial_name ? 'col-md-6': 'col-md-12' %>">
    <div class="panel panel-default panel_b borderd_panel">
      <div class="panel-heading to_add_expand_button">
        <h5 class="subtitle mb5"><i class="fa fa-bar-chart" aria-hidden="true"></i>  <strong> Top 10 Laboratory Investigations</strong> &nbsp;
          <a href="#" data-toggle="tooltip" data-placement="bottom" title="This Graph Shows Top 10 Laboratory Investigations count"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
        </h5>
         <%=render partial: "/analytics/shared/expand_button", locals:{partial_name: partial_name, data: data }%>
      </div>

      <div class="panel-body reduced_padding">
        <canvas id="top-ten-laboratory-investigations-line-chart_<%= partial_name%>" width="800" height="400"></canvas>
      </div>

    </div>    
  </div>
  <% if partial_name %>
    <div class="col-md-6">
      <div class="table_wrapper">
      <table class="table table_data table-bordered table-hover">
        <thead>
          <tr>
            <th>Investigation Name</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody>
          <% @top_ten_laboratory_labels.each_with_index do |f_name, indx|%>
            <tr>
              <td><%= f_name %></td>
              <td><%= @top_ten_laboratory_data[indx].to_i %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  <% end %>
</div>


<script>
  $(document).ready(function(){

    var horizontalBarChartData = {
      labels: <%= raw @top_ten_laboratory_labels %>,
      datasets: [
        {
          data: <%= raw @top_ten_laboratory_data %>,
          backgroundColor:<%= raw get_chart_dataset_color %>
        }
      ]
    };
    var ctx = document.getElementById("top-ten-laboratory-investigations-line-chart_<%= partial_name%>").getContext("2d");
    var myHorizontalBar = new Chart(ctx, {
        type: 'doughnut',
        data: horizontalBarChartData,
        options: {
            rotation: -0.7 * Math.PI,
            responsive: true,
            legend: {
                display: false,
            },
            title: {
                display: false,
                // text: 'Horizontal Bar Chart'
            },
              animation: {
              duration: 500,
              onComplete () {
                const chartInstance = this.chart;
                const ctx = chartInstance.ctx;
                const dataset = this.data.datasets[0];
                const meta = chartInstance.controller.getDatasetMeta(0);

                Chart.helpers.each(meta.data.forEach((bar, index) => {
                  const label = this.data.labels[index];
                  const labelPositionX = 20;
                  const labelWidth = ctx.measureText(label).width + labelPositionX;

                  ctx.textBaseline = 'middle';
                  ctx.textAlign = 'left';
                  ctx.fillStyle = '#333';
                }));
              }
            }
        }
    });
  });
 
</script>

<style>
  #diagnosis-line-chart{
    margin-top: 28px;
  }
</style>
