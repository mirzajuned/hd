<% partial_name = @partial_name.present? %>
<% data = {
  service_name: "OpdRevisitPatient",
  action_name: "call",
  partial_name: "opd_revisit_frequency"
}%>
<div class="row">
  <div class="<%= partial_name ? 'col-md-6': 'col-md-12' %>">
    <div class="panel panel-default panel_b borderd_panel">
      <div class="panel-heading to_add_expand_button">
        <h5 class="subtitle mb5 title_in_caps"><i class="fa fa-bar-chart" aria-hidden="true"></i><strong>OPD Visit Frequency</strong></h5>
        <%=render partial: "/analytics/shared/expand_button", locals:{partial_name: partial_name, data: data }%>
      </div>

      <div class="panel-body reduced_padding">
        <canvas id="bar-chart-opd-revisits_<%= partial_name %>" width="800" height="400"></canvas>
      </div>
    </div>
  </div>
  <% if partial_name %>
    <div class="col-md-6">
      <div class="table_wrapper">
      <table class="table table_data table-bordered table-hover">
        <thead>
          <tr>
            <th>Opd Visits</th>
            <th>Patient Count</th>
          </tr>
        </thead>
        <tbody>

          <% labels = ["1st Visit","2nd Visit","3rd Visit","4th Visit","5th Visit","> 6th Visit"]%>
          <% labels.each_with_index do |f_name, indx|%>
            <tr>
              <td><%= f_name %></td>
              <td><%= @frequency_of_opd_revisits_data[indx].to_s %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  <% end %>
</div>

<script>
  new Chart(document.getElementById("bar-chart-opd-revisits_<%= partial_name %>"), {
    type: 'bar',
    data: {
      labels: ["1st Visit","2nd Visit","3rd Visit","4th Visit","5th Visit","> 6th Visit"],
      datasets: [
        {
          label: "Visits",
          backgroundColor: ["#82ccdd", "#fed156","#1B9CFC","#58B19F","#c45850","#182C61"],
          data: <%= raw @frequency_of_opd_revisits_data %>
        }
      ]
    },
    options: {
      responsive: true,
      legend: { display: false },
      title: {
        display: false
      },
      scales: {
        yAxes: [{
            ticks: {
              beginAtZero: true
            },
            gridLines:{
              display : false
          }
        }],
      xAxes: [{
          gridLines:{
              display : false
          },
          barPercentage: 0.4
        }]
      }
    }
  });
</script>
