<% partial_name = @partial_name.present? %>
<% data = {
    service_name: "DoctorData",
    action_name: "facility_wise_doctor_radiology_investigations",
    partial_name: "facility_wise_doctor_radiology_investigations"
} %>
<div class="row">
  <div class="<%= partial_name ? 'col-md-6': 'col-md-12' %>">
    <div class="panel panel-default panel_b borderd_panel">
      <div class="panel-heading to_add_expand_button">
        <h5 class="subtitle mb5"><i class="fa fa-bar-chart" aria-hidden="true"></i><strong>  &nbsp;&nbsp; Top 10 Facility Radiology Inv.</strong> &nbsp;&nbsp;
          <a href="#" data-toggle="tooltip" data-placement="bottom" title="This Graph Shows Radiology Investigations count according to Top 10 facilities"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
        </h5>
        <%= render partial: "/analytics/shared/expand_button", locals:{partial_name: partial_name, data: data } %>
      </div>
      <div class="panel-body reduced_padding">
        <canvas id="facility-wise-radiology-investigations-chart_doctor_<%= partial_name%>" width="800" height="400"></canvas>
      </div>
    </div>
  </div>
  <% if partial_name %>
    <div class="col-md-6">
      <div class="table_wrapper">
        <table class="table table_data table-bordered table-hover">
          <thead>
          <tr>
            <th>Facility Name</th>
            <th>Count</th>
          </tr>
          </thead>
          <tbody>
          <% @facility_wise_radiology_labels_doctor.each_with_index do |f_name, indx|%>
            <tr>
              <td><%= f_name %></td>
              <td><%= @facility_wise_radiology_data_doctor[indx].to_i %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>

<script>
  new Chart(document.getElementById("facility-wise-radiology-investigations-chart_doctor_<%= partial_name%>"), {
    type: 'pie',
    data: {
      labels: <%=raw @facility_wise_radiology_labels_doctor %>,
      datasets: [{
        data: <%= raw @facility_wise_radiology_data_doctor %>,
        fill: false,
        backgroundColor:<%= raw get_chart_dataset_color %>
      }]
    },
    options: {
      rotation: -0.7 * Math.PI,
      legend: { display: false },
      responsive: true,
      title: {
        display: false,
        text: 'Total Investigations in each Category'
      },
      scales: {
        yAxes: [{
            display : true,
            ticks: {
              beginAtZero: true,
            }
        }],
      xAxes: [{
          display : false,
          gridLines:{
              display : false
          },
          barPercentage: 0.3
        }]
      }
    }
  });

</script>
