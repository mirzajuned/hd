<div class="row">
  <div class="col-md-6" style="padding:1px 19px;">  
    <div class="panel">
      <div class="panel-heading">
        <p class="panel-title" style="font-size: 11px;margin-top: 0px;line-height: 0px;color: white">COUNSELLOR NOTES</p>
      </div>
      <div class="panel-content" style="font-size: 11px">
        <div class="counsellor-note-section row">
          <% if @counsellor_notes.count > 0 %>
            <% @counsellor_notes.each_with_index do |counselor_note| %>
              <div class="col-md-12 mb5 notes" style="padding-top: 8px;padding-left: 14px;">
                <span style="font-size:12px;padding-right: 3px"><strong><%= User.find_by(id: counselor_note.user_id).fullname.try(:capitalize) %></strong></span>
                <span style="font-size:12px;padding-right: 3px; color: #428bca" id=""><%= counselor_note.comment %></span>
                <span style="font-size: 9px;padding-right: 3px;color: #999;">  <strong><%= counselor_note.created_at.strftime("%I:%M %P %d-%m-%y") %></strong></span>
              </div>
              <hr>
            <% end %>
          <% else %>
            <div class="col-md-12 mb5 notes" style="padding-top: 8px;padding-left: 14px;"><span style="font-size:12px; color: #428bca">No Notes found..</span></div>
          <% end %>
        </div>     
      </div>
    </div>
  </div>

  <div class="col-md-6" style="padding:1px 19px;">  
    <div class="panel">
      <div class="panel-heading" style="background-color: #49587E;margin-top: 0px;line-height: 0px;padding: 10px;">
        <p class="panel-title"  style="font-size: 11px;margin-top: 0px;line-height: 0px;color: white">PATIENT NOTES</p>
      </div>
      <div class="panel-content" style="font-size: 11px">
        <div class="counsellor-note-section row">
          <% if @patient_notes.count > 0 %>
            <% @patient_notes.each_with_index do |patient_note| %>
              <div class="col-md-12 mb5 notes" style="padding-top: 8px;padding-left: 14px;">
                <span style="font-size:12px;padding-right: 3px"><strong><%= User.find_by(id: patient_note.user_id).fullname.try(:capitalize) %></strong></span>
                <span style="font-size:12px;padding-right: 3px; color: #428bca" id="task_comment_<%=patient_note.id%>"><%= patient_note.comment %></span>
                <span style="font-size: 9px;padding-right: 3px;color: #999;">  <strong><%= patient_note.created_at.strftime("%I:%M %P %d-%m-%y") %></strong></span>
              </div>
              <hr>
            <% end %>
          <% else %>
            <div class="col-md-12 mb5 notes" style="padding-top: 8px;padding-left: 14px;"><span style="font-size:12px; color: #428bca">No Notes found..</span></div>
          <% end %>
        </div>     
      </div>
    </div>
  </div>
</div>


