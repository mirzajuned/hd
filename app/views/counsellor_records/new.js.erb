// Validate Form
function validate_counsellor_form() {

  // hack for trigger Insurance section, if cashless-hospitalisation used
  if($('#is_insured_true').is(':checked')){  
    $('.counsellor_records_tabs').children().removeClass('active')
    $('.counsellor-record-form-body').children().removeClass('active')
    $('#insurance_details_tab').addClass('active')
    $('#insurance_details').addClass('active')
  }

  $("#counsellor_record_form").validate({
    rules: {
      "counsellor_record[insurance_contact_person]": {
        required: true,
      },
       "counsellor_record[insurance_contact_id]": {
        required: true,
      },
      "counsellor_record[insurance_contact_no]": {
        required: true,
      },
      "counsellor_record[insurance_address]": {
        required: true,
      },
      "counsellor_record[insurance_policy_no]": {
        required: true,
      },
      "counsellor_record[insurance_policy_expiry_date]": {
        required: true,
      }
    },
    messages: {
     "counsellor_record[insurance_contact_person]": {
        required: " Name is Required"
      },
    }
  });
}
validate_counsellor_form()
