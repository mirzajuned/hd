$("#surgery_packages_list").select2();
$(".counsellor-records-body").on('change', "#surgery_packages_list", function(){
  $.ajax({
    dataType: "html",
    type: 'get',
    url: '/counsellor_records/get_surgery_package_details',
    data: {
      surgery_package_id: $(this).val(),
      counsellor_record_id: "<%= @counsellor_record.id.to_s %>",
      remote: "true"
    },
    success: function(response) {
      $(".surgery_package_details").html(response)
    },
    error: function(data) {
    }
  });
});