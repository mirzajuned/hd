<div class="row">
  <div class="col-md-12">
    <strong>Laboratory</strong>
  </div>
</div>
<% if @counsellor_record.present? && @laboratory_investigations.count > 0 %>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th style="width: 20%;">Name</th>
          <th class="text-center">Advised</th>
          <th class="text-center">Counselled</th>
          <th class="text-center">Agreed</th>
          <th class="text-center">Payment Taken</th>
          <th class="text-center">Declined</th>
          <th class="text-center">Performed</th>
        </tr>
      </thead>
      <tbody>
        <% @laboratory_investigations.each do |laboratory_investigation| %>
          <tr style="font-size: 12px;">
            <td>
              <b style="color: #333;"><%= laboratory_investigation.investigationname.to_s %></b>
            </td>
            <td class="text-center">
              <% if laboratory_investigation.is_advised %>
                <%= laboratory_investigation.advised_by %><br/><%= laboratory_investigation.try(:advised_datetime).try(:strftime, '%d/%m/%Y') %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="text-center">
              <% if laboratory_investigation.is_counselled %>
                <%= laboratory_investigation.counselled_by %><br/><%= laboratory_investigation.try(:counselled_datetime).try(:strftime, '%d/%m/%Y') %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="text-center">
              <% if laboratory_investigation.has_agreed %>
                <%= laboratory_investigation.agreed_by %><br/><%= laboratory_investigation.try(:agreed_datetime).try(:strftime, '%d/%m/%Y') %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="text-center">
              <% if laboratory_investigation.payment_taken %>
                <%= laboratory_investigation.payment_taken_by %><br/><%= laboratory_investigation.try(:payment_taken_datetime).try(:strftime, '%d/%m/%Y') %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="text-center">
              <% if laboratory_investigation.has_declined %>
                <%= laboratory_investigation.declined_by %><br/><%= laboratory_investigation.try(:declined_datetime).try(:strftime, '%d/%m/%Y') %>
              <% else %>
                -
              <% end %>
            </td>
            <td class="text-center">
              <% if laboratory_investigation.is_performed %>
                <%= laboratory_investigation.performed_by %><br/><%= laboratory_investigation.try(:performed_datetime).try(:strftime, '%d/%m/%Y') %>
              <% else %>
                -
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-12">
      <i>No Laboratory Investigation</i>
    </div>
  </div>
<% end %>