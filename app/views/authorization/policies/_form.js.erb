function validate_authorization_policy_form() {
  $('#authorization_policy_form').validate({
    rules: {
      "authorization_policy[description]": {
        required: true,
      }
    },
    messages: {
      "authorization_policy[description]": {
        required: "Required."
      }
    },
    errorPlacement: function (error, element) {
      var elem = $(element);
      error.insertAfter(element);
      if(elem.hasClass("select2-hidden-accessible")) {
        element = $("#select2-" + elem.attr("id") + "-container").parent();
        error.insertAfter(element);
      } else {
        error.insertAfter(element);
      }
    }
  });
}
validate_authorization_policy_form()


