#policyWizard {
  margin-top: 2%;
}

.filter-tabs {
  display: flex;
  border-bottom: 3px #9799A0 solid;
}

.filter-tab {
  font-weight: 900;
  font-size: 20px;
  padding: 10px 20px;
  display: inline;
}

.filter-tab a {
  color: #9799A0;
  text-decoration: none;
}

.filter-tab.active a {
  color: #354670;
}

.filter-tab.active {
  border-bottom: 4px #354670 solid;
  margin-bottom: -3px;
}

.search-policies {
  width: 40%;
  padding: 8px;
  margin-top: 40px;
}

.policy-header{
  border-bottom: 1px #354670 solid;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px 12px;
}

.heading {
  font-size: 18px;
  font-weight: 900;
  color: black;
}

.policy-card {
  background-color: white;
  padding: 14px;
  border-radius: 8px;
  width: 47%;
  margin-left: 2%;
  margin-top: 1.5%;
  margin-bottom: 1%;
}

.policy-description {
  font-weight: 700;
  color: black;
}

.policy-default {
  display: inline-block;
}

.policy-value {
  font-size: 16px;
  font-weight: 900;
}

.text-success {
  color: #5CD840;
}

.text-danger {
  color: #E93B3C;
}

.header {
  margin-top: 3%;
}

.add-new-policy {
  position: relative;
  top: -4px;
}

.heading-feature {
  font-size: 14px;
}

.policy {
  padding: 12px 0px;
  border-radius: 8px;
  background: #E6E6E6;
  margin-top: 16px;
}

.policy-header {
  border-bottom: 1px #354670 solid;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px 12px;
}

.authorization-modal-title {
  color: #354670;
  font-weight: 900;
  text-align: center;
}

.user_policy_details {
  margin:36px 0px;
  display: flex;
  align-items: center;
}

.user_policy_name {
  font-size: 20px;
}
