<%= javascript_include_tag 'application-loggedin', 'data-turbolinks-track' => true %>
<div class="modal-dialog" style="width: 95%" >
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Edit Policy Template</h4>
    </div>

    <%= form_for @policy_template, remote: true, html: { id: 'authorization_policy_template_form' } do |f| %>
      <%= f.hidden_field :organisation_id, { value: @current_user.organisation_id } %>
      <%= f.hidden_field :last_edited_by, { value: @current_user.fullname } %>
      <%= f.hidden_field :policy_ids, { value: @policy_template.policy_ids } %>

      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-content policy-template-form-content" id="policy_template_form" style="box-shadow: none;background:#fff;margin-top: 25px;">
              <%= render partial: 'authorization/policy_templates/form.html.erb', locals: { f: f } %>
            </div>
          </div>
        </div>


      </div>
      <div class="modal-footer">
        <%= f.submit 'Save Changes', { class: 'btn btn-success', onclick: 'validate_policy_template_form()' } %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>

  </div>
</div>

<style type="text/css">

  .ui-menu-item a.ui-state-focus {
    background-color: #929090;
    color: #fff;
  }

  .select2-container .select2-selection--single {
    height: 34px !important;
  }
</style>
