<div class="modal-dialog modal-hg-invoice" style="width: 45%;">
	<div class="modal-content">  
	  		
	    <div class="modal-header">
	    	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<h4 class="modal-title">Preview</h4>
		</div>
		<div class="modal-body">
			<%= form_for(@user,:remote=>true) do |f| %>
              <%= f.hidden_field :id %>
              <table class="table table-hover">
              <tr>
                <td><label >Name:</label></td>
                <td> <%= @user.salutation %> <%= @user.fullname %></td>
                <td><label >AGE:</label></td>
                <td><%= @user.age %></td>
              </tr>
              <tr>
                <td><label>Designation </label></td>
                <td> <%= @user.designation %></td>
                <td><label> Role</label></td>                
                  <td><% if @user.roles[1].try(:name?).present? %>
                  <%= @user.roles[0].name.capitalize + " & " + @user.roles[1].name.capitalize %>
                  <% else %>
                  <%= @user.roles[0].name.capitalize %>
                    <% end %>
                    </td>
                </tr>
                <tr>
                <td> <%= f.label "Department:" %></td>
                <td><%= @user.department.name %></td>
                <td><%= f.label "Employee ID:" %></td>
                <td><%= @user.employee_id %></td>
                </tr>
                <tr>
                <td><label >Gender:</label></td>
                
                 <td> <%= @user.gender %></td>
                <td>
                <label >DOB:</label>
                </td>
                  <td><%= @user.dob %>
                </td>             
                <tr>

                <td>
                <label >Mobile Number:</label></td>
                <td><%= @user.mobilenumber %></td>
                <td><label> Email:</label></td>
                <td><%= @user.email %></td>
                </tr>


            <tr>
              <td><%= f.label "Locations:" %></td>
              <td><%= (@user.facilities.pluck(:name)).join(" ; ") %></td>
              <td><%= f.label "Address:" %></td>
              <td><%= @user.address %></td>
            </tr>

              <tr>
                <td><label>City </label></td>
                <td> <%= @user.city %></td>
                <td><label>State</label></td>
                <td><%= @user.state %></td>
                <tr>        
                <td> <label >Pin Code</label></td> 
                <td><%= @user.pincode %></td>
                <td><label>Landline</label></td>
                <td><%= @user.telephone %></td>
                </tr>              
              </table>
				<div class="row form-group">
					<div class="col-md-3"></div>
					<div class="col-md-9"><%= link_to edit_user_path(:id => @user.id), :data => {:remote => true}, :class => 'btn btn-primary' do %><i class="fa fa-pencil-square-o"></i>Edit<% end %>
				</div>

			<% end %>
		</div>
	</div>
</div>
