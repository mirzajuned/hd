<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog" style="width:40%;">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
      <h4 class="modal-title">Link User to Facilities</h4>
    </div>
    
    <%= form_tag("/users/link_facilities_save", method: "post", remote: true, id: 'link_facilities_save') do %>
      <%= hidden_field_tag "user[id]", @user.id %>
      <div class="modal-body" style="padding: 30px;">
        <div class="row">
          <div class="col-sm-12">
            <div style="padding-bottom: 3px;"><strong>Select Facilities to link with this user</strong><br></div>
            <%= select_tag "user[facility_ids][]", options_for_select(@facilities_to_link.collect {|c| ["#{c.name}", c.id] }), { class: 'form-control', id: 'user_facility_ids', multiple: 'multiple', style:'max-height:34px;'} %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= submit_tag "Save", class: 'btn btn-success', id: 'validate_facility', onclick: 'validate_facility_link()' %>
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
      </div>
    <% end %>

  </div>
</div>