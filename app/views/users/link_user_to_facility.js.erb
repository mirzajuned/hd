jQuery("#user-modal").html("<%= escape_javascript(render 'link_user_to_facility') %>")
$("#user_facility_ids").select2();

function validate_facility_link() {
  $('#link_facilities_save').validate({
    rules: {
      "user[facility_ids][]": {
        required: true,
      }
    },
    messages: {
      "user[facility_ids][]": {
        required: "Select facility first"
      }
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  });
}
validate_facility_link()