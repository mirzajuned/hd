<%if @department_id.present?  %>
  <%= select_tag "user[facility_ids]",options_for_select( Facility.where(:organisation_id => current_user.organisation_id,:is_active => true, :department_ids.in=> [@department_id]).collect {|p| [ p.name, p.id ] } ,{include_blank: false}), {:class => 'form-control facilities_name',:multiple => true, 'data-placeholder' => 'Choose Facilities'} %>
<%else%>
  <%= select_tag "user[facility_ids]",options_for_select( Facility.where(:organisation_id => current_user.organisation_id,:is_active => true).collect {|p| [ p.name, p.id ] } ,{include_blank: false}), {:class => 'form-control facilities_name',:multiple => true, 'data-placeholder' => 'Choose Facilities'} %>
<%end%>

