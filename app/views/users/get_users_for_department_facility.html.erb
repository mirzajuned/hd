<% if current_facility.show_user_state %>
  <% doctors_array = @users.map { |doctor| [doctor.fullname.to_s + " | " + doctor.user_states.find_by(facility_id: @facility_id).active_state, doctor.id] } %>
<% else %>
  <% doctors_array = @users.map { |doctor| [doctor.fullname.to_s, doctor.id] } %>
<% end %>
<%= select_tag("doctors-filter", options_for_select(doctors_array),{:class => 'form-control'}) %>