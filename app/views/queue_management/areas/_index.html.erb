<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Areas</h4>
    </div>
    <div class="modal-body">
      <div id="new-area">
        <%= form_tag queue_management_areas_path, method: :post, remote: true, id: 'new-area-form', class: 'new-area-form' do %>
          <%= hidden_field_tag 'area[organisation_id]', current_user.organisation_id %>
          <%= hidden_field_tag 'area[user_id]', current_user.id %>
          <div class="row">
            <div class="col-xs-4">
              <b>Step 1 : Select Facility</b>
              <%= select_tag 'area[facility_id]', options_for_select(@facilities, params[:facility_id]), class: 'area_facility_id form-control' %>
            </div>
            <div class="col-xs-6 col-xs-offset-1">
              <div class="row" style="padding:10px;border:1px solid #eee;">
                <div class="col-md-12">
                  <b>Step 2 : Add Area</b>
                  <%= text_field_tag 'area[name]', '', class: 'form-control area-name p7_10' %>
                </div>
                <div class="col-md-12 mt5">
                  <%= submit_tag 'Create', class: 'btn btn-success btn-xs btn-create-area', data: { 'disable-with': 'Please Wait...' }, onclick: 'queue_area_form()' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <hr>
      <div id="index-area-form">
        <!-- Index View Content Based on Facility Dropdown Change -->
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>

<script type="text/javascript">
  <%= render partial: 'index.js.erb' %>
</script>
