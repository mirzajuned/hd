<%= javascript_include_tag 'application-loggedin', 'data-turbolinks-track' => true %>
<div class="modal-dialog screen-dialog" style="width:60%;">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Add Screens</h4>
    </div>
    <%= form_tag queue_management_screens_path, method: :post, remote: true, id: 'new-screen-form', class: 'new-screen-form' do %>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-5 col-md-offset-1">
            <b>Step 1 : Select Facility</b>
            <%= select_tag :facility_id, options_for_select(@facilities, params[:facility_id]), class: 'screen_facility_id form-control' %>
          </div>
        </div>
        <div id="screen-form">
          <%= render partial: 'form.html.erb' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= submit_tag 'Save', class: 'btn btn-success btn-save-screen', data: { 'disable-with': 'Please Wait...' }, onclick: 'queue_screen_form()' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>

<style type="text/css">
  .screen-form, .screen-message {
    margin: 0 10px 10px 10px;
  }

  .screen-form-header {
    margin: 0 10px 0px 10px;
  }

  .screen-form-row {
    padding: 8px;
  }

  .screen-dialog hr {
    border-color: #000 !important;
  }
</style>

<script type="text/javascript">
  <%= render partial: 'new.js.erb' %>
</script>
