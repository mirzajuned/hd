<%= javascript_include_tag 'application-loggedin', 'data-turbolinks-track' => true %>
<div class="modal-dialog station-dialog" style="width:60%;">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Add Stations</h4>
    </div>
    <%= form_tag queue_management_stations_path, method: :post, remote: true, id: 'new-station-form', class: 'new-station-form' do %>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-5 col-md-offset-1">
            <b>Step 1 : Select Facility</b>
            <%= select_tag :facility_id, options_for_select(@facilities, params[:facility_id]), class: 'area_facility_id form-control' %>
          </div>
          <div class="col-xs-5">
            <b>Step 2 : Select Area</b>
            <%= select_tag :area_id, options_for_select(@areas.pluck(:name, :id), @areas.first&.id), class: 'area_id form-control' %>
          </div>
        </div>
        <div id="station-form">
          <%= render partial: 'form.html.erb' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= submit_tag 'Save', class: 'btn btn-success btn-save-station', data: { 'disable-with': 'Please Wait...' }, onclick: 'stationValidation()' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>

<style type="text/css">
  .station-form, .sub_station-form, .station-message {
    margin: 0 10px 10px 10px;
  }

  .station-form-row {
    padding: 8px;
  }

  .station-dialog hr {
    border-color: #000 !important;
  }
</style>

<script type="text/javascript">
  <%= render partial: 'new.js.erb' %>
</script>
