<div class="col-md-12">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-left">Mode Of Payment</h4>
    </div>
    <div class="col-sm-12">
      <div class="panel panel-primary panel-stat mt10">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-2">
              <img src="/images/is-money.png" alt="">
            </div>
            <div class="col-xs-">
              <small class="stat-label">Total Earnings</small>
              <h1><%= @currency.symbol %> <%= (@payment_received_cash.to_f + @payment_received_card.to_f + @payment_received_cheque.to_f + @payment_received_transfer.to_f + @payment_received_others.to_f).to_f.round(2) %></h1>
            </div>
          </div><!-- row -->

          <div class="mb15"></div>
          <div class="stat">
            <div class="row">
              <div class="col-xs-2" style="width:20%;">
                <small class="stat-label">Cash</small>
                <h4 style="font-size: 24px;"><%= @currency.symbol %> <%= @payment_received_cash.to_f.round(2) %></h4>
              </div>

              <div class="col-xs-2" style="width:20%;">
                <small class="stat-label">Card</small>
                <h4 style="font-size: 24px;"><%= @currency.symbol %> <%= @payment_received_card.to_f.round(2) %></h4>
              </div>

              <div class="col-xs-2" style="width:20%;">
                <small class="stat-label">Cheque</small>
                <h4 style="font-size: 24px;"><%= @currency.symbol %> <%= @payment_received_cheque.to_f.round(2) %></h4>
              </div>

              <div class="col-xs-2" style="width:20%;">
                <small class="stat-label">Online Tranfer</small>
                <h4 style="font-size: 24px;"><%= @currency.symbol %> <%= @payment_received_transfer.to_f.round(2) %></h4>
              </div>

              <div class="col-xs-2" style="width:20%;">
                <small class="stat-label">Others</small>
                <h4 style="font-size: 24px;"><%= @currency.symbol %> <%= @payment_received_others.to_f.round(2) %></h4>
              </div>
            </div><!-- row -->

          </div><!-- stat -->

        </div><!-- panel-heading -->
      </div><!-- panel -->
    </div>
  </div>
</div>