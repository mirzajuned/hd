<div class="row">
  <div class="col-md-12 text-center">
    <button class="btn btn-primary btn-xs pull-left statistics_parent_link all" data-filter="All"><i class="fa fa-arrow-left"></i> Back to Dashboard</button>
    <% if @daily_reports.count > 0 && @daily_reports.pluck(:opd_cash_reg_transaction).map(&:to_f).sum + @daily_reports.pluck(:opd_invoice_transaction).map(&:to_f).sum > 0 %>
      <%= link_to statistics_print_setting_path(flag: 'opd_multidate_view', start_date: @start_date, end_date: @end_date), data: { remote: true, 'toggle': 'modal', 'target': '#invoice-modal' }, class: 'btn btn-primary btn-xs pull-right' do %><i class="fa fa-print"></i> Print<% end %>
    <% end %>
    <h3 style="color:#000;">OPD INVOICES <small>(<%= Date.parse(@start_date).strftime('%d/%m/%Y') %> - <%= Date.parse(@end_date).strftime('%d/%m/%Y') %>)</small></h3>
  </div>
</div>

<table class="table">
  <thead style="border-top:1px solid #000;border-bottom:1px solid #000;">
    <tr>
      <th><b>S No.</b></th>
      <th><b>Date</b><span style="font-size:8px;">&nbsp;(Click For Details)</span></th>
      <th class="text-right"><b>Cash Register</b></th>
      <th class="text-right"><b>Receipt</b></th>
      <th class="text-right"><b>Tax</b></th>
      <th class="text-right"><b>Received</b></th>
      <th class="text-right"><b>Pending</b></th>
      <th class="text-right"><b>Total</b></th>
    </tr>
  </thead>
  <tbody style="border-top:1px solid #000;border-bottom:1px solid #000;">
    <% if @daily_reports.count > 0 && @daily_reports.pluck(:opd_cash_reg_transaction).map(&:to_f).sum + @daily_reports.pluck(:opd_invoice_transaction).map(&:to_f).sum > 0 %>
      <tr>
        <td class="main-display-row" colspan="2">Total :</td>
        <td class="text-right main-display-row"><%= @currency.symbol %><%= (@daily_reports.pluck(:opd_cash_reg_transaction).map(&:to_f).sum).round(2) %></td>
        <td class="text-right main-display-row"><%= @currency.symbol %><%= (@daily_reports.pluck(:opd_invoice_transaction).map(&:to_f).sum - @daily_reports.pluck(:non_taxable_amount).map(&:to_f).sum).round(2) %></td>
        <td class="text-right main-display-row"><%= @currency.symbol %><%= @daily_reports.pluck(:opd_tax_collected).map(&:to_f).sum %></td>
        <td class="text-right main-display-row"><%= @currency.symbol %><%= @daily_reports.pluck(:opd_cr_payment_received).map(&:to_f).sum + @daily_reports.pluck(:opd_invoice_payment_received).map(&:to_f).sum %></td>
        <td class="text-right main-display-row"><%= @currency.symbol %><%= @daily_reports.pluck(:opd_invoice_payment_pending).map(&:to_f).sum %></td>
        <td class="text-right main-display-row"><%= @currency.symbol %><%= @daily_reports.pluck(:opd_cash_reg_transaction).map(&:to_f).sum + @daily_reports.pluck(:opd_invoice_transaction).map(&:to_f).sum %></td>
      </tr>
      <% counter = 1 %>
      <% @daily_reports.order(date: :desc).each do |daily_reports| %>
        <% if daily_reports.opd_cash_reg_transaction + daily_reports.opd_invoice_transaction != 0.0 %>
          <tr>
            <td><%= counter %></td>
            <td><button class="btn btn-link btn-xs btn-awesome" data-date-form = "<%= daily_reports.date %>" style="color: #354670;font-size: 14px;font-weight: bolder;text-decoration: underline;"><%= daily_reports.date.strftime("%d/%m/%Y") %></button></td>
            <td class="text-right"><%= @currency.symbol %> <%= daily_reports.opd_cash_reg_transaction %></td>
            <td class="text-right"><%= @currency.symbol %> <%= daily_reports.opd_invoice_transaction %></td>
            <td class="text-right"><%= @currency.symbol %> <%= daily_reports.opd_tax_collected %></td>
            <td class="text-right"><%= @currency.symbol %> <%= daily_reports.opd_cr_payment_received + daily_reports.opd_invoice_payment_received %></td>
            <td class="text-right"><%= @currency.symbol %> <%= daily_reports.opd_invoice_payment_pending %></td>
            <td class="text-right"><%= @currency.symbol %> <%= daily_reports.opd_cash_reg_transaction + daily_reports.opd_invoice_transaction %></td>
          </tr>
          <% counter += 1 %>
        <% end %>
      <% end %>
    <% else %>
      <tr>
        <td colspan="11" class="text-center">No Data to Display</td>
      </tr>
    <% end %>
  </tbody>
</table>

<style type="text/css">
  .main-display-row {
    color:#000;
    font-size: 16px; 
  }
</style>


