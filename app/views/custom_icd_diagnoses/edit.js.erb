jQuery("#custom-icd-modal").html("<%= escape_javascript(render 'edit') %>")

function validate_custom_icd_page() { 
  $("#edit_custom_icd_diagnosis").validate({
    rules: {
      "custom_icd_diagnosis[originalname]": {
        remote: "/custom_icd_diagnoses/update_name_validation?saved_icd_name=<%= @custom_icd_diagnosis.fullname %>&&icd_from=custom",
        required: true,
        minlength: 3
      },
      "synonym_icd_diagnosis[fullname]": {
        remote: "/custom_icd_diagnoses/update_name_validation?saved_icd_name=<%= @custom_icd_diagnosis.fullname %>&&icd_from=synonym",
        required: true,
        minlength: 3
      }
    },
    messages: {
      "custom_icd_diagnosis[originalname]": {
        remote: "Name already exist in Custom/ Synonym, try another",
        required: "Please fill the ICD name."
      },
      "synonym_icd_diagnosis[fullname]": {
        remote: "Name already exist in Custom/ Synonym, try another",
        required: "Please fill the ICD name."
      }
    },
  });
}
