          onSelect: function (dateText,obj) {
              pushPageState({x: "1"}, "", "/prescriptions/pharmacy/"+moment(dateText, "DD/MM/YYYY").format('DD-MMM-YYYY'))
              $.ajax({
                  type: "GET",
                  dataType: "script",
                  url: "/prescriptions/pharmacy/"+moment(dateText, "DD/MM/YYYY").format('DD-MMM-YYYY')
              })
          }
