<% if @mode != "tabview" %>
  <% if timeline['pst'][0]['event_id'] == 5110014 || timeline['pst'][0]['event_id'] == 5110015 %>
  	<% invoice_path = "show_modal_invoice_inventory_invoices_path(:id => timeline['pst'][0]['query']['_id'], :from => 'show_bills')" %>
  	<%= link_to eval(invoice_path), :class => "btn btn-xs btn-circle btn-success btn-success-transparent", title: "View Receipt", :data => {:remote => true} do %><i class="fa fa-file-alt"></i><% end %>
  <% elsif timeline['pst'][0]['event_id'] == 5110016 || timeline['pst'][0]['event_id'] == 5110017 %>
  	<% invoice_path = "show_modal_refund_invoice_inventory_invoices" + "_path(:id => timeline['pst'][0]['query']['_id'])" %>
  	<%= link_to eval(invoice_path), :class => "btn btn-xs btn-circle btn-success btn-success-transparent", title: "View Receipt", :data => {:remote => true} do %><i class="fa fa-file-alt"></i><% end %>
  <% else %>
  	<% invoice_path = "invoice_"+ timeline['pst'][0]['event_name'].split(' ')[0].downcase + "_path(:id => timeline['pst'][0]['query']['_id'])" %>
  	<%= link_to eval(invoice_path), :class => "btn btn-xs btn-circle btn-success btn-success-transparent", title: "View Receipt", :data => {:remote => true} do %><i class="fa fa-file-alt"></i><% end %>
  <% end %>
<% end %>