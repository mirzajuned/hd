// Window Size
var window_height = $(window).height() - 50
$(".sidebar_area").css('height',window_height)
$(".timeline_main_content").css('height',window_height)

$(window).resize(function() {
  var window_height = $(window).height() - 50
  $(".sidebar_area").css('height',window_height)
  $(".timeline_main_content").css('height',window_height)
})

$(document).ready(function(){
  $(".edit_patient_info").on('hover', function(){
    $(this).append("&nbsp;Edit")
  })
  $(".edit_patient_info").on('mouseleave', function(){
    $(this).html("<i class='fa fa-edit'></i>")
  })
})

// If Visiting Link From Calender View
jQuery(".modal-backdrop").remove()

// Patient Note Minimize Button
$('.minimize-patient-box').on('click', function(e){
  e.preventDefault();
  $(".patient-note-section").toggle();
})


$(".btn-initial-more-detail").on('click', function(){
  if($(this).html() == "More"){
    $(this).html("Less")
    $("#initial-more-detail").show()
  } else {
    $(this).html("More")
    $("#initial-more-detail").hide()
  }
})