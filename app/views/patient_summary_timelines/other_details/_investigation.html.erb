<% unless OrganisationsSetting.find_by(organisation_id: current_user.try(:organisation_id)).try(:disable_default_investigation) %>
  <% if (current_facility.department_ids.include?('261904005') || current_facility.department_ids.include?('309935007') || current_facility.department_ids.include?('309964003')) && (current_facility.country_id != 'KH_039') %>
    <button type="button"  class="btn btn-primary btn-primary-transparent btn-xs" data-toggle="dropdown">
      <span class="">Add Investigation</span>&nbsp;
      <span class="caret fa-color"></span>
    </button>
    <% specialty_ids = current_organisation["specialty_ids"] %>
    <ul class="dropdown-menu children dropdown-menu-right add-investigation-dropdown" style="margin: -4px 36px;">
      <% if specialty_ids.include?("309988001") %>
        <li><%= link_to new_investigation_investigation_detail_path(patient_id: @patient.id, flag: 'ophthal', specialty_id: specialty_ids[0]), :class => "text-center", data: { remote: true, 'toggle': 'modal', 'target': '#investigation-modal' } do %>Ophthal<% end %></li>
      <% end %>

      <li><%= link_to new_investigation_investigation_detail_path(patient_id: @patient.id, flag: 'laboratory', specialty_id: specialty_ids[0]), :class => "text-center", data: { remote: true, 'toggle': 'modal', 'target': '#investigation-modal' } do %>Laboratory<% end %></li>
      
      <% if ['309988001', '309989009'].include?(specialty_ids[0]) %>
        <li><%= link_to new_investigation_investigation_detail_path(patient_id: @patient.id, flag: 'radiology', specialty_id: specialty_ids[0]), :class => "text-center", data: { remote: true, 'toggle': 'modal', 'target': '#investigation-modal' } do %>Radiology<% end %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>  