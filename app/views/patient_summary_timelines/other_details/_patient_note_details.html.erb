<div class="row">
  <div id="patient-notes-header" class="col-md-10 col-md-offset-1" style="padding:5px 0px;">
    <div class="panel panel-default" style="margin-left: 3px;">
      <div class="panel-heading" style="background-color: #49587E;margin-top: 0px;line-height: 0px;padding: 10px;">
        <div class="panel-btns">
          <a href="" class="minimize minimize-patient-box" style="margin-top: 0px;color: white;opacity: 1">-</a>
        </div><!-- panel-btns -->
        <p class="panel-title"  style="font-size: 11px;margin-top: 0px;line-height: 0px;color: white">PATIENT NOTE</p>
      </div>
      <div class="panel-body patient-note-section" style="display: block;padding: 0 15px;">
        <%= form_tag "/opd_appointments/save_patient_note.js", :method => :post, :remote => true, :id => 'note_form', :class => 'form form-bordered' do %>
          <span class="col-md-10 row mb15" ><%= hidden_field_tag :patient_id ,@patient.id,class: 'form-control'%></span>
          <div class="mb15 row">
            <div class="col-md-12 col-sm-12">
              <span class="col-xs-12  mb15" ><%= text_area_tag :comment ,"",class: 'form-control patient-note-message message',id: 'patient_note_textarea',placeholder: "Enter your note..",style: "width: 100%; max-width: 280px; min-width: 224px; max-height:100px;"%></span>
            </div>  
            <div class="col-md-12 col-sm-12 pull-right">
              <span class="col-xs-12"><%= submit_tag("Save",{:class=>"btn btn-success btn-sm",:id=>"submit_patient_note", :style=>"float: right; margin-right: 26px;"}) %></span>
            </div>  
          </div>
          <div class="mb5" style="color:red">
            <span class="error-notes-message" style="display:none">Please enter the note first</span>
          </div>
        <%end%>
        <div id="patient-notes">
          <%= render partial: "patient_summary_timelines/other_details/patient_notes.html.erb" %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $("#submit_patient_note").on('click', function(e){
    var val = $("#patient_note_textarea").val();
    if(val == ""){
      e.preventDefault();
      $(".error-notes-message").css("display", "block");
      $(".error-notes-message").fadeOut(4000);
    }    
  })
  
</script>