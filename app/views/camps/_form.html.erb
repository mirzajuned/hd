<div class="device-name" style="text-align: left;">
  <div class="row"  style="padding: 1%;">
    <div class="col-md-12" >
      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>Camp Name</label>
          </div>
          <div class="form-group col-md-9">
            <%= f.text_field :camp_name , class: 'form-control p5_10'%>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>Camp Type</label>
          </div>
          <div class="form-group col-md-9">
            <%= f.select :camp_type, ['For Profit', 'Non Profit'], { include_blank: 'Select Type' }, class: 'form-control p5_10 camp_facility_select' %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>Select facility</label>
          </div>
          <%= f.hidden_field :country_id, value: current_facility.country_id %>
          <div class="form-group col-md-9">
            <%= f.select :facility_id, options_for_select(@facility_arr,@camp.facility_id || current_facility.id), { include_blank: false}, class: 'form-control p5_10 camp_facility_select',id: 'fac_dropdown', :disabled => @type.present?  %>
            <%if @type.present? %>
              <%= f.hidden_field :facility_id, value: current_facility.id %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row"  style="padding: 1%;">
    <div class="col-md-12">
      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>Contact Persons</label>
          </div>
          <div class="form-group col-md-9">
            <%= f.text_field :contact_person, class: 'form-control p5_10' %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>Contact No.</label>
          </div>
          <div class="form-group col-md-9">
            <%= f.text_field :contact_no, class: 'form-control p5_10', minlength: Facility.find(current_facility.id).country.minimum_phone_no_length.to_i, maxlength: Facility.find(current_facility.id).country.maximum_phone_no_length.to_i, onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>Sponsors</label>
          </div>
          <div class="form-group col-md-9"  id="sponsors">
            <%= f.select :co_sponsors, options_for_select(@sponsors,@camp.co_sponsors ), { }, multiple: true, class: 'form-control p5_10 sponsor_facility_select'%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
