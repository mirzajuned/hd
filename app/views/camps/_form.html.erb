              <%= f.text_field :commune, { id: 'search_commune', validate: true, class: 'form-control camp-commune camp-address p5_10', placeholder: "Commune" } %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="col-md-12">
            <div class="col-md-3">
              <label>District</label>
            </div>
            <div class="col-md-9">
              <%= f.text_field :district, { id: 'search_district', validate: true, class: 'form-control camp-district camp-address p5_10', placeholder: "District" } %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="col-md-12">
            <div class="col-md-3">
              <label>City</label>
            </div>
            <div class="col-md-9">
