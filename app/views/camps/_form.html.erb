</div>

<div class="row" style="padding: 1%;">
  <div class="col-md-12">
    <div class="col-md-4">
      <div class="col-md-12">
        <div class="col-md-3">
          <label>Area</label>
        </div>
        <div class="form-group col-md-9">
          <%= f.text_field :area, class: 'form-control p5_10' %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="col-md-12">
        <div class="col-md-3">
          <label>Venue</label>
        </div>
        <div class="form-group col-md-9">
          <%= f.text_field :venue, class: 'form-control p5_10' %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="col-md-12">
        <div class="col-md-3">
          <label>No. of days</label>
        </div>
        <div class="form-group col-md-9">
          <%= f.text_field :days, class: 'form-control p5_10', onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" style="padding: 1%;">
  <div class="col-md-12">
    <div class="col-md-4">
      <div class="col-md-12">
        <div class="col-md-3">
          <label>Expected Outpatients</label>
        </div>
        <div class="form-group col-md-9">
          <%= f.text_field :expected_outpatients, class: 'form-control p5_10', onkeypress: 'return event.charCode >= 48 && event.charCode <= 57'%>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="col-md-12">
        <div class="col-md-3">
          <label>Expected Surgeries</label>
        </div>
        <div class="form-group col-md-9">
          <%= f.text_field :expected_surgeries, class: 'form-control p5_10', onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="col-md-12">
        <div class="col-md-3">
          <label>Camp Date</label>
        </div>
        <div class="form-group col-md-9">
          <%= f.text_field :camp_date, class: 'form-control p5_10 camp-datepicker',  readonly: 'readonly' %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" style="padding: 1%;">
  <div class="col-md-12">
    <div class="col-md-4" style="padding: 1%;">
      <div class="col-md-12">
        <div class="col-md-3">
          Review camp applicable
        </div>

        <div class="col-md-9">

          <div class="col-md-4" style="padding: 0px;">
            <div class="rdio rdio-primary rdio-changes">
              <%= f.radio_button :review_camp_applicable, true, { :class => 'radio-inline', id: "review_yes" } %>
              <label style="padding-left:5px;" for="review_yes"> Yes</label>
            </div>
          </div>
          <div class="col-md-4" style="padding: 0px;">
            <div class="rdio rdio-primary rdio-changes">
              <%= f.radio_button :review_camp_applicable, false, { :class => 'radio-inline', id: "review_no" } %>
              <label style="padding-left:5px;" for="review_no"> No</label>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id= "review" style="display: none;">
      <div class="col-md-4" style="padding: 1%;">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>Review date</label>
          </div>
          <div class="form-group col-md-9">
            <%= f.text_field :review_date ,class: 'form-control p5_10 camp-datepicker', readonly: 'readonly' %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <labe>Review Camp Venue</labe>
          </div>
          <div class="form-group col-md-9">
            <%= f.text_field :review_camp_venue, class: 'form-control p5_10' %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script>

  $('.sponsor_facility_select').select2({multiple: true});

  $("#fac_dropdown").on('change', function() {
        var fac_id = $('#fac_dropdown').val()
        $.ajax({
          url: "/camps/facility_sponsors",
          type: "GET",
          data: {facility_id: fac_id},
          // Callbacks that will be explained
          success: function(data) {
            $(".sponsor_facility_select").children().remove();
            $('.sponsor_facility_select').select2({
              data: data,
              multiple: true
            });

            }

          } )
        })
   var rad =  $('#review_yes').val()
    if (rad == true){
      $('#review').show();
    }else{
      $('#review').hide();
    }

  $("#review_yes").on('click', function() {
    $('#review').show();

  })
  $("#review_no").on('click', function() {
    $('#review').hide();

  })



</script>