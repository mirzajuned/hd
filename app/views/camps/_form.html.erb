          </div>
        </div>
      </div>


      <div class="col-md-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>State</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :state, {id:'search_state', validate: true, class: 'form-control camp-state camp-address p7_10', placeholder: "State" } %>
          </div>
