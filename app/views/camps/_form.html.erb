      <div class="col-sm-4">
        <div class="col-md-12">
          <div class="col-md-3">
            <label>City</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :city, { id:'search_city', validate: true, class: 'form-control camp-city camp-address p7_10', placeholder: "City" } %>
          </div>
        </div>
      </div>
