if($(".appointment-panel").length > 0){
  var active_tab = $(".tab_active").find(".active").attr('data-tab-id')
  if(active_tab != "all"){
    active_tab = "<%= @active_tab %>"
  }
  refresh_appointment_management("<%= @appointment.consultant_id %>",active_tab,'<%= @appointment.id.to_s %>',"<%= @appointment.appointmentdate %>")
} else if($(".appointment-calendar-panel").length > 0) {
  $("#opd-calendar").fullCalendar('refetchEvents');
}

// Patient Timeline
if($(".patient-timeline-panel").length > 0){
  $("#btn-timeline-refresh").trigger("click")
}