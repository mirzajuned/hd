$('#referral-modal').modal('hide')

if($(".appointment-panel").length > 0){
  change_sub_referral_type("<%= @sub_referral_type.try(:referral_type_id) %>", "<%= @sub_referral_type.try(:id) %>")
} else {
	$("#sub-referral-list").html('<%= escape_javascript(render partial: "index.html.erb") %>')
  
  if('<%= @sub_referral_type.try(:referral_type_id).to_s %>' != ''){
    $("#referral_type").val('<%= @sub_referral_type.try(:referral_type_id).to_s %>')
  }
}