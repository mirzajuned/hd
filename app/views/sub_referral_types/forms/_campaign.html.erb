<% @campaign_type = Global.sub_referral_type.campaign_type.to_hash.map { |key, value| [value, key] } %>
<div class="row">
  <div class="col-md-12">
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[name]', @sub_referral_type.try(:name), class: 'form-control p5_10', placeholder: 'Name' %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3 campaign_type_id_section">
        <%= select_tag('sub_referral_type[campaign_type]', options_for_select(@campaign_type, @sub_referral_type.try(:campaign_type)), include_blank: 'Campaign Type', class: 'form-control p5_10') %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[city]', @sub_referral_type.try(:city), class: 'form-control p5_10', placeholder: 'City' %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[state]', @sub_referral_type.try(:state), class: 'form-control p5_10', placeholder: 'State' %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[comment]', @sub_referral_type.try(:comment), class: 'form-control p5_10', placeholder: 'Comment' %>
      </div>
    </div>
  </div>
</div>
