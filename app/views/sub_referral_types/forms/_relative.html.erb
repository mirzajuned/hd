<div class="row">
  <%= hidden_field_tag 'sub_referral_type[is_active]', false %>
  <div class="col-md-12">
    <div class="row mb10">
      <div class="col-md-4 col-md-offset-4">
        <%= hidden_field_tag 'sub_referral_type[existing_patient]', false, id: 'sub_referral_type_ep' %> <!-- If not Checked: Send 'false' -->
        <div class="ckbox ckbox-primary">
          <%= check_box_tag 'sub_referral_type[existing_patient]', true, false, id: 'sub_referral_type_existing_patient' %>
          <label for="sub_referral_type_existing_patient">Existing Patient</label>
        </div>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[name]', @sub_referral_type.try(:name), class: 'form-control p5_10', placeholder: 'Name' %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[mobile_number]', @sub_referral_type.try(:mobile_number), class: 'form-control p5_10', placeholder: 'Mobile', maxlength: 10, onkeypress: 'return event.charCode >= 48 && event.charCode <= 57' %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[email]', @sub_referral_type.try(:email), class: 'form-control p5_10', placeholder: 'Email' %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[relation]', @sub_referral_type.try(:relation), class: 'form-control p5_10', placeholder: 'Relation' %>
      </div>
    </div>
    <div class="row mb10">
      <div class="col-md-6 col-md-offset-3">
        <%= text_field_tag 'sub_referral_type[comment]', @sub_referral_type.try(:comment), class: 'form-control p5_10', placeholder: 'Comment' %>
      </div>
    </div>
  </div>
</div>
