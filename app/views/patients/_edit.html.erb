<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog admission-dialog" style="width: 60%;">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Edit Patient Form</h4>
    </div>
    <%= simple_form_for @patient, remote: true, html: { id: 'edit-patient-form', class: "patient-form" } do |patient| %>
      <div class="modal-body" style="padding:5px 10px;background: #eee;">
        <div class="row">
          <div class="col-sm-12">
            <%= render partial: 'patients/form.html.erb', locals: { f: patient } %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= patient.submit "Save", class: "btn btn-success", data: { 'disable-with': 'Please Wait...' }, :onclick => 'patient_page()' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>