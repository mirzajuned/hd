                      <% if @patient.dob %><% @dob_edit = @patient.dob.strftime("%d/%m/%Y") %><% else %><%= @dob_edit = "" %><% end %>
                      <%= patient.text_field :dob, {:class => 'form-control patientdob', :id => "patientdob-datepicker-inline", :placeholder => "dd/mm/yyyy", value: @dob_edit } %>
                    </div>
                  </div>
                  <div class="col-md-1">
                    <label class="control-label">Age:</label>
                  </div>
                  <div class="col-md-2" style="margin-top: -20px">
                    Yrs<br>
                    <%= patient.text_field :age, {:maxlength => 3, :size => 3, :class => 'form-control patientage' } %>
                  </div>
                  <div class="col-md-2" style="margin-top: -20px">
