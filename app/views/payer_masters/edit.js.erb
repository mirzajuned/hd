function payer_edit() {
  $("#edit_payer_master").validate({
    rules: {      
      "payer_master[display_name]": {
        required: true,
      },
      "payer_master[facility_id]": {
        required: true
      },
      "payer_master[contact_group_id]": {
        required: true
      },
      "payer_master[payer_type_id]": {
        required: true
      },
      "payer_master[city]": {
        minlength: 3  
      },
      "payer_master[state]": {
        minlength: 3 
      },
      "payer_master[pincode]": {
        minlength: 3
      }
    },
    messages: {
      "payer_master[display_name]": {
        required: "Display Name is Required"
      },
      "payer_master[facility_id]": {
        required: "Facility is Required",
      },
      "payer_master[contact_group_id]": {
        required: "Contact Group is Required",
      },
      "payer_master[payer_type_id]": {
        required: "Payer Type Master is Required",
      }
    },
    errorPlacement: function (error, element) {
      var elem = $(element);
      error.insertAfter(element);
      if(elem.hasClass("select2-hidden-accessible")) {
        element = $("#select2-" + elem.attr("id") + "-container").parent();
        error.insertAfter(element);
      } else {
        error.insertAfter(element);
      }
    }
  });
}
payer_edit()

