<div class="row mb10" style="background:#354670;color:#fff">
  <div class="col-md-8">
    <h4>Custom Radiology Investigation</h4>
  </div>
  <div class="col-md-4 text-right">
    <% unless OrganisationsSetting.find_by(organisation_id: current_user.try(:organisation_id)).try(:disable_default_investigation) %>
      <%= link_to new_custom_radiology_investigation_path, class: "btn btn-primary navbar-btn", data: {remote: true, 'toggle': 'modal', 'target': '#custom-radiology-investigation-modal'} do %><i class="fa fa-plus"></i>&nbsp;&nbsp;Create New Investigation<% end %>
    <% end %>
  </div>
</div>

<div class="panel-body">
  <table class="table table-striped" id="custom-radiology-investigations-list">
  </table>

  <div class="enable_disable_btn" style="margin-top: 50px;">
    <button class="btn btn-primary pull-right show_disable">Show Disabled Investigations</button>
    <button class="btn btn-primary pull-right hide_disable" id="hide_disable">Hide Disabled Investigations</button>
  </div>

  <div class="disable-radiology-table" style="margin-top: 100px;">
    <div class="disable-radiology-data">
      <%= render partial: 'disabled_radiology_view.html.erb' %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.disable-radiology-table').hide()
  $('.hide_disable').hide()

  $('.show_disable').on('click', function(){
    $(this).hide();
    $('.hide_disable').show()
    $('.disable-radiology-table').show()
  })

  $('.hide_disable').on('click', function(){
    $(this).hide();
    $('.show_disable').show()
    $('.disable-radiology-table').hide()
  })
</script>