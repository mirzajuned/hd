<% if @admission_list_view.user_id == current_user.id && params[:value] == "true" && params[:state] != "ready_for_admission" %>
  $("#workflow-modal").html("<%= escape_javascript(render partial: 'update_ready_state.html.erb') %>").modal('show');
<% end %>

if($(".admission-panel").length > 0){
  $("#btn-admission-management-refresh").trigger('click');
} else if($(".admission-calendar-panel").length > 0){
  $("#ipd-calendar").fullCalendar("refetchEvents")
} else if($(".ot-panel").length > 0){
  $("#btn-ot-management-refresh").trigger('click');
} else if($(".ot-calendar-panel").length > 0){
  $("#ot-calendar").fullCalendar("refetchEvents")
}
