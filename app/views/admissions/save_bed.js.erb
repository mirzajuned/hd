$("#admission-modal").modal('hide')
if($(".admission-panel").length > 0){
  var doctor_id = $("#sidebar_doctors_admission .active").find('a').attr('data-doctor-id')
  var active_tab = $(".tab_active").find(".active").attr('data-tab-id')
  var admission_id = $("#admission_refresher").val()
  refresh_admission_management(doctor_id,active_tab,admission_id)
} else if($(".ot-panel").length > 0){
  var doctor_id = $("#sidebar_doctors_ot .active").find('a').attr('data-doctor-id')
  var active_tab = $(".tab_active").find(".active").attr('data-tab-id')
  var ot_id = $("#ot_refresher").val()
  refresh_ot_management(doctor_id,active_tab,ot_id)
} else if($(".admission-calendar-panel").length > 0) {
  $("#ipd-calendar").fullCalendar('refetchEvents');
} else if($(".ot-calendar-panel").length > 0) {
  $("#ot-calendar").fullCalendar('refetchEvents');
}

if($("#bed-details").length > 0){
  // Update Bed Details for Admission Form
  $("#bed-details").html("<%= @bed_details %>")
  $("#inpatient_ipd_record_admission_note_ward_id").val("<%= @admission.ward_id %>")
  $("#inpatient_ipd_record_admission_note_room_id").val("<%= @admission.room_id %>")
  $("#inpatient_ipd_record_admission_note_bed_id").val("<%= @admission.bed_id %>")
  $("#inpatient_ipd_record_admission_note_daycare").val("<%= @admission.daycare %>")
  $(".remove-existing-bed").show()
}