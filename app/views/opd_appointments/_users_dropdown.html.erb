<% if @users_array.count > 2 %>
    <%= select_tag("user-filter", options_for_select(@users_array, ["All Users", "0"]), {:class => 'form-control' , :style =>' padding: 8px;'}) %>
<% else %>
    <%= hidden_field_tag("user-filter", @users_array[0][1]) %> <!-- @users_array[0] is first element and @users_array[0][1] is the id -->
<% end %>