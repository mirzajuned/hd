<% if current_facility.show_user_state %>
  <% doctors_array = @users.map { |doctor| [doctor.fullname.to_s + " | " + doctor.user_states.find_by(facility_id: current_facility.id).active_state, doctor.id] } %>
<% else %>
  <% doctors_array = @users.map { |doctor| [doctor.fullname.to_s, doctor.id] } %>
<% end %>

<% if @current_doctor %>
  <% unless @current_doctor.blank? %>
    <%= select_tag("doctors-filter", options_for_select(doctors_array, @current_doctor),{:class => 'form-control user_ddapt'}) %>
  <% else %>
    <%= select_tag("doctors-filter", options_for_select(doctors_array),{:class => 'form-control user_ddapt'}) %>
  <% end %>
<% else %>
  <%= select_tag("doctors-filter", options_for_select(doctors_array),{:class => 'form-control user_ddapt'}) %>
<% end %>




