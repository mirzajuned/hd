jQuery("#appointment-modal").modal("hide")
if (<%= current_user.role_ids.include?499992366%>){
  if($(".appointment-panel").length > 0){
    $(".appointment_today").find('.active').find("[data-appointment-id='"+$("#appointment_refresher").val()+"']").trigger('click');
  }
} else if($(".appointment-panel").length > 0){
  var active_tab = $(".tab_active").find(".active").attr('data-tab-id')
  refresh_appointment_management("<%= current_user.id.to_s %>",active_tab,'<%= @appointment.id.to_s %>',"<%= @appointment.appointmentdate %>")
} else if($(".appointment-calendar-panel").length > 0){
  $('#modalCalendarAppointmentDetails').modal('hide')
  $("#opd-calendar").fullCalendar('refetchEvents')
} else if($(".patient-timeline-panel").length > 0){
  $("#btn-timeline-refresh").trigger("click")
}