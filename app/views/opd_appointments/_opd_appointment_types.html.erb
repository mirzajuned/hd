<% if @opdrecord.present? %>
  <% if "#{@opdrecord.advice.read_attribute(:appointment_type_id)}" == nil || "#{@opdrecord.advice.read_attribute(:appointment_type_id)}" == ""%>
    <%= render partial: 'opd_appointments/appointment_type_partial', locals: {
                name_attr:"opdrecord[advice_attributes][appointment_type_id]", option_values: @appointment_types, selected: ""} %>

    <%else%>
    <%= render partial: 'opd_appointments/appointment_type_partial', locals: {
                name_attr:"opdrecord[advice_attributes][appointment_type_id]", option_values: @appointment_types, selected: "#{@opdrecord.advice.read_attribute(:appointment_type_id)}".to_s} %>
    <%end%>
<%else%>
  <%= render partial: 'opd_appointments/appointment_type_partial', locals: {
                name_attr:"opdrecord[advice_attributes][appointment_type_id]", option_values: @appointment_types, selected: ""} %>
                
  <script type="text/javascript">
    $('input.type-checkbox').on('change', function() {
      $("input.type-checkbox").attr("checked", false);
      $(this).attr("checked", true);
  });
  </script>
<%end%>