if($(".appointment-panel").length > 0){
  $(".counsellor-note-message").val("")
  $("#counsellor-notes").html("<%= escape_javascript(render partial: 'outpatients/appointment/appointment_details/counsellor_notes.html.erb') %>");
} else if($(".appointment-calendar-panel").length > 0) {
  $(".counsellor-note-message").val("")
  $("#counsellor-notes").html("<%= escape_javascript(render partial: 'outpatients/appointment/appointment_details/counsellor_notes.html.erb') %>");
} else {
    jQuery(".counsellor_note_appointment").html("<%= escape_javascript(render partial: 'opd_appointments/show_counsellor_note') %>")
    jQuery('.minimize').click(function(){
        var t = jQuery(this);
        var p = t.closest('.panel');
        if(!jQuery(this).hasClass('maximize')) {
            p.find('.panel-body, .panel-footer').slideUp(200);
            t.addClass('maximize');
            t.html('&plus;');
        } else {
            p.find('.panel-body, .panel-footer').slideDown(200);
            t.removeClass('maximize');
            t.html('&minus;');
        }
        return false;
    });
}
if($('.patient-timeline-panel').length > 0){
    $(".counsellor-note-message").val("")
    $("#counsellor-notes").html("<%= escape_javascript(render partial: 'outpatients/appointment/appointment_details/counsellor_notes.html.erb') %>");
}