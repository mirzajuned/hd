<% if appointment.current_state == "scheduled" %>
        <time class="badge badge-warning mr10" id="waiting-time-<%=appointment.id.to_s %>"><%= appointment.waiting_time_min.to_s %></time><time class="badge badge-warning mr10" id="engage-time-<%=appointment.id.to_s %>"><%= appointment.engaged_time_min.to_s %></time><time class="badge badge-warning" id="total-time-<%=appointment.id.to_s %>"><%= appointment.total_time_min.to_s %></time>
<% elsif appointment.current_state == "waiting" %>
        <time class="badge timeago badge-warning mr10" datetime="<%= appointment.arrived_time.to_time.strftime("%Y-%m-%dT%H:%M:%S") %>" id="waiting-time-<%=appointment.id.to_s %>"><%= appointment.waiting_time_min.to_s %></time><time class="badge badge-warning mr10" id="engage-time-<%=appointment.id.to_s %>"><%= appointment.engaged_time_min.to_s %></time><time class="badge badge-warning" id="total-time-<%=appointment.id.to_s %>"><%= appointment.total_time_min.to_s %></time>
<% elsif appointment.current_state == "engaged" %>
        <time class="badge badge-warning mr10" id="waiting-time-<%=appointment.id.to_s %>"><%= appointment.waiting_time_min.to_s %></time><time class="badge timeago badge-warning mr10" datetime="<%= appointment.engage_time.to_time.strftime("%Y-%m-%dT%H:%M:%S") %>" id="engage-time-<%=appointment.id.to_s %>"><%= appointment.engaged_time_min.to_s %></time><time class="badge badge-warning" id="total-time-<%=appointment.id.to_s %>"><%= appointment.total_time_min.to_s %></time>
<% elsif appointment.current_state == "seen" %>
        <time class="badge badge-warning mr10" id="waiting-time-<%=appointment.id.to_s %>"><%= appointment.waiting_time_min.to_s %></time><time class="badge badge-warning mr10" id="engage-time-<%=appointment.id.to_s %>"><%= appointment.engaged_time_min.to_s %></time><time class="badge badge-warning" id="total-time-<%=appointment.id.to_s %>"><%= appointment.total_time_min.to_s %></time>
<% end %>