<% if @users_array.try(:count).to_i > 2 %>
    <%= select_tag("user-filter", options_for_select(@users_array, ["All Users", "0"]), {:class => 'form-control', :style => 'padding: 8px'}) %>
<% else %>
    <%= hidden_field_tag("user-filter", @users_array[0][1]) %> <!-- @users_array[0][1] contains id of the user -->
<% end %>