<%
   users_array = @users.map { |user| [user.fullname, user.id] }
   users_array = [["All Users","0"]] + users_array
%>
<% if users_array.count > 2 %>
    <%= select_tag("user-filter-ot", options_for_select(users_array,current_user.id),{:class => 'form-control'}) %>
<% else %>
    <%= hidden_field_tag("user-filter-ot",@users.first.id) %>
<% end %>