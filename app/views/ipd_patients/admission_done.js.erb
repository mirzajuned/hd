$("#inpatient-modal").modal('hide')
if($('.admission-panel').length > 0) {
  var doctor_id = $("#sidebar_doctors_admission .active").find('a').attr('data-doctor-id')
  refresh_admission_management(doctor_id,"Scheduled","<%= @admission.id.to_s %>","<%= @admission.admissiondate %>")
} else if($('.admission-calendar-panel').length > 0) {
  $("#ipd-calendar").fullCalendar('refetchEvents');
} else if($('.ot-panel').length > 0) {
  var doctor_id = $("#sidebar_doctors_ot .active").find('a').attr('data-doctor-id')
  var ot_id = $("#ot_refresher").val()
  var ot_date = $("#ot_refresher_date").val()
  refresh_ot_management(doctor_id,"Scheduled",ot_id,ot_date)
} else if($('.ot-calendar-panel').length > 0) {
  $("#ot-calendar").fullCalendar('refetchEvents');
} else if($('.appointment-panel').length > 0) {
  // $(".appointment_today").find('.active').find("[data-appointment-id='" + $("#appointment_refresher").val() + "']").trigger('click');
  $("#add-admission-from-appointment").html("<%= escape_javascript(render 'outpatients/appointment/appointment_details/add_admission_section.html.erb') %>")
} else if($('.appointment-calendar-panel').length > 0) {
  // $("#opd-calendar").fullCalendar('refetchEvents');
  $("#add-admission-from-appointment").html("<%= escape_javascript(render 'outpatients/appointment/appointment_details/add_admission_section.html.erb') %>")
} else if($(".patient-timeline-panel").length > 0){
  $("#btn-timeline-refresh").trigger('click')
  $("#admission-details").html("<%= escape_javascript(render 'patient_summary_timelines/other_details/admission.html.erb') %>")
}