<style type="text/css">
  <%= Rails.application.assets.find_asset('application-print.css').to_s.html_safe %>
</style>

<%= wicked_pdf_stylesheet_link_tag "pdf" -%>

<div id="header" class="headerContent" style="display:none">
  <% if !@print_setting.try(:customised_letter_head) %>
      <div style="height:<%= @print_setting.try(:header_height) %>cm">
      </div>
  <% else %>
      <%= render "print/print_header.html",:doctor => @user %>
  <%end%>
</div>


<script type="text/javascript">
  var headerCheck = function() {
    var x=document.location.search.substring(1).split('&');
    for (var i in x) {
      if(x[i] == "page=1")
        document.getElementsByClassName("headerContent")[0].style.display = "block";
    }
  }();

</script>