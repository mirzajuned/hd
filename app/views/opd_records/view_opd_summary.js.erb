// for toggle history
$(document).ready(function(){
  $(".show-history-toggle").on('click', function(){
    if($(this).html() == "Show Details"){
      $(this).html("Hide Details")
    } else {
      $(this).html("Show Details")
    }
    $(".show-history-details").toggle()
    $(".info-history-abbv").toggle()
  })
})