<%if @opdrecord.specalityname == "ophthalmology"%>
	$('.replace_medication').html("<%= escape_javascript(render partial: 'opd_records/replace_medication_instruction', locals: {opdrecord: @opdrecord,advice_language: @advice_language, patient: @patient, appointment: @appointment, templatetype: @templatetype, specalityfoldername: @specality}) %>")
<%else%>
	$('.replace_medication').html("<%= escape_javascript(render partial: 'opd_records/ortho_replace_medication_instruction', locals: {opdrecord: @opdrecord,advice_language: @advice_language, patient: @patient, appointment: @appointment, templatetype: @templatetype, specalityfoldername: @specality}) %>")
<%end%>

$('.multi-print').each(function(i, obj) {
  ex_quey = $(this).find('a').attr('href')
  new_query = ex_quey + "&language_flag=true&advice_language=<%=@advice_language%>"
  $(this).find('a').attr('href',new_query);
})