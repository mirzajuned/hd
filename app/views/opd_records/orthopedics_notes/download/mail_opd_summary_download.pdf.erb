<% @speciality_folder_name = specalityfoldername %>
<% @opdrecord = opdrecord %>
<% @appointment = appointment %>
<% @patient = patient %>
<% @templatetype = templatetype %>
<% @flag = 'print'%>
<% @mail_job = true %>
<% @current_facility = current_facility %>
<% @case_sheet = case_sheet %>
<% @translated_language = translated_language %>
<% @medication_groups = medication_groups %>

<% @performed_opd_ophthal = performed_opd_ophthal %>
<% @performed_opd_radiology = performed_opd_radiology %>
<% @performed_opd_laboratory = performed_opd_laboratory %>


<div class="print-template" style="font-family: '<%= UsersSetting.find_by(user_id: current_user.id).font_style %>';">

  <div class="row">

    <div class="col-md-12">

      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/opd_summary_form_patientinfo.html", locals: { current_facility: current_facility, patient: @patient , appointment: @appointment, opdrecord: @opdrecord, current_user: current_user, mail_job: true} %>

      <div class="pcs-entity-title"><span>Opd Summary</span></div>

    <% if @templatetype == "express" %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_expresshistory.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_assessment.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, performed_opd_ophthal: @performed_opd_ophthal, performed_opd_radiology: @performed_opd_radiology, performed_opd_laboratory: @performed_opd_laboratory, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_plan.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_expressadvice.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, mail_job: true } %>
    <% elsif @templatetype == "freeform" %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_freeform.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality , advice_language: @advice_language, medication_groups: @medication_groups, translated_language: @translated_language, performed_opd_ophthal: @performed_opd_ophthal, performed_opd_radiology: @performed_opd_radiology, performed_opd_laboratory: @performed_opd_laboratory, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_expressadvice.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>
    <% elsif @templatetype == "trauma" %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_traumahistory.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_assessment.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, medication_groups: @medication_groups, translated_language: @translated_language, performed_opd_ophthal: @performed_opd_ophthal, performed_opd_radiology: @performed_opd_radiology, performed_opd_laboratory: @performed_opd_laboratory, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_plan.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_traumaadvice.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>

    <% elsif @templatetype == "vitalsign" %>
        <%= render partial: "/opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_vital_signs.html.erb", locals: { current_facility: current_facility, patient: @patient, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, advice: @opdrecord.advice, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>
    <% else %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/region/#{@templatetype}history.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/region/#{@templatetype}examination.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_assessment.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, mail_job: true, performed_opd_ophthal: @performed_opd_ophthal, performed_opd_radiology: @performed_opd_radiology, performed_opd_laboratory: @performed_opd_laboratory } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_plan.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>
      <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/region/opd_summary_form_regionadvice.html", locals: { current_facility: current_facility, specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, advice: @opdrecord.advice, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, medication_groups: @medication_groups, translated_language: @translated_language, mail_job: true } %>
    <% end %>

    </div>

  </div>

  <!--Signature-->
    <%= render partial: 'common/user_signature.html.erb',locals: { current_facility: current_facility, user_id: @opdrecord.consultant_id} %>
  <!--Signature Ends-->


</div>
  <style type="text/css">
    .examination * {
      font-size: 10px;
    }
    .user_signature {
      display: table-row-group
    }
    .user_signature {
      page-break-inside: avoid
    }
  </style>
