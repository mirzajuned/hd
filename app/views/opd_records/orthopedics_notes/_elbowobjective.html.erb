<div class="step-pane" data-step="2">

      <div class="row">
        <div class="col-md-2">General Signs :</div>
        <%= f.input :generalsigns, wrapper_html: {:class=>"col-md-10"}, collection: ['Hyperlaxity','RA','Kochs', 'Blood disorder', 'Rickets'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[generalsigns]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:generalsigns)) %>
      </div>


    <div class="row">

        <div class="col-md-4">

          <div class="col-md-4">Affected :</div>
          <%= f.input :areaaffectedobjective, wrapper_html: {:class=>"col-md-8"}, collection: ['Elbow','Forearm'], :as => :hg_radio_button,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[areaaffectedobjective]" }, :checked => opdrecord.read_attribute(:areaaffectedobjective) %>

        </div>

        <div class="col-md-4">

          <div class="col-md-2">Side :</div>
          <%= f.input :sideobjective, wrapper_html: {:class=>"col-md-8"}, collection: [['Left','L'],['Bilateral','B/L'],['Right','R']], :as => :hg_radio_button,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[sideobjective]" }, :checked => opdrecord.read_attribute(:sideobjective) %>

        </div>
      <div class="col-md-4">

        <div class="col-md-4">Preferred hand :</div>
        <%= f.input :preferredhandobjective, wrapper_html: {:class=>"col-md-8"}, collection: ['Right','Left'], :as => :hg_radio_button,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[preferredhandobjective]" }, :checked => opdrecord.read_attribute(:preferredhandobjective) %>

      </div>


    </div>

  <div class="row">
    <div class="col-md-2">Skin condition :</div>
    <%= f.input :skincondition, wrapper_html: {:class=>"col-md-10"},collection: ['Normal', 'Tense', 'Contused', 'Abrasion', 'Wound', 'Surgical scar', 'Sinus'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white skincondition_buttons', :input_html => {:name => "opdrecord[skincondition]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:skincondition)) || ["Normal"] %>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <%= f.input :examinationsigns, wrapper_html: {:class=>"col-md-10"},collection: ['Warmth', 'Effusion', 'Crepitus', 'Abnormal 3-point relationship'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white examinationsigns_buttons', :input_html => {:name => "opdrecord[examinationsigns]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:examinationsigns)) %>
  </div>

    <div class="row">
      <div class="col-md-2">Swelling :</div>
      <%= f.input :swelling, wrapper_html: {:class=>"col-md-10"},collection: ['None','Generalized','Anconeus triangle','Over olecranon','Myositis mass'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white swelling_buttons', :input_html => {:name => "opdrecord[swelling]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:swelling)) || ['None'] %>
    </div>

    <div class="row">
        <div class="col-md-2">Tenderness :</div>
        <%= f.input :tenderness, wrapper_html: {:class=>"col-md-10"},collection: ['None', 'Extensors origin', 'Flexors origin', 'Radial head', 'Olecranon', 'Jointline', 'Wrist', 'DRUJ'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white tenderness_buttons', :input_html => {:name => "opdrecord[tenderness]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:tenderness)) || ['None'] %>
    </div>

    <div class="row">
      <div class="col-md-2">Deformity :</div>
      <%= f.input :deformity, wrapper_html: {:class=>"col-md-10"},collection: ['None', 'Flexion', 'Varus', 'Valgus', 'External rotation', 'Internal rotation'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white deformity_buttons', :input_html => {:name => "opdrecord[deformity]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:deformity)) || ['None'] %>
    </div>

    <div class="row">
      <div class="col-md-2">Supra-condylar ridges :</div>
      <%= f.input :supracondylarridges, wrapper_html: {:class=>"col-md-10"},collection: ['Normal', 'Thickened', 'Irregular', 'Discontinuous'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white supracondylarridges_buttons', :input_html => {:name => "opdrecord[supracondylarridges]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:supracondylarridges)) || ['Normal'] %>
    </div>

    <div class="row">
      <div class="col-md-2">ROM:</div>
      <div class="col-md-10">

        <table class="table table-bordered">
          <thead>
          <tr>
            <th width="6%" style="padding-top:0px;padding-bottom:0px;"></th>
            <th width="30%" class="text-center" style="padding-top:0px;padding-bottom:0px;">Right</th>
            <th width="17%" style="padding-top:0px;padding-bottom:0px;"></th>
            <th width="30%" class="text-center" style="padding-top:0px;padding-bottom:0px;">Left</th>
            <th width="17%" style="padding-top:0px;padding-bottom:0px;"></th>
          </tr>
          </thead>
          <tbody>
          <tr class="success">
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">Elbow E:F</td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <div class="row">

                <div class="col-md-8">

                  <div id="rom-slider-range-right-extension-flexion"></div>

                </div>

                <div class="col-md-4">
                  <%= f.input_field :romsliderrangerightextensionflexion, :class => "form-control", :maxlength => 8, :size => 8, :required => false, :name => "opdrecord[romsliderrangerightextensionflexion]", :value => opdrecord.read_attribute(:romsliderrangerightextensionflexion) %>
                </div>

              </div>
            </td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <%= f.input :r_romextensionflexion, wrapper_html: {:class=>"col-md-12"},collection: ['Painful', 'Painless','Restricted','Crepitus'], :as => :hg_checkbox, :label => false,:required => false, :class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[r_romextensionflexion]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:r_romextensionflexion)) %>
            </td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <div class="row">

                <div class="col-md-8">

                  <div id="rom-slider-range-left-extension-flexion"></div>

                </div>

                <div class="col-md-4">
                  <%= f.input_field :romsliderrangeleftextensionflexion, :class => "form-control", :maxlength => 8, :size => 8, :required => false, :name => "opdrecord[romsliderrangeleftextensionflexion]", :value => opdrecord.read_attribute(:romsliderrangeleftextensionflexion) %>
                </div>

              </div>

            </td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <%= f.input :l_romextensionflexion, wrapper_html: {:class=>"col-md-12"},collection: ['Painful', 'Painless','Restricted','Crepitus'], :as => :hg_checkbox, :label => false,:required => false, :class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[l_romextensionflexion]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:l_romextensionflexion)) %>
            </td>
          </tr>
          <tr class="danger">
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">Elbow S:P</td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <div class="row">
                <div class="col-md-8">
                  <div id="rom-slider-range-right-supination-pronation"></div>
                </div>
                <div class="col-md-4">
                  <%= f.input_field :romsliderrangerightsupinationpronation, :class => "form-control", :maxlength => 8, :size => 8, :required => false, :name => "opdrecord[romsliderrangerightsupinationpronation]", :value => opdrecord.read_attribute(:romsliderrangerightsupinationpronation) %>
                </div>
              </div>
            </td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <%= f.input :r_romsupinationpronation, wrapper_html: {:class=>"col-md-12"},collection: ['Painful', 'Painless','Restricted', 'Crepitus'], :as => :hg_checkbox, :label => false,:required => false, :class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[r_romsupinationpronation]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:r_romsupinationpronation)) %>
            </td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <div class="row">
                <div class="col-md-8">
                  <div id="rom-slider-range-left-supination-pronation"></div>
                </div>
                <div class="col-md-4">
                  <%= f.input_field :romsliderrangeleftsupinationpronation, :class => "form-control", :maxlength => 8, :size => 8, :required => false, :name => "opdrecord[romsliderrangeleftsupinationpronation]", :value => opdrecord.read_attribute(:romsliderrangeleftsupinationpronation) %>
                </div>
              </div>
            </td>
            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
              <%= f.input :l_romsupinationpronation, wrapper_html: {:class=>"col-md-12"},collection: ['Painful', 'Painless','Restricted', 'Crepitus'], :as => :hg_checkbox, :label => false,:required => false, :class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[l_romsupinationpronation]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:l_romsupinationpronation)) %>
            </td>
          </tr>
          </tbody>
        </table>

      </div>
    </div>

    <div class="row rom-options">
      <div class="col-md-2">Positive tests s/o :</div>
      <%= f.input :romtests, wrapper_html: {:class=>"col-md-10"},collection: ['No abnormality','Lateral epicondylitis','Medial epicondylitis', 'Cubital tunnel syndrome', 'Radial tunnel syndrome'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[romtests]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:romtests)) %>
    </div>

    <div class="row">
      <div class="col-md-2">Abnormal mobility-location :</div>
      <%= f.input :abnormalmobilitylocation, wrapper_html: {:class=>"col-md-10"},collection: ['None','Radial head','Lateral condyle', 'Medial condyle', 'Olecranon', 'Capitellum'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white abnormalmobilitylocation_buttons', :input_html => {:name => "opdrecord[abnormalmobilitylocation]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:abnormalmobilitylocation)) || ['None'] %>
    </div>

      <div class="row">
        <div class="col-md-2">Distal neuro-vascular deficit:</div>
        <%= f.input :distalneurovasculardeficit, wrapper_html: {:class=>"col-md-10"}, collection: ['Absent', 'Present'], :as => :hg_radio_button,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[distalneurovasculardeficit]" }, :checked => opdrecord.read_attribute(:distalneurovasculardeficit) || 'Absent' %>
      </div>

  <div class="distalneurovasculardeficit-options" id="distalneurovasculardeficit-options">

    <div class="row">
      <div class="col-md-2">Sensory deficit :</div>
      <%= f.input :sensorydeficit, wrapper_html: {:class=>"col-md-10"},collection: ['C5','C6', 'C7', 'C8', 'T1', 'Axillary', 'Musculocutaneous', 'Median', 'Radial', 'Ulnar'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[sensorydeficit]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:sensorydeficit)) %>
    </div>

    <div class="row">
      <div class="col-md-2">Motor deficit :</div>
      <%= f.input :motordeficit, wrapper_html: {:class=>"col-md-10"},collection: ['C5','C6', 'C7', 'C8', 'T1', 'Axillary', 'Musculocutaneous', 'Median', 'Radial', 'Ulnar'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[motordeficit]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:motordeficit)) %>
    </div>

    <div class="row">
      <div class="col-md-2">Vascular deficit :</div>
      <%= f.input :vascualardeficit, wrapper_html: {:class=>"col-md-10"},collection: ['Radial', 'Ulnar'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[vascualardeficit]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:vascualardeficit)) %>
    </div>

  </div>

  <div class="row">
    <div class="col-md-2">Other signs :</div>
    <%= f.input :othersigns, wrapper_html: {:class=>"col-md-7"}, collection: ['Tinels', 'Varus instability', 'Valgus instability', 'Forearm wasting', 'Hand wasting', 'Restricted neck ROM', 'Thickened ulnar nerve', 'Ulnar nerve subluxation'], :as => :hg_checkbox,:label => false, :required => false,:class => 'btn btn-xs btn-white', :input_html => {:name => "opdrecord[othersigns]" }, :checked => opdrecord.checkboxes_checked(opdrecord.read_attribute(:othersigns)) %>
  </div>

  <div class="row mb10">
    <div class="col-md-2">Comments:</div>
    <%= f.input :objectivecomments, as: :text,  :label => false, :required => false, :input_html => {:class => "form-control", :rows => 2, :cols => 70, :required => false, :name => "opdrecord[objectivecomments]", :value => opdrecord.read_attribute(:objectivecomments) } %>
  </div>

  <%= render partial: "opd_records/orthopedics_notes/opd_partials/anthropometry_template", locals: { f: f, opdrecord: @opdrecord }   %>

  <%= render partial: "opd_records/orthopedics_notes/opd_partials/vitalsigns_template", locals: { f: f, opdrecord: @opdrecord }   %>

</div>