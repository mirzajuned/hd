jQuery(document).ready(function() {
	<%= render partial: "opd_records/orthopedics_notes/js/regiontemplates_soap_opdrecord_subjective_common.js" %>
    jQuery("input[name='opdrecord[preferredhand]']").on('change', function() {
        var preferredhandobjective = jQuery(this).val();
        jQuery.each(jQuery("button[name='preferredhandobjective']"), function() {
            if (preferredhandobjective === jQuery(this).attr("input-value")) {
                jQuery(this).addClass("btn-brown");
            }
            else if (preferredhandobjective !== jQuery(this).attr("input-value")) {
                jQuery(this).removeClass("btn-brown");
            }
        });
    });
});