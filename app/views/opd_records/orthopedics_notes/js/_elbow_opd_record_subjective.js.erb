jQuery(document).ready(function() {
	<%= render partial: "opd_records/orthopedics_notes/js/regiontemplates_soap_opdrecord_subjective_common.js" %>
    jQuery("input[name='opdrecord[preferredhand]']").on('change', function() {
        var preferredhandobjective = jQuery(this).val();
        jQuery.each(jQuery("button[name='preferredhandobjective']"), function() {
            if (preferredhandobjective === jQuery(this).attr("input-value")) {
                jQuery(this).addClass("btn-brown");
            }
            else if (preferredhandobjective !== jQuery(this).attr("input-value")) {
                jQuery(this).removeClass("btn-brown");
            }
        });
    });
    jQuery(".localtreatmenttaken_buttons").on('click', function() {
        var clickedbutton = this;
        if (jQuery(clickedbutton).attr("input-value") === "None") {
            if (jQuery(clickedbutton).hasClass("btn-darkblue")) {
                jQuery(clickedbutton).removeClass("btn-darkblue");
                jQuery("#opdrecord_localtreatmenttaken").val("");
            } else {
                jQuery(".localtreatmenttaken_buttons").removeClass("btn-darkblue");
                jQuery("#opdrecord_localtreatmenttaken").val("");
            }
        } else if (jQuery(clickedbutton).attr("input-value") !== "None") {
            jQuery.each(jQuery(".localtreatmenttaken_buttons"), function(index, button) {
                if (jQuery(button).attr("input-value") === "None" && jQuery(button).hasClass("btn-darkblue")) {
                    jQuery(button).removeClass("btn-darkblue");
                    jQuery("#opdrecord_localtreatmenttaken").val("");
                }
            });
        }
    });
});