jQuery(document).ready(function() {    
    
    jQuery(".immobilizationsupport-options").hide();
    jQuery(".immobilization-cast").hide();
    jQuery(".immobilization-splint").hide();
    jQuery(".immobilization-splintbrace").hide();
    jQuery(".physiotherapyadvice-options").hide();

    jQuery("input[name='opdrecord[advice_attributes][immobilizationsupport]']").on('change', function() {
            if (this.value == "None") {
            	jQuery(".immobilizationsupport-options").hide();
			    jQuery(".immobilization-cast").hide();
			    jQuery(".immobilization-splint").hide();
			    jQuery(".immobilization-splintbrace").hide();
            }
            else if (this.value == "Cast") {            	
			    jQuery(".immobilization-cast").show();
			    jQuery(".immobilization-splint").hide();
			    jQuery(".immobilization-splintbrace").hide();
			    jQuery(".immobilizationsupport-options").show();
                
            } else if (this.value == "Slab") {
            	jQuery(".immobilization-splint").show();
            	jQuery(".immobilization-cast").hide();			    
			    jQuery(".immobilization-splintbrace").hide();
			    jQuery(".immobilizationsupport-options").show();
                
            } else if (this.value == "Splint-Brace") {
            	jQuery(".immobilization-splintbrace").show();
				jQuery(".immobilization-cast").hide();
            	jQuery(".immobilization-splint").hide();
			    jQuery(".immobilizationsupport-options").show();                
            }
            else{
                    jQuery(".immobilizationsupport-options").hide();
            }
    });
    jQuery("input[name='opdrecord[advice_attributes][physiotherapy]']").on('change', function() {
	    if (this.value == "Yes") {
	        jQuery('.physiotherapyadvice-options').show();
	    }
	    else if (this.value == "No") {
	    	jQuery('.physiotherapyadvice-options').hide();            
	    }
	});	

});

