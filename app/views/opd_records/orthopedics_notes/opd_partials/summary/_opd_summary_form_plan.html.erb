<% mail_job ||= @mail_job %>
<% if opdrecord.send("#{@flag}_procedures_flag") == "1" %>
  <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_procedure.html", locals: { specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, mail_job: mail_job } %>
<% end %>

<% if opdrecord.send("#{@flag}_advice_flag") == "1" %>
  <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_otherinvestigations.html", locals: { specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, mail_job: mail_job } %>
  <%#= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_procedure.html", locals: { specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, mail_job: mail_job } %>
  <% if @language_flag == "true" %>
    <%= render partial: 'opd_records/ortho_replace_medication_instruction.html', locals: { specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, medication_groups: @medication_groups, translated_language: @translated_language } %>
  <% else %>
    <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/opd_summary_form_medication.html", locals: { specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality, advice_language: @advice_language, mail_job: mail_job, medication_groups: @medication_groups, translated_language: @translated_language } %>
  <% end %>
<% end %>
