-<% if opdrecord.send("#{@flag}_examination_flag") == "1" %>

    <!--counter code-->
    <% examination_counter = 0 %>
    <%romcounter = 0%>
    <% if opdrecord.romsliderrangerightextensionflexion.length > 0 && opdrecord.romsliderrangerightextensionflexion != "0 : 150" %>
        <%romcounter = romcounter+1%>
        <% examination_counter = examination_counter+1 %>

    <% end %>
    <% if opdrecord.romsliderrangeleftextensionflexion.length > 0 && opdrecord.romsliderrangeleftextensionflexion != "0 : 150" %>
        <%romcounter = romcounter+1%>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% if opdrecord.romsliderrangerightsupinationpronation.length > 0 && opdrecord.romsliderrangerightsupinationpronation != "-90 : 80" %>
        <%romcounter = romcounter+1%>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% if opdrecord.romsliderrangeleftsupinationpronation.length > 0 && opdrecord.romsliderrangeleftsupinationpronation != "-90 : 80" %>
        <%romcounter = romcounter+1%>
        <% examination_counter = examination_counter+1 %>
        <div class="mb3"></div>
    <% end %>
    <% if opdrecord.r_romextensionflexion.length > 0 || opdrecord.l_romextensionflexion.length > 0 || opdrecord.r_romsupinationpronation.length > 0 || opdrecord.l_romsupinationpronation.length > 0 %>
        <% romcounter = romcounter + 1 %>
        <% examination_counter = examination_counter + 1 %>
    <% end %>
    <div class="mb3"></div>
    <% unless opdrecord.generalsigns.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% unless opdrecord.areaaffectedobjective.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% unless opdrecord.sideobjective.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% unless opdrecord.skincondition.blank? %>
        <% unless opdrecord.skincondition == "Normal" %>
            <% examination_counter = examination_counter+1 %>
        <% end %>
    <% end %>
    <% unless opdrecord.swelling.blank? %>
        <% unless opdrecord.swelling == "None" %>
            <% examination_counter = examination_counter+1 %>
        <% end %>
    <% end %>
    <% unless opdrecord.tenderness.blank? %>
        <% unless opdrecord.tenderness == "None" %>
            <% examination_counter = examination_counter+1 %>
        <% end %>
    <% end %>
    <% unless opdrecord.deformity.blank? %>
        <% unless opdrecord.deformity == "None" %>
            <% examination_counter = examination_counter+1 %>
        <% end %>
    <% end %>
    <% unless opdrecord.supracondylarridges.blank? %>
        <% unless opdrecord.supracondylarridges == "Normal" %>
            <% examination_counter = examination_counter+1 %>
        <% end %>
    <% end %>

    <% unless opdrecord.abnormalmobilitylocation.blank? %>
        <% unless opdrecord.abnormalmobilitylocation == "None" %>
            <% examination_counter = examination_counter+1 %>
        <% end %>
    <% end %>
    <div class="mb3"></div>
    <% unless opdrecord.distalneurovasculardeficit.blank? %>
        <% unless opdrecord.distalneurovasculardeficit == "Absent" %>
            <% examination_counter = examination_counter+1 %>

        <% end %>
    <% end %>
    <% unless opdrecord.sensorydeficit.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% unless opdrecord.motordeficit.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% unless opdrecord.vascualardeficit.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% unless opdrecord.othersigns.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <% unless opdrecord.objectivecomments.blank? %>
        <% examination_counter = examination_counter+1 %>
    <% end %>
    <!--counter code ends here-->
    <div class="examination mb5" id="examination">
      <%if examination_counter > 0 %>

          <div class="row">
            <strong style="<%= heading_font_size %>">EXAMINATION :</strong>
            <div class="summary-line-border"></div>
          </div>
      <%end%>


      <div class="row">
        <div class="col-md-12 <%= 'print_text_font_size' if  @print_setting %>" style="<%= text_font_size %>">
          <% unless opdrecord.sideobjective.blank? %>
            <b style="text-decoration: underline;">
              <% if opdrecord.read_attribute(:"sideobjective") == "R" %>
                RIGHT
              <% elsif opdrecord.read_attribute(:"sideobjective") == "L" %>
                LEFT
              <% else %>
                BILATERAL
              <% end %>
          <% else %>
            <b style="text-decoration: underline;">
          <% end %>
          <% unless opdrecord.areaaffectedobjective.blank? %>
            <%= opdrecord.read_attribute(:"areaaffectedobjective").to_s.upcase %></b>
          <% else %>
            </b>
          <% end %>
          <div class="mb3"></div>
          <% unless opdrecord.generalsigns.blank? %>
            <b>General Signs</b> of <%= opdrecord.read_attribute(:"generalsigns") %>
          <% end %>
          <% unless opdrecord.preferredhandobjective.blank? %>
            <% unless opdrecord.generalsigns.blank? %> | <% end %>
            <b>Prefered Hand :</b> <%= opdrecord.read_attribute(:"preferredhandobjective") %><br>
          <% end %>
          <% unless opdrecord.skincondition.blank? %>
            <% unless opdrecord.skincondition == "Normal" %>
              <b>Skin Condition :</b> <%= opdrecord.read_attribute(:"skincondition") %>
            <% end %>
          <% end %>
          <% unless opdrecord.examinationsigns.blank? %>
            <% unless opdrecord.skincondition.blank? %>,<% else %><b>Skin Condition :</b> <% end %> <%= opdrecord.read_attribute(:"examinationsigns") %>
          <% end %>
          <div class="mb3"></div>
          <% unless opdrecord.tenderness.blank? %>
            <% unless opdrecord.tenderness == "None" %>
              <b>Tenderness :</b> <%= opdrecord.read_attribute(:"tenderness") %>
            <% end %>
          <% end %>
          <div class="mb3"></div>
          <% unless opdrecord.swelling.blank? %>
            <% unless opdrecord.swelling == "None" %>
                <b>Swelling :</b> <%= opdrecord.read_attribute(:"swelling") %>
            <% end %>
          <% end %>
          <% unless opdrecord.deformity.blank? %>
            <% unless opdrecord.deformity == "None" %>
              <% unless opdrecord.swelling.blank? || opdrecord.swelling == "None" %>
                |
              <% end %>
              <b>Deformity :</b> <%= opdrecord.read_attribute(:"deformity") %>
            <% end %>
          <% end %>
          <% unless opdrecord.supracondylarridges.blank? %>
            <% unless opdrecord.supracondylarridges == "None" %>
              <% unless opdrecord.swelling.blank? || opdrecord.swelling == "None" || opdrecord.deformity.blank? || opdrecord.deformity == "None" %>
                |
              <% end %>
              <b>Supra-Condylar Ridges :</b> <%= opdrecord.read_attribute(:"supracondylarridges") %>
            <% end %>
          <% end %>
          <div class="mb3"></div>
          <% if romcounter > 0 %>
            <div class="row">
              <table class="table table-bordered">
                <thead class="rom-thead">
                  <tr>
                    <th>ROM</th>
                    <th class="right-row" colspan="2">RIGHT</th>
                    <th class="left-row" colspan="2">LEFT</th>
                  </tr>
                </thead>
                <tbody class="rom-tbody">
                  <% if opdrecord.romsliderrangerightextensionflexion.length > 0 && (opdrecord.romsliderrangerightextensionflexion != "0 : 150" || opdrecord.r_romextensionflexion.length > 0) || opdrecord.romsliderrangeleftextensionflexion.length > 0 && (opdrecord.romsliderrangeleftextensionflexion != "0 : 150" || opdrecord.l_romextensionflexion.length > 0) %>
                    <tr>
                      <td>Elbow E:F</td>
                      <td class="right-row"><%= opdrecord.read_attribute(:"romsliderrangerightextensionflexion") if opdrecord.romsliderrangerightextensionflexion != "0 : 150" %></td>
                      <td class="right-row"><%= opdrecord.read_attribute(:"r_romextensionflexion").to_s.split(",").join("<br>").html_safe %></td>
                      <td class="left-row"><%= opdrecord.read_attribute(:"romsliderrangeleftextensionflexion") if opdrecord.romsliderrangeleftextensionflexion != "0 : 150" %></td>
                      <td class="left-row"><%= opdrecord.read_attribute(:"l_romextensionflexion").to_s.split(",").join("<br>").html_safe %></td>
                    </tr>
                  <% end %>
                  <% if opdrecord.romsliderrangerightsupinationpronation.length > 0 && (opdrecord.romsliderrangerightsupinationpronation != "-90 : 80" || opdrecord.r_romsupinationpronation.length > 0) || opdrecord.romsliderrangeleftsupinationpronation.length > 0 && (opdrecord.romsliderrangeleftsupinationpronation != "-90 : 80" || opdrecord.l_romsupinationpronation.length > 0) %>
                    <tr>
                      <td>Elbow S:P</td>
                      <td class="right-row"><%= opdrecord.read_attribute(:"romsliderrangerightsupinationpronation") if opdrecord.romsliderrangerightsupinationpronation != "-90 : 80" %></td>
                      <td class="right-row"><%= opdrecord.read_attribute(:"r_romsupinationpronation").to_s.split(",").join("<br>").html_safe %></td>
                      <td class="left-row"><%= opdrecord.read_attribute(:"romsliderrangeleftsupinationpronation") if opdrecord.romsliderrangeleftsupinationpronation != "-90 : 80" %></td>
                      <td class="left-row"><%= opdrecord.read_attribute(:"l_romsupinationpronation").to_s.split(",").join("<br>").html_safe %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="mb3"></div>
          <% end %>

          <% unless opdrecord.abnormalmobilitylocation.blank? %>
              <% unless opdrecord.abnormalmobilitylocation == "None" %>
                  <b>Abnormal mobility-location :</b>
                  <%= opdrecord.read_attribute(:"abnormalmobilitylocation") %>

              <% end %>
          <% end %>
          <div class="mb3"></div>
          <% unless opdrecord.distalneurovasculardeficit.blank? %>
              <% unless opdrecord.distalneurovasculardeficit == "Absent" %>
                  <b>Distal Neurovascular Deficit :</b>
                  <%= opdrecord.read_attribute(:"distalneurovasculardeficit") %>

              <% end %>
          <% end %>
          <% unless opdrecord.sensorydeficit.blank? %>
              <b>Sensory deficit -</b>
              <%= opdrecord.read_attribute(:"sensorydeficit") %>
              |
          <% end %>
          <% unless opdrecord.motordeficit.blank? %>
              <b>Motor deficit -</b>
              <%= opdrecord.read_attribute(:"motordeficit") %>
              |
          <% end %>
          <% unless opdrecord.vascualardeficit.blank? %>
              <b>Vascular deficit :</b>
              <%= opdrecord.read_attribute(:"vascualardeficit") %>
              <div class="mb3"></div>
          <% end %>
          <% unless opdrecord.othersigns.blank? %>
              <b>Other Signs :</b>
              <%= opdrecord.read_attribute(:"othersigns") %>
              <div class="mb3"></div>
          <% end %>
          <% unless opdrecord.objectivecomments.blank? %>
              <li>
              <%= opdrecord.read_attribute(:"objectivecomments") %>
              </li>
              <div class="mb3"></div>
          <% end %>

          <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/vitalsigns.html", locals: { specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality } %>
          <%= render partial: "opd_records/#{@speciality_folder_name}_notes/opd_partials/summary/anthropometry.html", locals: { specalityfoldername: @speciality_folder_name, specalityid: @specalityid, opdrecord: @opdrecord, templatetype: @templatetype, templateid: @templateid, opdspeciality: @opdspeciality } %>


        </div>
      </div>

    </div>
<% end %>

<style type="text/css">
  <% if @print_setting %>
    .print_text_font_size *{
      font-size: inherit!important
    }
  <% else %> 
    .rom-thead tr th, .rom-tbody tr td {
      padding: 2px !important;
      text-align: center !important;
      <%if @mail_job == false%>
        <% if params[:action] == "print_opd_record" %>
          font-size: 9px !important;
        <% end %>
      <%else%>
        font-size: 9px !important;
      <% end %>
    }
  <% end %>
  <% unless opdrecord.romsliderrangerightextensionflexion.length > 0 && (opdrecord.romsliderrangerightextensionflexion != "0 : 150" || opdrecord.r_romextensionflexion.length > 0) || opdrecord.romsliderrangerightsupinationpronation.length > 0 && (opdrecord.romsliderrangerightsupinationpronation != "-90 : 80" || opdrecord.r_romsupinationpronation.length > 0) %>
    .right-row {
      display: none;
    }
  <% end %>
  <% unless opdrecord.romsliderrangeleftextensionflexion.length > 0 && (opdrecord.romsliderrangeleftextensionflexion != "0 : 150" || opdrecord.l_romextensionflexion.length > 0) || opdrecord.romsliderrangeleftsupinationpronation.length > 0 && (opdrecord.romsliderrangeleftsupinationpronation != "-90 : 80" || opdrecord.l_romsupinationpronation.length > 0) %>
    .left-row {
      display: none;
    }
  <% end %>
</style>
