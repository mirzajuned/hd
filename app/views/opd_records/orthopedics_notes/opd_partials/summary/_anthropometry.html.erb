<% unless opdrecord.anthropometryheight.blank? || opdrecord.anthropometryweight.blank? || opdrecord.anthropometrybmi.blank? %>
    <b>Anthropometry : </b>
    <% if opdrecord.anthropometryheight.length > 0 %>
        <b>Height : </b>
        <%= opdrecord.read_attribute(:"anthropometryheight") %> feet
       <b>&nbsp;|&nbsp;</b>
    <% end %>
    <% if opdrecord.anthropometryweight.length > 0 %>
        <b>Weight : </b>
        <%= opdrecord.read_attribute(:"anthropometryweight") %> kg
        <b>&nbsp;|&nbsp;</b>
    <% end %>
    <% if opdrecord.anthropometrybmi.length > 0 %>
        <b>BMI : </b>
        <%= opdrecord.read_attribute(:"anthropometrybmi") %> kg/m2
        <b>&nbsp;|&nbsp;</b>
    <% end %>
<% end %>