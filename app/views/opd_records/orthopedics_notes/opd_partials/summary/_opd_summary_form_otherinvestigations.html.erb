<div class="otherinvestigations mb5" id="otherinvestigations">

  <% if opdrecord.has_addedotherinvestigationlist? %>

        <div class="row">
            <strong>OTHER INVESTIGATIONS </strong>
            <div class="summary-line-border"></div>
        </div>

        <div class="row">
            <table class="table table-striped table-bordered">
                  <thead style="background-color: #7989BB;">
                      <tr>
                            <th width="3%" style="padding-top:0px;padding-bottom:0px;">#</th>
                            <th width="40%" style="padding-top:0px;padding-bottom:0px;">Name</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% opdrecord.addedotherinvestigationlist.each_with_index do |elem, i|  %>
                          <tr>
                            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
                              <%= (i.to_i + 1) %>.
                            </td>
                            <td style="padding-left:1px;padding-top:1px;padding-bottom:1px;padding:0px;">
                              <%= elem.investigationname %>
                            </td>
                          </tr>
                      <% end %>
                  </tbody>
            </table>
        </div>

  <% end %>

</div>