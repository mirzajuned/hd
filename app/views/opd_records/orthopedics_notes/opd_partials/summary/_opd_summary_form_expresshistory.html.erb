<% if opdrecord.send("#{@flag}_history_flag") == "1" %>
  <div class="chiefcomplaint mb5" id="chiefcomplaint">
    <% if opdrecord.chiefcomplaintselectedtags.length > 0 %>
      <div class="row">
        <strong style="<%= heading_font_size %>">CLINICAL DETAILS :</strong>
        <div class="summary-line-border"></div>
      </div>
      <div class="row" style="<%= text_font_size %>">
        <%= opdrecord.get_chiefcomplaints_for_opdsummary(opdrecord.chiefcomplaintselectedtags) %>
      </div>
    <% end %>
  </div>
<% end %>

<% if @mail_job == false %>
  <% if params[:action] == "print_opd_record" %>
    <style type="text/css">
      .chiefcomplaint * {
        font-size: 10px;
      }
    </style>
  <% end %>
<% end %>
