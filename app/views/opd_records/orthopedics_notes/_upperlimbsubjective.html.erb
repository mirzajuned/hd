                </div>

                <div class="col-md-12">

                  <label for="severity-radioselectlabel">Severity</label>
                  <%= f.input_field :severity, collection: ['Mild', 'Moderate', 'Severe'], as: :radio_buttons,  :label => false, :item_wrapper_class => 'radio-inline', :required => false %>

                </div>

                <div class="col-md-12">

                  <label for="diurnalvariation-radioselectlabel">Diurnal variation</label>
                  <%= f.input_field :diurnalvariation, collection: ['No', 'Yes'], as: :radio_buttons,  :label => false, :item_wrapper_class => 'radio-inline', :checked => ['No'], :required => false %>

                </div>

                <div class="col-md-12">

                  <label for="theatresign-radioselectlabel">Theatre sign</label>
                  <%= f.input_field :theatresign, collection: ['No', 'Yes'], as: :radio_buttons,  :label => false, :item_wrapper_class => 'radio-inline', :checked => ['No'], :required => false %>

                </div>

                <div class="col-md-12">

                  <label for="hippain-radioselectlabel">Hip pain</label>
                  <%= f.input_field :hippain, collection: ['No', 'Yes'], as: :radio_buttons,  :label => false, :item_wrapper_class => 'radio-inline', :checked => ['No'], :required => false %>

                </div>

                <div class="col-md-12">

                  <label for="backpain-radioselectlabel">Back pain</label>
                  <%= f.input_field :backpain, collection: ['No', 'Yes'], as: :radio_buttons,  :label => false, :item_wrapper_class => 'radio-inline', :checked => ['No'], :required => false %>

                </div>

              </div>

            </div>

          </div>

          <div class="row" id="treatment_history" style="display: none">

            <div class="col-md-4">
              <h3 id="treatmenthistory"><span class="label label-info">Treatment history</span></h3>
            </div>

