            <tr>
              <td class="table-css">POWER</td>
              <td class="table-css"><%= opdrecord.read_attribute(:r_iol_power_1) %></td>
              <td class="table-css"><%= opdrecord.read_attribute(:l_iol_power_1) %></td>
            </tr>
            <tr>
              <td class="table-css">TARGET</td>
              <td class="table-css"><%= opdrecord.read_attribute(:r_iol_target_1) %></td>
              <td class="table-css"><%= opdrecord.read_attribute(:l_iol_target_1) %></td>
