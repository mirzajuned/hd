            </tr>
            <tr>
              <td class="table-css">FORMULA 1</td>
              <td class="table-css"><%= opdrecord.read_attribute(:r_iol_formula_1) %></td>
              <td class="table-css"><%= opdrecord.read_attribute(:l_iol_formula_1) %></td>
            </tr>
            <tr>
              <td class="table-css">MODEL</td>
              <td class="table-css"><%= opdrecord.read_attribute(:r_iol_model_1) %></td>
              <td class="table-css"><%= opdrecord.read_attribute(:l_iol_model_1) %></td>
            </tr>

            <tr>
              <td class="table-css">A-CONSTANT</td>
              <td class="table-css"><%= opdrecord.read_attribute(:r_iol_a_constant_1) %></td>
              <td class="table-css"><%= opdrecord.read_attribute(:l_iol_a_constant_1) %></td>
