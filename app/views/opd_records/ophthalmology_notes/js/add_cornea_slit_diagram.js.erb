jQuery(".savecorneaslitdiagram").on("click", function(event) {
    event.preventDefault();
    var eyeside = jQuery("#opdrecord_eyeside_corneaslit").val();
    var patient_id = jQuery("#opdrecord_patient_id").val();
    var image = jQuery("#wPaint").wPaint("image");
    var date = moment().format("DD-MM-YYYY");
    var params = { asset_path_data: image, eyeside: eyeside, diagram_type: "corneaslit",patient_id: patient_id };
    jQuery.ajax({
        headers: {
            'X-CSRF-Token': '<%= form_authenticity_token.to_s %>'
        },
        type: "POST",
        url: "/opd_records/save_cornea_slit_diagram",
        data: {ajax: params, remote: true}
    });
    return false;
});
