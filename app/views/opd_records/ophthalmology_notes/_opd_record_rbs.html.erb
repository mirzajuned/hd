<div class="row mb20">
  <div class="col-xs-12">
    <div class="col-xs-5">
      <div class="title">
        <h5 style="color: #444;font-size: 17px;">Random Blood Sugar</h5>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-4">
          <b>Result</b><br/>
          <div class="input-group" style="width:100%;">
            <%= f.text_field :random_blood_sugar_result, { class: "form-control random_blood_sugar_result", style: "height:30px;width:100%;", value: opdrecord.read_attribute(:random_blood_sugar_result) } %>
            <span class="input-group-addon">mmol/L</span>
          </div>
        </div>
        <div class="col-xs-2"></div>
        <div class="col-xs-4">
          <b>Comment</b><br/>
          <%= f.text_field :random_blood_sugar_comment, { class: "form-control random_blood_sugar_comment", style: "height:30px;width:100%;", value: opdrecord.read_attribute(:random_blood_sugar_comment) } %>
        </div>
      </div>
    </div>
  </div>
</div>