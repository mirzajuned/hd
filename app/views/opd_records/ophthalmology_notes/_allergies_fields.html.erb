<div class="col-md-12 col-sm-12 col-xs-12 complaint_name allergies_field_row <%= @complaint_name %>_fields " style="margin-bottom:5px;">
  <div class="col-md-2 col-sm-2 col-xs-2">
    <h5 class="complaint_title">
      <%= hidden_field_tag "opdrecord[opd_allergy_histories][#{@count}][_delete]", "", value: 0 %>
      <%= @complaint_name.split("_").map(&:capitalize).join(" ") %>
      <%= hidden_field_tag "opdrecord[opd_allergy_histories][#{@count}][name]", "", value: @complaint_name %>
    </h5>
  </div> 
  <div class="col-md-2 col-sm-2 col-xs-2">
    <div class="complaint_title">
      <% duration_time = 1..40 %>
      <%= select_tag "opdrecord[opd_allergy_histories][#{@count}][duration]", options_for_select(duration_time), prompt: "Please Select", class:"form-control personal_fields_add_fields" %>
    </div>
  </div>  
  <div class="col-md-2 col-sm-2 col-xs-2">
    <div class="complaint_title">
      <%= select_tag "opdrecord[opd_allergy_histories][#{@count}][duration_unit]", options_for_select([["Days","days"],["Weeks","weeks"],["Months","months"],["Years","years"]]), prompt: "Please Select", class:"form-control personal_fields_add_fields" %>
    </div>
  </div> 
  <div class="col-md-6 col-sm-6 col-xs-6">
    <div class="complaint_title">
      <%= text_field_tag  "opdrecord[opd_allergy_histories][#{@count}][comment]", "",class: "form-control personal_field_add_comment", placeholder: "Comment ...."%>
    </div>    
  </div> 
</div>
