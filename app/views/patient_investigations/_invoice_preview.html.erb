<style>
  .small-text-input-btn{
    padding: 0px;
  }
  .findings-text-input{
    padding: 2px;
    margin: 2px;
  }
  .btn-file {
    position: relative;
    overflow: hidden;
    background: gainsboro;
  }

  .btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
  }
</style>

<div class="modal-dialog modal-hg-view-record-template" style="width: 50%;">
    <div class="modal-content">
      <div class="modal-header">
        <div class="pull-right"> <!-- Action Buttons starts -->
          <a class="btn btn-primary" target="_blank" data-method="get" href="/patient_investigations/print.pdf?investigation_id=<%= @patient_ophthal_investigations.id %>&amp;pagesize=A4"> <i class="fa fa-print mr5"></i> Print Receipt (A4)</a>
          <a class="btn btn-primary" target="_blank" data-method="get" href="/patient_investigations/print.pdf?investigation_id=<%= @patient_ophthal_investigations.id %>&amp;pagesize=A5"> <i class="fa fa-print mr5"></i> (A5)</a>
          <button aria-hidden="true" class="btn btn-info" data-dismiss="modal">Close</button>
        </div> <!-- Action Buttons ends -->
          <h4 class="nomargin">Receipt  Preview</h4>

      </div>
      <div class="modal-body"> <!-- modal-body starts -->
          <div class="row">
            <div class="col-md-12">
              <div class="opdsummary">
                <div class="row">
                   <table class="table table-striped table-bordered">
                      <thead>
                         <tr>
                            <td>
                               Investigation Name
                            </td>
                            <td>
                               Cost
                            </td>
                         </tr>
                      </thead>
                      <tbody>
                        <% @invoice.services.each do |elem|  %>

                        <tr>
                           <td>
                              <strong>
                              <%= elem[:label].capitalize %>
                              </strong>
                           </td>
                           <td style="width: 20%;">
                              <%= elem[:unit_price] %>
                           </td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                    <div class="row text-right">
                      <div class="col-md-12">
                        <div class="col-md-9">
                          <strong>Mode of Payment:</strong>
                        </div>
                        <div class="col-md-3">
                          <%= @invoice.mode_of_payment %>
                        </div>
                      </div>
                    </div>
                    <div class="row text-right">
                      <div class="col-md-12">
                        <div class="col-md-9">
                          <strong>Total:</strong>
                        </div>
                        <div class="col-md-3">
                          <%= @invoice.total %>
                        </div>
                      </div>
                    </div>
                    </div>
              </div>

            </div>
          </div>

      </div>
    </div>
</div>
