<style>
  .small-text-input-btn{
    padding: 0px;
  }
  .findings-text-input{
    padding: 2px;
    margin: 2px;
  }
  .btn-file {
    position: relative;
    overflow: hidden;
    background: gainsboro;
  }

  .btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
  }
</style>

<div class="modal-dialog modal-hg-view-record-template">
  <div class="modal-content">
    <div class="modal-header">
      <div class="pull-right"> <!-- Action Buttons starts -->
        <button aria-hidden="true" class="btn btn-info" data-dismiss="modal">Close</button>
      </div> <!-- Action Buttons ends -->
      <h4 class="nomargin">Laboratory Investigation Advised on <%= @opdrecord.created_at.strftime("%d %B, %Y") %></h4>
      <%= hidden_field_tag "advised_date", @opdrecord.created_at.strftime("%d/%m/%y") %>
    </div>
    <%= render partial: "patient_investigations/show_lab_investigation_data" %>
  </div>
</div>