if(<%= raw @asset.present? %>){
  jQuery("#modal-edit-assets").html('<%= escape_javascript render "edit_modal",locals: {asset: @asset}%>')
  $("#modal-edit-assets").modal('show')
} else {
  if ($('.ui-pnotify').length > 0) { $('.ui-pnotify').remove() }
  notice = new PNotify({ title: 'Warning',
                         text: 'No Asset Found',
                         type: 'error' });
  notice.get().click(function(){ notice.remove() });
}