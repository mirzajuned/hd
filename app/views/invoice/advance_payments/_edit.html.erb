<%= javascript_include_tag "application-loggedin", "data-turbolinks-track" => true %>
<div class="modal-dialog" style="width: 40%;">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for @advance_payment, url: invoice_advance_payment_path(id: @advance_payment.id), format: :js, remote: true do |f| %>
      <%= f.hidden_field :type, value: @advance_payment.type %>
      <%= f.hidden_field :currency_symbol, value: @advance_payment.currency_symbol %>
      <%= f.hidden_field :currency_id, value: @advance_payment.currency_id %>
      <%= f.hidden_field :patient_id, value: @advance_payment.patient_id %>
      <%= f.hidden_field :user_id, value: @advance_payment.user_id %>
      <%= f.hidden_field :facility_id, value: @advance_payment.facility_id %>
      <%= f.hidden_field :organisation_id, value: @advance_payment.organisation_id %>
      <%= f.hidden_field :specialty_id, value: params[:specialty_id] %>
      <%= f.hidden_field :department_id, value: @department_id %>
      <%= f.hidden_field :department_name, value: @department_name %>
      <%= f.hidden_field :payment_time %>
      <%= f.hidden_field :payment_date %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Advance Receipt</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <%= render partial: 'form.html.erb', locals: { f: f } %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Save", class: "btn btn-success", :onclick => 'advance_invoice()' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>

<style type="text/css">
  #advance_payment_payment_date, #advance_payment_payment_time, #advance_payment_cheque_date, #advance_payment_transfer_date {
    background: #fff;
    cursor: pointer;
  }

  input.error, select.error {
    border-color: #b94a48;
    background-image: none;
  }
  input.valid, select.valid {
    border-color: #468847;
    background-image: none;
  }
</style>