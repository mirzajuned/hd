<div class="row advance_payment">
  <div class="col-md-12">
    <div class="row patient-info mb20">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-3"><b>Patient Name</b></div>
          <div class="col-md-3"><span><%= @patient.fullname.titleize %></span></div>
          <div class="col-md-3"><b>Receipt No.</b></div>
          <div class="col-md-3"><span><%= @advance_payment.advance_display_id %></span></div>
        </div>
        <div class="row">
          <div class="col-md-3"><b>Patient ID</b></div>
          <div class="col-md-3"><span><%= @patient.patient_identifier_id %></span></div>
          <div class="col-md-3"><b>Collected By</b></div>
          <div class="col-md-3"><span><%= @user.try(:fullname) %></span></div>
        </div>
        <div class="row">
          <div class="col-md-3"><b>Mobile</b></div>
          <div class="col-md-3"><span><%= @patient.mobilenumber %></span></div>
          <div class="col-md-3"><b>Advance Date</b></div>
          <div class="col-md-3"><span><%= @advance_payment.payment_date.try(:strftime, "%d/%m/%Y") %></span></div>
        </div>
      </div>
    </div>
    <hr/>
    <div class="row advance-info mb20">
      <div class="col-md-12">
        <% refunded_amount_with_precision = number_with_precision(@refunded_amount, precision: 2) %>
        <% refunded_amount_display = Common::Finance::NumberFormatService.call(@number_format, refunded_amount_with_precision) %>
        <p>Refunded a sum of <b><%= @advance_payment.currency_symbol %> <%= refunded_amount_display %></b> to <b><%= @patient.fullname.to_s.upcase %></b> collected towards <b><%= @advance_payment.reason %></b> by <b><%= @advance_payment.mode_of_payment.titleize %></b> dated <b><%= @advance_payment.payment_date.strftime("%d/%m/%Y") %></b>.</p>
      </div>
    </div>
    <div class="row footer-info">
      <div class="col-md-8">
        <% refunded_amount_with_precision = number_with_precision(@refunded_amount, precision: 2) %>
        <% refunded_amount_display = Common::Finance::NumberFormatService.call(@number_format, refunded_amount_with_precision) %>
        <b style="font-size: 12px;"><%= @advance_payment.currency_symbol %> <%= refunded_amount_display %>/-</b>
      </div>
      <div class="col-md-4 text-right">
        <div class="box" style="border:1px solid #eee;height: 25px;"></div>
        <span><%= @user.try(:fullname) %></span>
      </div>
    </div>
  </div>
</div>

<style type="text/css">
  .advance_payment {
     font-size: 10px;
  }
</style>