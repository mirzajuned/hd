$("#free-invoice-inventory-modal").modal("hide")
$("#invoice-modal").html("<%= escape_javascript(render 'new.html.erb') %>");
$("#invoice-modal").modal("show");

<%= render partial: "form.js.erb" %>

function advance_invoice() {
  $("#new_advance_payment").validate({
    rules: {
      "advance_payment[reason]": {
        required: true,
      },
      "advance_payment[mode_of_payment]": {
        required: true
      },
      "advance_payment[payment_date]": {
        required: true
      },
      "advance_payment[amount]": {
        required: true,
        number: true,
        min: 1
      }
    },
    messages: {
      "advance_payment[reason]": {
        required: "Reason Required",
      },
      "advance_payment[mode_of_payment]": {
        required: "MOP Required"
      },
      "advance_payment[payment_date]": {
        required: "Date Required"
      },
      "advance_payment[amount]": {
        required: "Amount Required",
        number: "Invalid Number"
      }
    },
    errorElement: 'div',
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  });
}
advance_invoice()