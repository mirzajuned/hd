<% currency_symbol = current_facility.try(:currency_symbol) %>
<% if @inventory_store.department_id == '50121007' %>
  <% @type = 'Optical' %>
<% else %>
  <% @type = 'Pharmacy' %>
<% end %>
<div class="row pending-advance-details">
  <div class="col-md-10 mb5">
    <b style="text-decoration: underline; color: red;">ADVANCE DETAILS</b>
  </div>
  <div class="col-md-12">
    <div class="row received-description">
      <div class="col-md-1">
        <b>S.No.</b>
      </div>
      <div class="col-md-2">
        <b>Reason</b>
      </div>
      <div class="col-md-2">
        <b>Mode of Payment</b>
      </div>
      <div class="col-md-2">
        <b>Payment Date</b>
      </div>
      <div class="col-md-2">
        <b>Payment Time</b>
      </div>
      <div class="col-md-2">
        <b>Advance Amount</b>
      </div>
    </div>
    <div id="payment_received_details">
      <div class="row invoice_pending_advance_row mb10">
        <%= f.hidden_field "advance_taken", value: true %>
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][type]" value="<%= @type%>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][currency_symbol]" value="<%= current_facility.currency_symbol%>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][currency_id]" value="<%= current_facility.currency_id%>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][user_id]" value="<%= current_user.id.to_s%>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][facility_id]" value="<%= current_facility.id.to_s%>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][organisation_id]" value="<%= current_user.organisation_id.to_s %>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][specialty_id]" value="<%= params[:specialty_id] %>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][department_id]" value="<%= @department_id %>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][store_id]" value="<%= params[:store_id] %>">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][advance_type]" value="Advance against bill">
        <input type="hidden" name="invoice_inventory_invoice[pending_advance_payments_attributes][user_full_name]" value="<%= current_user.fullname%>">
                                                                  
          <!-- net amount, amount_remaining -->
          <div class="col-md-1">
            <span class="payment_received_breakups_sno">1.</span>
          </div>
          <div class="col-md-2">
            <div class="input-group">   
              <input type="text" class="form-control invoice_pending_advance_reason p3_10" name="invoice_inventory_invoice[pending_advance_payments_attributes][reason]" value="">
            </div>
          </div>
          <% mop_list = Invoice::InvoicesHelper.mop_list(current_facility.country_id) %>
          <div class="col-md-2">
            <select class="form-control invoice_pending_advances_mode_of_payment" name="invoice_inventory_invoice[pending_advance_payments_attributes][mode_of_payment]" style="height: 34px;">
              <option value="">Please Select</option>
              <% mop_list.each do |mode|%>
                <option value="<%=mode%>"><%=mode%></option>
              <% end -%>
            </select>

        </div>
        <div class="col-md-2">
          <input type="text" class="form-control invoice_pending_advance_date p3_10" name="invoice_inventory_invoice[pending_advance_payments_attributes][payment_date]" value="<%= Date.current.strftime("%d/%m/%Y") %>" readonly>
        </div>
        <div class="col-md-2">
          <div class="">
            <input type="text" class="form-control invoice_pending_advance_time p3_10" name="invoice_inventory_invoice[pending_advance_payments_attributes][payment_time]" value="<%= Time.current.strftime("%I:%M %p") %>" readonly>
          </div>
        </div>
        <div class="col-md-2">
          <div class="input-group">
            <span class="input-group-addon" style="padding: 5px 10px;font-size:10px;"><%= currency_symbol %></span>
             <input type="number" class="form-control invoice_pending_advance_amount p3_10" name="invoice_inventory_invoice[pending_advance_payments_attributes][amount]" min=0>
          </div>
        </div>
        <div class="col-md-4 col-md-offset-3 mt10 mop_details" style="display: none;border: 1px solid #ccc;padding: 5px;">
        </div>
      </div>
      <div class="mode_of_payment_details_v2 mb10">
      </div>
    </div>
  </div>
</div>