   <div class="col-md-2 col-md-offset-1" >
    <b>Reason :</b>
   </div>
   <div class="col-md-3">
   <div id="advance_payment_reason"><%= @advance_payment.reason %></div>
   </div>
   <div class="col-md-2 text-right"><b>Amount :</b></div>
   <div class="col-md-3"><div id="advance_payment_amount"><%= @advance_payment.advance_amount %></div>
   </div>
   
</div>
