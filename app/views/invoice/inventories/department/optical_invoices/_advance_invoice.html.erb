  <div class="col-md-2 col-md-offset-1" >
     <b>Patient Id :</b>
  </div>
  <div class="col-md-3">
    <div id="patient_org_id"><%= @advance_payment.patient_org_id %></div>
  </div>
  <div class="col-md-2 text-right">
    <b>Patient Name  :</b></div>
   <div class="col-md-3">
  <div id="patient_name">
    <%= @advance_payment.patient_name %>
  </div>
