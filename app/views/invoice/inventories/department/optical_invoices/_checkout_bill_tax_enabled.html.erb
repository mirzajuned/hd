  <div class="row">
    <div class="col-sm-12 row">
      <h4 style="margin-top: 3px; margin-bottom: 3px">Patient Details</h4>
    </div>
  </div>
  <div class="row mt10 mb5">
    <div class="col-lg-2 font_size text-right">
      Patient Name:
    </div>
    <div class="col-lg-2 font_size">
      <%= @optical_log.recipient %>
    </div>
    <div class="col-lg-2 font_size text-right">
      Patient ID:
    </div>
    <div class="col-lg-2 font_size">
      <%= @optical_log.patient_identifier%>
    </div>
    <div class="col-lg-2 font_size text-right">
      Patient Mobile
    </div>
    <div class="col-lg-2 font_size">
      <%= @optical_log.recipient_mobile %>
    </div>
  </div>
  <div class="row mb5">
    <div class="col-lg-2 font_size text-right">
      Doctor: 
    </div>
    <div class="col-lg-2 font_size">
      <%= @optical_log.doctor_name %>
    </div>
    <div class="col-lg-2 font_size text-right">
      Additional Note:
    </div>
    <div class="col-lg-6 font_size">
      <%= @optical_log.note %>
    </div>
  </div>
  <!-- row -->
  <div class="row">
    <h4>Items</h4>
  </div>
  <div class="row mt10 mb5" style="border-bottom:1px solid #eee;border-top:1px solid #eee;">
    <div class="col-sm-12 row" style="padding: 0px;">
      <div class="col-sm-2 font_size">
        <b>Code</b>
      </div>
      <div class="col-sm-2 font_size">
        <b>Description</b>
      </div>
      <div class="col-sm-2 font_size">
        <b>Brand</b>
      </div>
      <div class="col-sm-1 font_size">
        <b>Color</b>
      </div>
      <!--</div>-->
      <!--<div class="col-sm-6">-->
      <div class="col-sm-1 font_size">
        <b>QTY</b>
      </div>
      <div class="col-sm-1 font_size">
        <b>Exp.Date</b>
      </div>
      <div class="col-sm-1 font_size">
        <b>U.Price</b>
      </div>
      <div class="col-sm-1 font_size">
        <b>Tax</b>
      </div>
      <div class="col-sm-1 font_size">
        <b>Total(&#8377;)</b>
      </div>
    </div>
  </div>
  <!--row-->
  <div id="fi_items">
    <% grand_total_price = 0 %>
    <% grand_total_tax = 0 %>
    <% if @optical_log.discount %>
      <% discount = @optical_log.discount %>
    <% else %>
      <% discount = 0 %>
    <% end %>
    <% if @optical_log.advance_payment %>
      <% advance_payment = @optical_log.advance_payment %>
    <% else %>
      <% advance_payment = 0 %>
    <% end %>
    <%  @optical_log.items.each do |item|%>
      <div class="add-optical-item row">
        <div class="col-sm-12 row" style="padding: 0px;">
          <div class="col-sm-2 font_size">
            <%= item.item_code %>
          </div>
          <div class="col-sm-2 font_size">
            <%= item.description %>
          </div>
          <div class='col-sm-2 font-size'>
            <%= item.brand %>
          </div>
          <div class='col-sm-1 font-size'>
            <%= item.try(:color) %>
          </div>
          <!--</div>-->
          <!--<div class="col-sm-6">-->
          <div class="col-sm-1 font_size">
            <%= item.quantity %>
          </div>
          <div class="col-sm-1 font_size">
            <%= item.expiry %>
          </div>
          <div class="col-sm-1 font_size">
            <%= item.list_price %>
          </div>
          <div class="col-sm-1 font_size">
            <%= number_with_precision(item.taxable_amount, precision: 2) %>
          </div>
          <div class="col-sm-1 font-size">
            <%= total_with_tx = (item.taxable_amount.to_f + item.non_taxable_amount.to_f).round(2) %>
            <!-- For Total Amount With Tax -->
            <% grand_total_price = grand_total_price + total_with_tx %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row mb5" style="margin-top: 30px; border-top: 1px solid #eee">
    <% if @optical_log.try(:tax_breakup).count > 0 %>
      <div class="col-sm-5 col-sm-offset-7 text-right">
        <div class="col-sm-6 font_size">
          <b>Non-Taxable Amount</b>
        </div>
        <div class="col-sm-3 text-center font_size">
          :
        </div>
        <div class="col-sm-2 font_size">
          <%= number_with_precision(@optical_log.non_taxable_amount, precision: 2) %>
        </div>
      </div>
      <div class="col-sm-5 col-sm-offset-7 text-right">
        <% @optical_log.tax_breakup.try(:each) do |tax_breakup| %>
          <div class="col-sm-6 font_size">
            <b><%= tax_breakup[:name] %></b>
          </div>
          <div class="col-sm-3 text-center font_size">
            :
          </div>
          <div class="col-sm-2 font_size">
            <%= number_with_precision(tax_breakup[:amount], precision: 2) %>
          </div>
        <% end %>
      </div>      
    <% end %>
  </div>
  <hr style="padding: 0px;margin: 0px;">
  <div class="row mb5" style="border-bottom: 1px solid #eee">
  </div>
  <div class="row mb5">
    <div class="col-sm-5 col-sm-offset-7 text-right">
      <div class="col-sm-6 font_size">
        <b>Total Amt Including Tax</b>
      </div>
      <div class="col-sm-3 text-center font_size">
        :
      </div>
      <div class="col-sm-2 font_size">
        <%= grand_total_price.round(2) %>
      </div>
      <% if @optical_log.discount.present? %>
        <div class="col-sm-6 font_size">
          <b>Discount</b>
        </div>
        <div class="col-sm-3 text-center font_size">
          :
        </div>
        <div class="col-sm-2 font_size">
          <%= discount.round(2) %>
        </div>
      <%end%>
      <% @optical_log.items.each do |item| %>
        <% if item.service %>
          <% grand_total_price = grand_total_price + (item.mrp).to_f %>
          <div class="col-sm-6 font_size">
            <b><%= item.description %></b>
          </div>
          <div class="col-sm-3 text-center font_size">
            :
          </div>
          <div class="col-sm-2 font_size">
            <%= item.mrp.round(2) %>
          </div>
        <% end %>
      <% end %>
      <% if @optical_log.advance_payment.present? %>
        <div class="col-sm-6 font_size" style="border-bottom: 1px solid #ccc">
          <b>Advance Paid</b>
        </div>
        <div class="col-sm-3 text-center font_size" style="border-bottom: 1px solid #ccc">
          :
        </div>
        <div class="col-sm-2 font_size" style="border-bottom: 1px solid #ccc">
          <%= advance_payment.round(2) %>
        </div>
        <div class="col-sm-6 font_size" style="border-bottom: 1px solid #ccc">
          <b>Amount Remaining</b>
        </div>
        <div class="col-sm-3 text-center font_size" style="border-bottom: 1px solid #ccc">
          :
        </div>
        <div class="col-sm-2 font_size" style="border-bottom: 1px solid #ccc">
          <%= (grand_total_price - discount - advance_payment).round(2) %>
        </div>
      <%else%>
        <div class="col-sm-6 font_size">
          <b>Net Amount</b>
        </div>
        <div class="col-sm-3 text-center font_size">
          :
        </div>
        <div class="col-sm-2 font_size">
          <%= (grand_total_price - discount).round(2) %>
        </div>
      <%end%>
      <% if @print_advance == 'yes' %>
        <!-- <div class="col-sm-6 font_size">
          <b>Advance Amount</b>
          </div>
          <div class="col-sm-3 text-center font_size">
          :
          </div>
          <div class="col-sm-2 font_size">
          <%#= advance_payment.round(2) %>
          </div>
          
          
          <div class="col-sm-6 font_size">
          <b>Remaining Amount</b>
          </div>
          <div class="col-sm-3 text-center font_size">
          :
          </div>
          <div class="col-sm-2 font_size">
          <%#= ((wo_grand_total_price + grand_total_tax  - discount) - advance_payment).round(2) %>
        </div> -->
      <% end %>
    </div>
  </div>
  <!--row-->
</div>