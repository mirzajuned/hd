jQuery("#free-invoice-inventory-modal").html("<%= escape_javascript(render '/invoice/inventories/department/pharmacy_invoices/free_invoice') %>")
jQuery("#free-invoice-inventory-modal").modal("show")

function btnProceedFreeInvoice() {
  $("#proceed_free_invoice").validate({
    rules: {
      "name": {
        required: true,
      },
      "mobile_no": {
        required: true,
        number: true,
        minlength: 10
      },
    },
    messages: {
      "name": {
        required: "Required."
      },
      "mobile_no": {
        required: "This field is required",
        number: "Please enter a valid number",
        minlength: "Mobile no. must have at least {0} characters"
      },
    },
  });
}
btnProceedFreeInvoice()