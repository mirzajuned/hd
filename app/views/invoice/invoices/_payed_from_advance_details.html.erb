<div class="modal-dialog" style="width:85%;">
  <div class="modal-content">
    <div class="modal-header p7_10">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">RECEIVED FROM ADVANCE</h4>
    </div>
    <div class="modal-body">
      <table class="table table-bordered">
	    <thead>
		  <tr>
		    <th>No.</th>
		    <th>Date/Time</th>
		    <th>Paid By</th>
		    <th>Mode Of Payment</th>
		    <th>Amount</th>
		  </tr>
		</thead>
		<tbody>
          <% @invoice.advance_payment_breakups.each_with_index do |advance_payment_breakup, i| %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= advance_payment_breakup.time.strftime('%I:%M %p') %>, <%= advance_payment_breakup.date.strftime('%d/%m/%Y') %></td>
              <td><%= @invoice.patient.fullname.camelize %></td>
              <td><%= advance_payment_breakup.mode_of_payment.camelize%></td>
              <td>
                <%= number_with_precision(advance_payment_breakup.amount.to_f, precision: 2) %>/-<br>
              </td>
          </tr>
          <% end %>
		</tbody>
	  </table>
    </div>
  </div>

</div>