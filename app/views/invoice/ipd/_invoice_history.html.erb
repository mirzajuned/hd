<div class="col-md-12 mt5 mb5" style="border-bottom:1px solid #ddd;">
  <p class="info-history-abbv" style="display:none;font-size:10px;">
    <span style="border-radius: 100%;background-color: #d9534f;padding: 3px 5px;font-size: 12px;color: #fff;">U</span> = <b>Update</b> ,&nbsp;&nbsp; <span style="border-radius: 100%;background-color: #428bca;padding: 3px 5px;font-size: 12px;color: #fff;">P</span> = <b>Print</b>
  </p>
</div>
<% @invoice_histories = @invoice.record_histories.order(actiontime: :desc) %>
<% @invoice_histories.each do |invoice_history| %>
  <% if invoice_history.action != "C" %>
    <div class="row" style="border-bottom:1px solid #ddd; padding: 7px 0;">
      <div class="col-md-1">
        <span style="color:#fff;">|</span>
      </div>
      <div class="col-md-2">
        <div style="margin-top:7px;">
          <% if invoice_history.action == "U" %>
            <span style="border-radius: 100%;background-color: #d9534f;padding: 7px 10px;font-size: 12px;color: #fff;">U
            </span>
          <% elsif invoice_history.action == "C" %>
            <span style="border-radius: 100%;background-color: #1CAF9A;padding: 7px 10px;font-size: 12px;color: #fff;">C
            </span>
          <% elsif invoice_history.action == "P" %>
            <span style="border-radius: 100%;background-color: #428bca;padding: 7px 10px;font-size: 12px;color: #fff;">P
            </span>
          <% elsif invoice_history.action == "S" %>
              <span style="border-radius: 100%;background-color: #1CAF9A;padding: 7px 10px;font-size: 12px;color: #fff;">S
              </span>
          <% elsif invoice_history.action == "US" %>
              <span style="border-radius: 100%;background-color: #f0ad4e;padding: 7px 10px;font-size: 12px;color: #fff;">U
              </span>
          <% end %>
        </div>
      </div>
      <div class="col-md-9">
        <p style="margin-bottom:-7px;font-size:16px;"><b><%= User.find_by(id: invoice_history.user_id.to_s).fullname %></b></p>
        <span style="font-size:9px;"><%= invoice_history.actiontime.strftime('%I:%M%P, %d %B') %></span>
      </div>
    </div>
  <% end %>
<% end %>
