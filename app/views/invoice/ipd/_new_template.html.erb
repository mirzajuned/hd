<%= javascript_include_tag 'application-loggedin', 'data-turbolinks-track' => true %>
<div class="modal-dialog" style="width:85%;">
  <!-- Modal content-->
  <div class="modal-content">
    <%= form_for(@invoice, url: { controller: 'ipd', action: 'create' }, format: :js, remote: true, method: :POST) do |inv| %>
      <%= inv.hidden_field :patient_id, value: @patient.id %>
      <%= inv.hidden_field :admission_id, value: @admission.id %>
      <%= inv.hidden_field :organisation_id, value: current_user.organisation_id %>
      <%= inv.hidden_field :user_id, value: @userid %>
      <%= inv.hidden_field :invoice_type, value: @invoice_type, id: 'patient-type' %>
      <%= inv.hidden_field :invoice_source, value: @finance_type %>
      <%= inv.hidden_field :facility_id, value: @facility_id %>
      <%= inv.hidden_field :tax_enabled, value: @invoice_setting.tax_enabled_ipd %>
      <%= inv.hidden_field :currency_symbol, value: @currency.symbol %>
      <%= inv.hidden_field :currency_id, value: @currency.id %>
      <%= inv.hidden_field :version, value: @invoice_template.version %>
      <%= inv.hidden_field :specialty_id, value: @admission.specialty_id %>
      <%= inv.hidden_field :department_id, value: @department_id %>
      <%= inv.hidden_field :department_name, value: @department_name %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">IPD Receipt</h4>
      </div>
      <div class="modal-body">
        <% if @invoice_setting.tax_enabled_ipd %>
          <%= render partial: 'invoice/ipd/new_template_tax_enabled.html.erb', locals: { inv: inv } %>
        <% else %>
          <%= render partial: 'invoice/ipd/new_template_tax_disabled.html.erb', locals: { inv: inv } %>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= inv.submit 'Save', class: 'btn btn-success save-invoice', data: { 'disable-with': 'Please Wait...' }, onclick: 'ipd_invoice_template_page()' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>

