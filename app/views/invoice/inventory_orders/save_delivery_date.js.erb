var department_id = '<%= @inventory_store.department_id %>'
if (department_id == '50121007') {
	$('#btn-optical-management-refresh').trigger('click');
} else {
	$('#btn-pharmacy-management-refresh').trigger('click');
}

$(".pharmacy-panel").html("").hide()
$(".store-content-panel").show()

$(".inventory-show-panel").html("<%= escape_javascript(render partial: '/invoice/inventory_orders/show.html') %>")

adjust_height()
function adjust_height(){
  inventoryHeight = $(window).height() - $(".navbar").height() - 3
  toolbar2Height = $(".inventory-toolbar2").height()
  $(".inventory-show-panel").height(inventoryHeight - toolbar2Height)
}
