<div class="invoice_types" style="padding: 10px 5px 0;background: #eee;">
  <%= render partial: 'invoice_types.html.erb', locals: { invoice: @invoice, type: 'opd', form_method: 'new', is_draft: @is_draft } %>
</div>
<div class="services_items_invoice_opd" id="services_items_invoice_opd">
  <!-- Display Once -->
  <div class="service_row_count mb5 mt5" title="0">
    <div class="row service_row mb10">
      <div class="col-md-3">
        <!-- <input style="padding:5px 10px;" class="form-control service_name" placeholder="Service Name" type="text" name="invoice_opd[services][0][name]"> -->
        <select class="form-control service_name" name="invoice_opd[services][0][name]">
          <% @invoiceservicecard.each do |servicecard| %>
            <% if servicecard.invoice_item_card.where(card_deleted: false).count > 0 %>
              <option value="<%= servicecard.id.to_s %>"><%= servicecard.service_name %></option>
            <% end %>
          <% end %>
        </select>
      </div>
      <div class='col-md-4'>
        <button class="btn btn-primary btn-xs add_service_item" style="padding:0 5px;margin-top:3px;"><i class="fa fa-plus"></i> New Item</button>
      </div>
      <div class="col-md-3">
        <input style="padding:5px 10px;" class="form-control service_total text-right" placeholder="Service Total" type="text" name="invoice_opd[services][0][service_total]" readonly="readonly">
      </div>
      <div class="col-md-2 text-right">
        <button class="btn btn-danger btn-xs remove_service_item" style="padding:0 5px;margin-top:3px;"><i class="fa fa-trash-alt"></i> Remove Service</button>
      </div>
    </div>
    <div class="service_item_row_count mb10" id="service_item_row">
      <div class="invoice_service_item_row row mt5" id="invoice_service_item_row">
        <div class="col-md-1 field_for_date">
          <input name="invoice_opd[services][0][items][0][item_entry_date]" style="padding:5px 10px;" class="form-control i_item_entry_date" type="hidden" value="<%= Time.current %>">
        </div>
        <div class="col-md-3 field_for_description">
          <!-- <input name="invoice_opd[services][0][items][0][description]" style="padding:5px 10px;" class="form-control i_description" placeholder="Description" type="text"> -->
          <%#= select_tag "invoice_opd[services][0][items][0][description]", options_for_select(""), { :class=> "form-control i_description" } %>
          <select class="form-control i_description" name="invoice_opd[services][0][items][0][description]"></select>
        </div>
        <div class="col-md-2 field_for_quantity">
          <input name="invoice_opd[services][0][items][0][quantity]" style="padding:5px 10px;" class="form-control i_quantity" placeholder="Quantity" value="1" type="text" maxlength="4">
        </div>
        <div class="col-md-2 field_for_unit_price">
          <input name="invoice_opd[services][0][items][0][unit_price]" style="padding:5px 10px;" class="form-control i_unit_price" placeholder="Unit Price" type="text" maxlength="12">
        </div>
        <div class="col-md-2 field_for_price">
          <input name="invoice_opd[services][0][items][0][price]" style="padding:5px 10px;" class="form-control i_price" id="i_price" placeholder="Total" readonly="readonly" type="text">
        </div>
        <div class="col-md-2">
          <button class="btn btn-danger btn-xs remove_item" style="padding:0 5px;margin-top:3px;"><i class="fa fa-trash-alt"></i> Remove Item</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" style="margin-left:0px;">
  <button class="btn btn-primary btn-xs" id="add_service_invoice_opd" style="padding:0 5px;"><i class="fa fa-plus"></i> Add Service</button>
</div>
