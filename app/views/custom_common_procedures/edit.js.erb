jQuery("#custom-procedure-modal").html("<%= escape_javascript(render 'edit') %>")

function validate_custom_procedure_page() {
	
	$("#edit_custom_common_procedure").validate({
    rules: {
      "custom_common_procedure[name]": {
        remote: "/custom_common_procedures/update_name_validation?saved_procedure_name=<%= @custom_common_procedure.name %>&&procedure_from=custom",
        required: true,
        minlength: 3
      },
       "synonym_common_procedure[name]": {
       	remote: "/custom_common_procedures/update_name_validation?saved_procedure_name=<%= @custom_common_procedure.name %>&&procedure_from=synonym",
        required: true,
        minlength: 3
      },
      "translated_common_procedure[name]": {
        remote: "/custom_common_procedures/update_name_validation?saved_procedure_name=<%= @custom_common_procedure.name %>&&procedure_from=translated",
        required: true,
        minlength: 3
      }
    },
    messages: {
      "custom_common_procedure[name]": {
        remote: "Name already exist in Custom/ Synonym, try another",
        required: "Please fill the procedure name."
      },
       "synonym_common_procedure[name]": {
       	remote: "Name already exist in Custom/ Synonym, try another",
        required: "Please fill the procedure name."
      },
      "translated_common_procedure[name]": {
        remote: "Name already exist in Custom/ Synonym/ Translated, try another",
        required: "Please fill the procedure name." 
      }
    },
  });
}