<div class="services_items_invoice_template" id="services_items_invoice_template">
  <div class="service_row_count mb5 mt5" title="0">
    <div class="col-md-12">
      <div class="invoice_service_item_row_header row mt5" id="invoice_service_item_row_header">
        <div class="col-md-4">
          <b>Services</b>
        </div>
        <div class="col-md-2">
          <b>Quantity</b>
        </div>
        <div class="col-md-2">
          <b>Unit Price</b>
        </div>
        <div class="col-md-2">
          <b>Total</b>
        </div>
        <div class="col-md-2">
          <b>Actions</b>
        </div>
      </div>
    </div>
    <div class="service_item_row_count mb10" id="service_item_row">
      <div class="invoice_service_item_row row mt5" id="invoice_service_item_row">
        <div class="col-md-12">
          <div class="field_for_date">
            <input type="hidden" name="invoice_template[template_details][0][entry_type]" class="i_entry_type" value="service">
          </div>
          <div class="col-md-2 field_for_payer" style="display: none;">
            <select class="form-control i_payer_master_id" name="invoice_template[template_details][0][payer_master_id]">
            </select>
          </div>
          <div class="col-md-4 field_for_description">
            <select class="form-control i_description" name="invoice_template[template_details][0][description]">
              <option value="">Select Service</option>
            </select>
            <input name="invoice_template[template_details][0][service_code]" style="padding:2px 10px; border: none" class="form-control i_service_code" placeholder="Service Code" value="" type="text" readonly="readonly">
          </div>
          <div class="col-md-2 field_for_quantity">
            <input type="text" name="invoice_template[template_details][0][quantity]" style="padding:5px 10px;" class="form-control i_quantity" placeholder="Quantity" maxlength="4" value="1">
          </div>
          <div class="col-md-2 field_for_unit_price">
            <input type="text" name="invoice_template[template_details][0][unit_price]" style="padding:5px 10px;" class="form-control i_unit_price" placeholder="Unit Price">
          </div>
          <div class="col-md-2 field_for_price">
            <input type="text" name="invoice_template[template_details][0][price]" style="padding:5px 10px;" class="form-control i_price" id="i_price" placeholder="Total" maxlength="12" readonly="readonly">
            <input type="hidden" name="invoice_template[services][0][discount_amount]" class="service_discount_amount" value="0">
            <input type="hidden" name="invoice_template[services][0][discount_percentage]" class="service_discount_percentage" value="">
            <input type="hidden" name="invoice_template[services][0][net_item_price]" class="net_item_price" value="">
          </div>
          <div class="col-md-2">
            <button class="btn btn-danger btn-xs remove_service" style="padding:0 5px;margin-top:3px;"><i class="fa fa-trash-alt"></i> Remove</button>
          </div>
        </div>
      </div>
    </div>
    <div class="row service_row mb10">
      <div class="col-md-12">
        <div class='col-md-4'>
          <button class="btn btn-primary btn-xs add_service_item" style="padding:0 5px;margin-top:3px;"><i class="fa fa-plus"></i> New Item</button>
          <button class="btn btn-primary btn-xs add_service_package" style="padding:0 5px;margin-top:3px;"><i class="fa fa-plus"></i> New Package</button>
        </div>
        <div class="col-md-3">
          <input type="hidden" name="invoice_template[total]" class="service_total">
        </div>
      </div>
    </div>
  </div>
</div>
