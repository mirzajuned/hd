$("#invoice-modal").html('<%= escape_javascript(render "edit.html.erb") %>')

$(".tax-rate-type").select2();

function edit_tax_rate(){
  $("#edit_tax_rate_<%= @tax_rate.id.to_s %>").validate({
    rules: {
      "tax_rate[name]": {
        required: true,
      },
      "tax_rate[rate]": {
        required: true,
      },
      "tax_rate[type]": {
        required: true,
      }
    },
    messages: {
      "tax_rate[name]": {
        required: "Name is Required."
      },
      "tax_rate[rate]": {
        required: "Rate is Required",
      },
      "tax_rate[type]": {
        required: "Type is Required"
      }
    },
    errorPlacement: function (error, element) {
      error.insertAfter(element);
    }
  });
}
edit_tax_rate()