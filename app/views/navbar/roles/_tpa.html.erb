<div class="container-fluid">
  <div class="navbar-header" style="margin-top:12px;">
    <%= render partial: 'navbar/toggle.html.erb' %>
    <%= link_to '/tpa/insurance_management', data: { remote: true }, class: 'ps main-logo', id: 'main-logo' do %><%= image_tag 'foss_navbar.png', class: 'logo', style: 'width: 25px;' %><% end %>
  </div>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-main" style="margin-top: -3px; margin-left: 12px; border-left: 1px solid #ccc;">
      <!-- OPD, IPD, OT Buttons Partial -->
      <li id="tpa-management" class=" common-li-class <%= 'activate' if params[:controller] == 'tpa' && params[:action] == 'insurance_management' %>">
        <%= link_to '/tpa/insurance_management', data: { remote: true }, class: 'ps hover-effect', id: 'opd_navigation' do %><span class="fa-color leftnav-main-title"> <i class="fa fa-file-alt"></i>&nbsp; TPA </span><% end %>
      </li>

      <li id="admission-management" class=" common-li-class <%= 'activate' if params[:controller] == 'inpatients' && params[:action] == 'admission_management' %>">
        <%= link_to '/inpatients/admission_management', data: { remote: true }, class: 'ps hover-effect', id: 'ipd_navigation' do %>
          <span class="leftnav-main-title fa-color"><i class="fa fa-ambulance"></i> IPD</span>
        <% end %>
      </li>

      <!-- Inventory Buttons Partial -->
      <%#= render partial: 'navbar/inventory.html.erb' %>
      <!-- New Feature Button Partial -->
      <%#= render partial: 'navbar/new_feature.html.erb' %>
      <!-- Search Bar -->
      <!--<span style="position: absolute;top: 5px;left: 565px;width: 225px;"><input type="text" class="form-control" name="searchpatientkeyword1" id="searchpatientkeyword1" placeholder="Search patient by Name, Number." maxlength='25' /></span>-->
        <!-- <span class="search_patient"> <%#= link_to patients_search_patient_summary_path(modal: 'appointment-modal'), class: "btn btn-success", id: "search-patient-btn", data: {remote: true, 'toggle': "modal", 'target': '#appointment-modal' } do %> <i class="glyphicon glyphicon-search"></i>&nbsp; Search Patients<%# end %> -->
        </span>
    </ul>
    <ul class="nav navbar-nav navbar-right" style="margin-top: -3px; margin-left: 12px; border-left: 1px solid #ccc;">
      <!-- User Station Partial -->
      <%= render partial: 'navbar/user_station.html.erb' %>
      <!-- Facility Dropdown Partial -->
      <%= render partial: 'navbar/facilities.html.erb' %>
      <!-- Feedback Link Partial -->
      <%= render partial: 'navbar/feedback.html.erb' %>
      <!-- Account Settings & Logout -->
      <li class="common-li-class <%= 'activate' if params[:controller] == 'users' && params[:action] == 'account_settings' %>">
        <button type="button" class="btn btn-default dropdown-toggle focus-set" data-toggle="dropdown" style="text-align: center; padding:13px; background-color:#fff; border:none;" id="setting_n_logout">
          <span class="fa-color">
            <i class="fa fa-user-md" style="font-size: 20px;opacity: 1;"></i>
            <%= current_user.fullname %>
          </span>
          <span class="caret fa-color"></span>
        </button>
        <ul class="dropdown-menu children" style="background-color:#fff;">
          <%= render 'navbar/logout_dropdown' %>
        </ul>
      </li>
    </ul>
    <%= render partial: 'navbar/notification.html.erb' %>
  </div>
</div>
<style>
.search_patient{
  position: absolute;
  top: 5px;
  left: 565px;
  width: 225px;
}
</style>
