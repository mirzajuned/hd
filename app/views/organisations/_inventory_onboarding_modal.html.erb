<div class="modal fade" tabindex="-1" role="dialog" id="modal-add-inventory" width="50%">
  <div class="modal-dialog"style=" width: 50%">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add Inventories</h4>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-md-2">
        <label>Location</label>
            </div>
          <div class="col-md-5">
        <select id="facility-dropdown" class="form-control">
          <%@facilities.each do |facility|%>
              <option value="<%=facility.id%>"> <%=facility.name%> </option>
          <%end%>
        </select>
          </div>
        </div>

        <div class="department_content"></div>

      </div>



      <div class="modal-footer">
        <button type="button" class="btn btn-primary pull-left"id="save_selcted_invontory">Save</button>

        <button aria-hidden="true" class="btn btn-danger" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>

<script>

    function getDepartments(){
        facility_id = $("#facility-dropdown").val()
        jQuery.ajax({
            method: 'get',
            url: '/organisations/facility_dropdown_inventory',
            data: {  id: facility_id  }
        })
    }
    getDepartments();
    $( "#facility-dropdown" ).change(function(){
        getDepartments();

    })
</script>








