      <%= f.text_field :fax, { :class => 'form-control', :placeholder => "+91-80-6100000" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :email, {:class => 'control-label'} %>
    </div>
    <div class="col-md-7">
      <%= f.text_field :email,{:class => 'form-control', :placeholder => "abc@abc.com" } %>
