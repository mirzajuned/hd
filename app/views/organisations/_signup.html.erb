<%= form_for(@organisation) do |f| %>
    <div id="accordion-demo" class="panel-group panel-group-dark">
      <div class="panel panel-default padding-top-5">
        <h4 class="panel-title">
          <a href="#basic_details" data-parent="#accordion-demo" data-toggle="collapse" class="collapsed">Enter Basic Details</a>
        </h4>

        <div id="basic_details" class="panel-collapse collapse in">

          <div class="panel-body">
            <section>
              <div id="basic_details_panel">
                  <%= render 'organisation_practice_basic_details', f: f %>
              </div>
            </section>
          </div>

        </div>
      </div>


      <div class="panel panel-default padding-top-5">
        <h4 class="panel-title">
          <a href="#add_facilities" data-parent="#accordion-demo" data-toggle="collapse" class="collapsed">
            Add Facilities
          </a>
        </h4>

        <div id="add_facilities" class="panel-collapse collapse in">
          <div class="panel-body">
            <section>
              <div id='facilities_panel'>
                <div class="row form-group">
                  <div class="col-sm-2"><b>Name</b></div>
                  <div class="col-sm-2"><b>Telephone</b></div>
                  <div class="col-sm-2"><b>Email</b></div>
                  <div class="col-sm-2"><b>City</b></div>
                  <div class="col-sm-2"><b>Pincode</b></div>
                </div>
                <%= link_to_add_sub_form 'facilities/new_org_facility', f, :facilities, 'add_facility_item_', 'Add Facility' %>
              </div>
            </section>
          </div>
        </div>
      </div>

      <div class="panel panel-default padding-top-5">
        <h4 class="panel-title">
          <a href="#add_users" data-parent="#accordion-demo" data-toggle="collapse" class="collapsed">Add users</a>
        </h4>

        <div id="add_users" class="panel-collapse collapse in">
          <div class="panel-body">
            <section>
              <div class="tab-pane" id="users">
                <%= link_to_add_form 'users/new_org_user', f, :users, 'add_item_', 'Add User' %>
              </div>
            </section>
            </div>
          <%= f.submit "create org", {class:"btn btn-success pull-right mt20"}%>
        </div>
      </div>
    </div>

    </div>
<% end %>
