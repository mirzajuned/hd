<div class="row">
  <div class="col-md-4">
    <h4>MANAGE CORPORATE</h4>
  </div>
  <div class="col-md-3 text-right">
    <input type="text" name="" class="search-corporate-master form-control" placeholder="Search By Corporate Name" value="" style="margin-top: 5px;">
  </div>
  <div class="col-md-5 text-right">
    <%= link_to new_finance_corporate_master_path, class: 'btn btn-primary', data: { remote: true, 'toggle': 'modal', 'target': '#finance-corporate-modal' } do %><i class="fa fa-plus"></i> Add Corporate<% end %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <% if @finance_corporates.count > 0 %>
      <table id="manage_finance_corporates_table" class="table table-primary table-bordered">
        <thead>
        <th>Name</th>
        <th>Description</th>
        <th class="text-center">Actions</th>
        </thead>
        <tbody id="corporate_master-list">

        <% @finance_corporates.each do |corporate| %>
          <% visibility = corporate.is_disable ? 'visibility: hidden;' : 'visibility: visible' %>
          <tr class="each-contact-table-row corporate_master_tr">
            <td>
              <b class="corporate_name" style="color:#000;"><%= corporate.try(:name) %></b>
            </td>

            <td>
              <b class="corporate_description" style="color:#000;"><%= corporate.try(:description) %></b>
            </td>

            <td>
              <table style="width: 100%;">
                <tr>
                  <td style="<%=visibility%>">
                    <%= link_to edit_finance_corporate_master_path(id: corporate.id.to_s), method: :get, data: { remote: true, toggle: 'modal', target: '#finance-corporate-modal' }, class: 'btn btn-info btn-xs', style: 'display: inline;' do %>Edit<% end %>
                  </td>

                  <td id='corporate_disable_button_<%= corporate.id %>'>
                    <% if corporate.try(:is_disable) == true %>
                      <%= link_to 'Active', toggle_disable_finance_corporate_master_path(id: corporate.id, is_disable: false), class: 'btn btn-xs btn-primary', remote: true, style: 'display: inline;' %>
                    <% else %>
                      <div class="btn btn-danger btn-xs btn-disable-corporate" style="display: inline;" data-toggle="modal" data-target="#confirmation-modal" data-corporate='<%= corporate.name %>'>Disable</div>
                      <%= link_to 'Confirm', toggle_disable_finance_corporate_master_path(id: corporate.id, is_disable: true), class: 'btn btn-danger', remote: true, style: 'display: none;', data: { dismiss: 'modal' } %>
                    <% end %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="col-md-12 text-center mt10">
        No Data to Show.
      </div>
    <% end %>
  </div>
</div>

<style>
  #confirmation-modal a{
    display: inline-block !important;
  }
  .row-container{
    height: 25px;
  }
</style>

<script type="text/javascript">
  $(".search-corporate-master").on('keyup', function(){
    corporate_list = $(".corporate_master_tr");
    corporate_list_count = corporate_list.length;
    search = $(this).val().toUpperCase().trim();
    counter = 0
    for (var i = corporate_list.length - 1; i >= 0; i--) {
      corporate_name = $(corporate_list[i]).find(".corporate_name")
      corporate_description = $(corporate_list[i]).find(".corporate_description")
      if($(corporate_name).html().toUpperCase().indexOf(search) > -1 || $(corporate_description).html().toUpperCase().indexOf(search) > -1) {
        $(corporate_list[i]).css("display", "");
      } else {
        $(corporate_list[i]).css("display", "None");
        counter += 1
      }
    }

    if(corporate_list_count == counter){
      if($(".show-nothing").length <= 0){
        $("#corporate_master-list").append(`<tr class="show-nothing"><td class="text-center" colspan="5">Nothing to Show</td></tr>`)
      }
    } else {
      $(".show-nothing").remove();
    }
  })
</script>
