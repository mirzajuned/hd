<div class="row no-margin text-center" style="margin-top: -5px;margin-bottom: 10px;">
  <span style="font-size: 14px;">
    <b><i class="fa fa-square" style="color: #d9534f">&nbsp;Scheduled</i></b>
    <% unless current_facility.clinical_workflow %>
      <b><i class="fa fa-square" style="color: #f0ad4e">&nbsp;Waiting</i></b>
    <% end %>
    <b><i class="fa fa-square" style="color: #ff8735">&nbsp;Engaged</i></b>
    <b><i class="fa fa-square" style="color: #5cb85c">&nbsp;Completed</i></b>
  </span>
</div>
<div class="row no-margin text-center">
  <div class="row no_margin appointment_tabs" style="width: 98%; margin-top: -15px;margin-left:7px;">
    <ul class="nav nav-tabs tab_active" role="tablist">
      <li role="presentation" class="full-width">
        <a href="#past_discharge_list" aria-controls="home" role="tab" data-toggle="tab">
        <span style="display: block; font-size: 16px;" class="scheduled_past_list_count">0</span>
          Past
        </a>
      </li>
      <li role="presentation" class="full-width active">
        <a href="#today_appointment_list" aria-controls="home" role="tab" data-toggle="tab">
        <span style="display: block; font-size: 16px;" class="scheduled_today_list_count">0</span>
          Today
        </a>
      </li>
      <li role="presentation" class="full-width">
        <a href="#future_scheduled_list" aria-controls="home" role="tab" data-toggle="tab">
        <span style="display: block; font-size: 16px;" class="scheduled_future_list_count">0</span>
          Future
        </a>
      </li>
    </ul>
  </div>


  <div class="row no_margin summary_body collapse in" id="scheduled_appointments_today">
    <div class="appointments_calendar_list">
      <div class="tab-content" style="width:95%; margin-left:10px;">
        <div role="tabpanel" class="appointment_type_content tab-pane" id="past_discharge_list">
          <div class="loading-appointment-list"><b>Loading Appointments<br/>Please Wait...</b></div>
        </div>
        <div role="tabpanel" class="appointment_type_content tab-pane active" id="today_appointment_list">
          <div class="loading-appointment-list"><b>Loading Appointments<br/>Please Wait...</b></div>
        </div>
        <div role="tabpanel" class="appointment_type_content tab-pane" id="future_scheduled_list">
          <div class="loading-appointment-list"><b>Loading Appointments<br/>Please Wait...</b></div>
        </div>
      </div>
    </div>
  </div><!-- summary_body -->
</div>

<style type="text/css">
  .full-width {
    width: 33.33%;
  }
</style>