jQuery("#appointment_summary").html("<%= escape_javascript(render 'outpatients/appointment/appointment_details/appointment_details_section.html.erb') %>")
jQuery("#appointment_summary").css('background-color','#fff')

$(".chk-template-count").click(function(e){
  var opd_record_count = $(this).attr("data_opd_record_count");
  var template_name = $(this).attr("data_opd_template");

  if(opd_record_count >= 1) {
    if ($('.ui-pnotify').length > 0) { $('.ui-pnotify').remove() }
    notice = new PNotify({ title: template_name + ' Template already exist', text: template_name + ' Template has already created for this appointment, are you sure want to create another?', type: 'warning' }); notice.get().click(function(){ notice.remove() });
  }
});