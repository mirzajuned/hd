$('.investigations-tab').on('click', function(e) {
  e.preventDefault();
  if ($('#btn-investigation-details-refresh').length == 0) {
    let appointment_id = '<%= @appointment.id.to_s %>';
    let current_date = '<%= @current_date %>';
    let patient_id = '<%= @patient.id.to_s %>';

    $.ajax({
      data: {
        patient_id: patient_id,
        appointment_id: appointment_id,
        current_date: current_date,
        new_ui: true
      },
      url: '/outpatients/investigation_details'
    })
  }
})

if('<%= params[:rhs_tab] %>' == 'investigations-tab'){
  $('.investigations-tab').trigger('click');
}
