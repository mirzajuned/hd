<% if @counsellor_note.count > 0 %>
<% @counsellor_note.each do |shownote| %>
  <% @user = User.find_by(:id => shownote.user_id) %>
  <div class="col-md-12 row mb5 counsellor_note" style="padding: 3px;border-radius: 5px;border: #428bca 2px solid;">
    <span style="font-size:12px;padding-right: 3px; color: #428bca" id="task_comment_<%=shownote.id%>" > <%= shownote.comment %></span>
    <span style="font-size: 9px;padding-right: 3px;color: #999;">  <strong><%= shownote.created_at.strftime("%I:%M %P %d-%m-%y") %></strong></span>
    <% if current_user.id.to_s == shownote.user_id.to_s || current_user.role_ids.any?{|i| [160943002,6868009].include?i} %>
      <a href="/opd_appointments/delete_counsellor_note?patient_id=<%=@patientid %>&note_id=<%= shownote.id %>" method = "get" data-remote="true" class="btn btn-link btn-xs pull-right" style="padding: 2px 0px" id="delete"><span style="color: red;padding: 2px 0px;" class="glyphicon glyphicon-trash" method="delete" ></span></a>
    <% end %>
  </div>
<% end %>
<%else%>
No Note Present
<%end%>