const filterPrescription = () => {
  let advised_by = $('#optical_prescription_advised_by_filter').val();
  let advised_on = $('#optical_prescription_advised_on_filter').val();

  let data = { patient_id: "<%= @patient.id.to_s %>" }

  if (advised_by) {
    data['advised_by'] = advised_by
  }

  if (advised_on) {
    data['advised_on'] = advised_on
  }

  $.ajax({
    data: data,
    url: '/outpatients/filter_optical_prescriptions'
  })
}

$('#optical-table').on('click', '.optical-prescription-details', function() {
  let modalId = $(this).attr('data-modal-id')
  $(`#${modalId}`).modal('show')
})

$('#optical_prescription_advised_by_filter').on('change', function() {
  filterPrescription();
})

$('#optical_prescription_advised_on_filter').on('change', function() {
  filterPrescription();
})
