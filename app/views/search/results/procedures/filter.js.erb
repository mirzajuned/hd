$("#procedure_stage_"+$('input[name="hiddenfilter[procedure_stage]"]').val().toLowerCase()).prop("checked", true);
$(".search-procedure-filter").on("click", function(e){
  loading_dots()
  e.preventDefault()

  var gender = [];
  var laterality
  var above_age
  var below_age
  var systemic_history
  var procedure_stage
  var search_filter = $("input[name='hiddenfilter[search_filter]']").val()
  var procedure_type = $("input[name='hiddenfilter[procedure_type]']").val()
  var systemic_history = $(".sysmetic_history_data").val();
  var eye_drop_allergies = $(".eye_drop_allergy_data").val();
  // gender = $("input[name='filter[gender]']:checked").val()
  $(".gender_checkboxes :checked").each(function(){
    gender.push($(this).val())
  });

  if (!gender) {
    gender = ""
  }

  laterality = $("input[name='filter[laterality]']:checked").val()

  if (!laterality) {
    laterality = ""
  }

  above_age = $("input[name='filter[above_age]']").val()

  if (!above_age) {
    above_age = ""
  }

  below_age = $("input[name='filter[below_age]']").val()

  if (!below_age) {
    below_age = ""
  }
  if (systemic_history === null){
    systemic_history = ""
  }
  if(eye_drop_allergies === null || eye_drop_allergies === "undefined"){
    eye_drop_allergies = ""
  }
  procedure_stage = $("input[name='filter[procedure_stage]']:checked").val();
  if(!procedure_stage){
    procedure_stage = ""
  }
  var procedure_code = $("#procedure_code").val()

  $("#filter-modal").hide()

  jQuery.ajax({
    type: "GET",
    dataType: "script",
    data: {gender: gender, 
      laterality: laterality,
      above_age: above_age, 
      below_age: below_age,
      type: procedure_type,
      search_filter: search_filter, 
      code: procedure_code,
      systemic_history: systemic_history,
      eye_drop_allergies: eye_drop_allergies,
      procedure_stage: procedure_stage,
      remote: true},
    url: "/search/results/procedures/",
  }).done(function(data){

  })





})