<% if @facility_setting.present? %>
  <% sms_setting_data = @facility_setting %>
<% elsif @org_message_setting.present?  %>
  <%  sms_setting_data = @org_message_setting  %>
<% else  %>
  <% sms_setting_data =  {}  %>
<% end %>
$("#sms-setting-modal" ).modal("hide")

$(".refresh-visit-schedule-details-"+"<%= sms_setting_data.id.to_s%>").html('<%= sms_setting_data.try(:visit_sms_time).try(:strftime,"%I:%M %p")%> <%= sms_setting_data.try(:visit_sms_schedule) == "0" ? "Same Day" : "After "+sms_setting_data.try(:visit_sms_schedule).to_s+ " day"%>')
$(".refresh_msg_visit_data-"+"<%= sms_setting_data.id.to_s%>").html("<%= sms_setting_data.try(:visit_sms_text)%>")

