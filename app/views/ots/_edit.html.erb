<div class="modal-dialog ot-dialog" style="width:45%;">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Edit OT Form</h4>
    </div>
    <%= form_for @ot_schedule, url: ot_path, remote: true, html: { id: 'edit-ot-form', class: "ot-form" } do |ot_schedule| %>
      <div class="modal-body" style="padding:5px 10px;background: #eee;">
        <div class="row">
          <div class="col-sm-12">
            <%= render partial: 'ots/form.html.erb' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= ot_schedule.submit "Save", class: "btn btn-success schedule_ot", data: { 'disable-with': 'Please Wait...' } %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</div>

<style type="text/css">
  /* Hack For Edit Case Form Height */
  .ot-form-body {
    height: 350px !important;
  }
</style>