$("#new-service-row").html("<%= escape_javascript(render 'new') %>")

function validate_service_list(){
  $("#new_invoice_service_card").validate({
    rules: {
      "invoice_service_card[service_name]": {
        required: true,
      }
    },
    messages: {
      "invoice_service_card[service_name]": {
        required: "Service Name Required"
      }
    },
    errorPlacement: function (error, element) {
          error.appendTo($('.error-placement'));
    }
  });
}

$("#hide-new-form").on('click', function(e){
  e.preventDefault()
  $("#new-service-row").html("")
})