<% if @servicecardsenabled.where(created_from: "Migration").count > 0 %>
  <div class="row mb10">
    <div class="col-md-12 text-right">
      Note: The <b style="color:#000;"><span style="color:#f00;">Red</span> Coloured Services & Items</b> Were Created Based on Your previous Receipt Inputs
    </div>
  </div>
<% end %>
<div class="row" style="background:#354670;color:#fff">
  <div class="col-md-6">
    <h4>Service Cards List</h4>
  </div>
  <div class="col-md-2 text-right">
    <input type="text" name="" class="search-service-card form-control" placeholder="Search..." value="<%= params[:search] %>" style="margin-top: 5px;">
  </div>
  <div class="col-md-4 text-right">
    <%= link_to invoice_service_cards_upload_excel_path, method: :get, data: {remote: true, toggle: 'modal', target: "#invoice-modal"}, class: "btn btn-danger navbar-btn" do %><i class="fa fa-upload"></i>&nbsp;&nbsp;Upload Excel<% end %>
    <% if Ward.where(facility_id: current_facility.id).count > 0 %>
      <%= link_to invoice_service_cards_bed_service_path, method: :get, data: {remote: true}, class: "btn btn-primary navbar-btn" do %><i class="fa fa-plus"></i>&nbsp;&nbsp;Add Room Services<% end %>
    <% end %>
    <%= link_to new_invoice_service_card_path, class: "btn btn-primary navbar-btn", data: {remote: true} do %><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New Service<% end %>
  </div>
</div>
<div id="new-service-row" class="row">
</div>
<div id='show-services-items-details'>
  <%= render partial: '/invoice_service_cards/view.html.erb' %>
</div>

<style type="text/css">
  #new-service-row {
    margin-top: 10px;
  }

  .error-placement {
    line-height: 2;
  }

  .invoice-card-btn {
    margin-top: 5px;
  }

  .services-name {
    margin-left: 10px;
  }

  .items-row {
    margin: 10px 30px;
    padding: 5px 0px;
  }

  .all-items-row {
    padding: 0px 30px;
  }
</style>